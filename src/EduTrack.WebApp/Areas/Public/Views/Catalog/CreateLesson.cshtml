@model EduTrack.Application.Features.Courses.Commands.CreateLessonCommand
@{
    ViewData["Title"] = "ایجاد درس جدید";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">ایجاد درس جدید</h3>
                </div>
                <div class="card-body">
                    <form asp-action="CreateLesson" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <input asp-for="ModuleId" type="hidden" />
                        
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">عنوان درس *</label>
                            <input asp-for="Title" class="form-control" placeholder="عنوان درس را وارد کنید" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label">محتوای درس</label>
                            <textarea asp-for="Content" class="form-control" rows="8" placeholder="محتوای درس را وارد کنید"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="VideoUrl" class="form-label">آدرس ویدیو</label>
                            <input asp-for="VideoUrl" class="form-control" placeholder="آدرس ویدیو (اختیاری)" />
                            <span asp-validation-for="VideoUrl" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DurationMinutes" class="form-label">مدت زمان (دقیقه) *</label>
                                    <input asp-for="DurationMinutes" type="number" class="form-control" min="1" />
                                    <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Order" class="form-label">ترتیب نمایش</label>
                                    <input asp-for="Order" type="number" class="form-control" min="0" value="0" />
                                    <span asp-validation-for="Order" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Lessons" asp-route-moduleId="@Model.ModuleId" class="btn btn-secondary">بازگشت</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> ایجاد درس
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
