@{
    ViewData["Title"] = "جزئیات کلاس";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="page-header">
                <h1 class="page-title">جزئیات کلاس</h1>
                <p class="page-description">اطلاعات کامل کلاس</p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
