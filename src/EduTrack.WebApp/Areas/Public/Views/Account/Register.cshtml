@model EduTrack.WebApp.Areas.Public.Controllers.RegisterViewModel
@{
    ViewData["Title"] = "ثبت نام";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EduTrack</title>
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <link rel="manifest" href="~/manifest.webmanifest" />
    <meta name="theme-color" content="#6366f1" />
    <meta name="description" content="EduTrack - سیستم مدیریت یادگیری آنلاین" />
</head>
<body>
    <div class="register-layout">
        <!-- Left Side - Site Introduction -->
        <div class="intro-section">
            <div class="intro-content">
                <div class="intro-header">
                    <div class="logo">
                        <i class="fas fa-graduation-cap"></i>
                        <h1>EduTrack</h1>
                    </div>
                    <h2>به خانواده EduTrack بپیوندید</h2>
                    <p>پلتفرم جامع آموزش آنلاین که یادگیری را برای همه آسان و لذت‌بخش می‌کند</p>
                </div>
                
                <div class="features">
                    <div class="feature">
                        <i class="fas fa-users"></i>
                        <div>
                            <h3>جامعه بزرگ</h3>
                            <p>هزاران دانش‌آموز و استاد در سراسر کشور</p>
                        </div>
                    </div>
                    <div class="feature">
                        <i class="fas fa-certificate"></i>
                        <div>
                            <h3>گواهی معتبر</h3>
                            <p>دریافت گواهی رسمی پس از اتمام دوره‌ها</p>
                        </div>
                    </div>
                    <div class="feature">
                        <i class="fas fa-headset"></i>
                        <div>
                            <h3>پشتیبانی ۲۴/۷</h3>
                            <p>تیم پشتیبانی حرفه‌ای در تمام ساعات</p>
                        </div>
                    </div>
                    <div class="feature">
                        <i class="fas fa-rocket"></i>
                        <div>
                            <h3>یادگیری سریع</h3>
                            <p>روش‌های نوین آموزش با بهترین کیفیت</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Side - Register Form -->
        <div class="register-section">
            <div class="register-container">
                    <div class="register-card">
                        <div class="register-header">
                        <h2>ثبت نام</h2>
                        <p>حساب کاربری جدید خود را ایجاد کنید</p>
                        </div>

                        <form asp-action="Register" method="post" class="register-form">
                            <input type="hidden" asp-for="Role" />
                        @Html.AntiForgeryToken()
                        
                        <!-- Error Display -->
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="error-notification">
                                <i class="fas fa-exclamation-triangle"></i>
                                <div class="error-content">
                                    <h4>خطا در ثبت نام</h4>
                                    <ul>
                                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                        {
                                            <li>@error.ErrorMessage</li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        }

                            <!-- Role Selection -->
                        <div class="role-selection">
                            <h3>نوع حساب کاربری</h3>
                                <div class="role-options">
                                    <div class="role-option @(Model.Role == "Student" ? "active" : "")" data-role="Student">
                                            <i class="fas fa-user-graduate"></i>
                                    <div>
                                        <h4>دانشجو</h4>
                                        <p>دسترسی به دوره‌ها و آزمون‌ها</p>
                                    </div>
                                    </div>
                                    <div class="role-option @(Model.Role == "Teacher" ? "active" : "")" data-role="Teacher">
                                            <i class="fas fa-chalkboard-teacher"></i>
                                    <div>
                                        <h4>استاد</h4>
                                        <p>مدیریت کلاس‌ها و ایجاد محتوا</p>
                                    </div>
                                    </div>
                                </div>
                            </div>

                                    <div class="form-group">
                            <div class="input-group">
                                <i class="fas fa-user"></i>
                                <input asp-for="FirstName" placeholder="نام" />
                                    </div>
                            <span asp-validation-for="FirstName" class="error-message"></span>
                                </div>

                                    <div class="form-group">
                            <div class="input-group">
                                <i class="fas fa-user"></i>
                                <input asp-for="LastName" placeholder="نام خانوادگی" />
                                    </div>
                            <span asp-validation-for="LastName" class="error-message"></span>
                            </div>

                            <div class="form-group">
                            <div class="input-group">
                                <i class="fas fa-at"></i>
                                <input asp-for="Username" placeholder="نام کاربری" />
                            </div>
                            <span asp-validation-for="Username" class="error-message"></span>
                            </div>

                            <div class="form-group" id="email-group" style="@(Model.Role == "Student" ? "display: none;" : "")">
                            <div class="input-group">
                                <i class="fas fa-envelope"></i>
                                <input asp-for="Email" placeholder="ایمیل" />
                            </div>
                            <span asp-validation-for="Email" class="error-message"></span>
                            </div>

                                    <div class="form-group">
                            <div class="input-group">
                                <i class="fas fa-lock"></i>
                                <input asp-for="Password" type="password" placeholder="رمز عبور" id="passwordInput" />
                                <button type="button" class="password-toggle" onclick="togglePassword('passwordInput')">
                                    <i class="fas fa-eye" id="passwordToggleIcon"></i>
                                            </button>
                                        </div>
                            <span asp-validation-for="Password" class="error-message"></span>
                            </div>

                        <div class="form-group">
                            <div class="input-group">
                                <i class="fas fa-lock"></i>
                                <input asp-for="ConfirmPassword" type="password" placeholder="تکرار رمز عبور" id="confirmPasswordInput" />
                                <button type="button" class="password-toggle" onclick="togglePassword('confirmPasswordInput')">
                                    <i class="fas fa-eye" id="confirmPasswordToggleIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="error-message"></span>
                            </div>

                        <button type="submit" class="register-button" id="registerButton">
                            <span class="button-text">ثبت نام</span>
                            <div class="button-loader">
                                <div class="spinner"></div>
                            </div>
                        </button>

                            <div class="register-footer">
                            <p>قبلاً ثبت نام کرده‌اید؟ <a asp-controller="Account" asp-action="Login">وارد شوید</a></p>
                            </div>
                        </form>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function() {
            // Role selection functionality
            $('.role-option').on('click', function() {
                const role = $(this).data('role');
                
                // Update active state
                $('.role-option').removeClass('active');
                $(this).addClass('active');
                
                // Update hidden field
                $('#Role').val(role);
                
                // Show/hide email field based on role
                const emailGroup = $('#email-group');
                if (role === 'Teacher') {
                    emailGroup.slideDown(300);
                    $('#Email').prop('required', true);
                } else {
                    emailGroup.slideUp(300);
                    $('#Email').prop('required', false);
                }
            });

            // Form submission handling
            $('form').on('submit', function(e) {
                const $button = $('#registerButton');
                const $buttonText = $button.find('.button-text');
                const $buttonLoader = $button.find('.button-loader');
                
                $buttonText.hide();
                $buttonLoader.show();
                $button.prop('disabled', true);
                
                if (!$(this).valid()) {
                    $buttonText.show();
                    $buttonLoader.hide();
                    $button.prop('disabled', false);
                    e.preventDefault();
                    return false;
                }
            });

            // Initialize email field visibility based on current role
            const currentRole = $('#Role').val();
            if (currentRole === 'Teacher') {
                $('#email-group').show();
                $('#Email').prop('required', true);
            }
        });

        function togglePassword(inputId) {
            const passwordInput = document.getElementById(inputId);
            const toggleIcon = document.getElementById(inputId + 'ToggleIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }
    </script>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            height: 100vh;
            overflow: hidden;
        }

        .register-layout {
            display: flex;
            height: 100vh;
            width: 100vw;
            flex-direction: row-reverse;
        }

        /* Left Side - Introduction */
        .intro-section {
            flex: 1;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 60px;
            color: white;
            position: relative;
            overflow: hidden;
        }

        .intro-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="dots" width="20" height="20" patternUnits="userSpaceOnUse"><circle cx="10" cy="10" r="1" fill="rgba(255,255,255,0.1)"/></pattern></defs><rect width="100" height="100" fill="url(%23dots)"/></svg>');
            opacity: 0.3;
        }

        .intro-content {
            position: relative;
            z-index: 2;
            max-width: 500px;
        }

        .intro-header {
            margin-bottom: 50px;
        }

        .intro-header .logo {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 20px;
        }

        .intro-header .logo i {
            font-size: 40px;
            color: rgba(255, 255, 255, 0.9);
        }

        .intro-header .logo h1 {
            font-size: 36px;
            font-weight: 800;
            margin: 0;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        }

        .intro-header h2 {
            font-size: 28px;
            font-weight: 600;
            margin-bottom: 15px;
            color: rgba(255, 255, 255, 0.95);
        }

        .intro-header p {
            font-size: 16px;
            line-height: 1.6;
            color: rgba(255, 255, 255, 0.8);
        }

        .features {
            display: grid;
            gap: 25px;
        }

        .feature {
            display: flex;
            align-items: flex-start;
            gap: 15px;
            padding: 20px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: all 0.3s ease;
        }

        .feature:hover {
            background: rgba(255, 255, 255, 0.15);
            transform: translateY(-2px);
        }

        .feature i {
            font-size: 24px;
            color: rgba(255, 255, 255, 0.9);
            margin-top: 5px;
        }

        .feature h3 {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 5px;
            color: white;
        }

        .feature p {
            font-size: 14px;
            color: rgba(255, 255, 255, 0.8);
            line-height: 1.5;
        }

        /* Right Side - Register Form */
        .register-section {
            flex: 1;
            background: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px;
            overflow-y: auto;
        }

        .register-container {
            width: 100%;
            max-width: 450px;
        }

        .register-card {
            background: white;
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(0, 0, 0, 0.05);
        }

        .register-header {
            text-align: center;
            margin-bottom: 25px;
        }

        .register-header h2 {
            font-size: 22px;
            font-weight: 700;
            color: #333;
            margin-bottom: 6px;
        }

        .register-header p {
            color: #666;
            font-size: 13px;
        }

        .role-selection {
            margin-bottom: 25px;
        }

        .role-selection h3 {
            text-align: center;
            color: #666;
            font-size: 14px;
            font-weight: 600;
            margin-bottom: 15px;
        }

        .role-options {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 8px;
        }

        .role-option {
            background: #f8f9fa;
            border: 1px solid #e9ecef;
            border-radius: 8px;
            padding: 10px;
            text-align: center;
            cursor: pointer;
            transition: all 0.2s ease;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 4px;
        }

        .role-option:hover {
            border-color: #667eea;
            background: #fff;
        }

        .role-option.active {
            background: #667eea;
            border-color: #667eea;
            color: white;
        }

        .role-option i {
            font-size: 16px;
            color: #667eea;
        }

        .role-option.active i {
            color: white;
        }

        .role-option h4 {
            font-size: 12px;
            font-weight: 600;
            margin: 0;
            color: #333;
        }

        .role-option.active h4 {
            color: white;
        }

        .role-option p {
            font-size: 10px;
            margin: 0;
            color: #666;
            line-height: 1.2;
        }

        .role-option.active p {
            color: rgba(255, 255, 255, 0.9);
        }


        .form-group {
            margin-bottom: 18px;
        }

        .input-group {
            position: relative;
            display: flex;
            align-items: center;
            background: #f8f9fa;
            border: 2px solid #e9ecef;
            border-radius: 10px;
            padding: 0 12px;
            transition: all 0.3s ease;
        }

        .input-group:focus-within {
            border-color: #667eea;
            background: #fff;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .input-group i {
            color: #999;
            margin-left: 8px;
            font-size: 14px;
        }

        .input-group input {
            flex: 1;
            border: none;
            background: transparent;
            padding: 12px 0;
            font-size: 14px;
            outline: none;
            color: #333;
        }

        .input-group input::placeholder {
            color: #999;
        }

        .password-toggle {
            background: none;
            border: none;
            color: #999;
            cursor: pointer;
            padding: 4px;
            margin-right: 4px;
            font-size: 12px;
        }

        .password-toggle:hover {
            color: #667eea;
        }

        .error-message {
            display: block;
            color: #dc3545;
            font-size: 11px;
            margin-top: 4px;
            padding-right: 4px;
        }

        .register-button {
            width: 100%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 10px;
            padding: 12px;
            color: white;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin: 18px 0;
            position: relative;
            overflow: hidden;
        }

        .register-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
        }

        .register-button:disabled {
            opacity: 0.7;
            cursor: not-allowed;
            transform: none;
        }

        .button-text {
            display: block;
        }

        .button-loader {
            display: none;
            align-items: center;
            justify-content: center;
        }

        .spinner {
            width: 20px;
            height: 20px;
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-top: 2px solid white;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        .register-footer {
            text-align: center;
            margin-top: 18px;
            padding-top: 18px;
            border-top: 1px solid #eee;
        }

        .register-footer p {
            color: #666;
            font-size: 13px;
            margin: 0;
        }

        .register-footer a {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
        }

        .register-footer a:hover {
            text-decoration: underline;
        }

        .error-notification {
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
            border-radius: 12px;
            padding: 16px;
            margin-bottom: 20px;
            display: flex;
            align-items: flex-start;
            gap: 12px;
            box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);
            animation: slideDown 0.3s ease-out;
        }

        .error-notification i {
            color: white;
            font-size: 20px;
            margin-top: 2px;
        }

        .error-content {
            flex: 1;
        }

        .error-content h4 {
            color: white;
            font-size: 16px;
            font-weight: 600;
            margin: 0 0 8px 0;
        }

        .error-content ul {
            margin: 0;
            padding: 0;
            list-style: none;
        }

        .error-content li {
            color: rgba(255, 255, 255, 0.95);
            font-size: 14px;
            margin-bottom: 4px;
            position: relative;
            padding-right: 15px;
        }

        .error-content li:before {
            content: '•';
            position: absolute;
            right: 0;
            color: rgba(255, 255, 255, 0.8);
        }

        .error-content li:last-child {
            margin-bottom: 0;
        }

        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        @@keyframes slideDown {
            0% {
                opacity: 0;
                transform: translateY(-10px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .register-layout {
                flex-direction: column;
            }
            
            .intro-section {
                flex: 0 0 35%;
                padding: 20px 15px;
            }
            
            .intro-content {
                max-width: none;
            }
            
            .intro-header .logo h1 {
                font-size: 24px;
            }
            
            .intro-header h2 {
                font-size: 18px;
            }
            
            .features {
                gap: 10px;
            }
            
            .feature {
                padding: 12px;
            }
            
            .register-section {
                flex: 1;
                padding: 15px;
            }
            
            .register-card {
                padding: 25px 15px;
            }
            
            .role-options {
                grid-template-columns: 1fr;
                gap: 6px;
            }
        }

        @@media (max-width: 480px) {
            .intro-section {
                flex: 0 0 30%;
                padding: 15px 10px;
            }
            
            .intro-header .logo h1 {
                font-size: 20px;
            }
            
            .intro-header h2 {
                font-size: 16px;
            }
            
            .intro-header p {
                font-size: 12px;
            }
            
            .features {
                gap: 8px;
            }
            
            .feature {
                padding: 10px;
            }
            
            .feature h3 {
                font-size: 14px;
            }
            
            .feature p {
                font-size: 11px;
            }
            
            .register-section {
                padding: 10px;
            }
            
            .register-card {
                padding: 20px 10px;
            }
        }
    </style>
</body>
</html>