@model EduTrack.WebApp.Areas.Public.Controllers.LoginViewModel
@{
    ViewData["Title"] = "ورود به سیستم";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EduTrack</title>
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <link rel="manifest" href="~/manifest.webmanifest" />
    <meta name="theme-color" content="#6366f1" />
    <meta name="description" content="EduTrack - سیستم مدیریت یادگیری آنلاین" />
</head>
<body>
    <div class="login-layout">
        <!-- Left Side - Site Introduction -->
        <div class="intro-section">
            <div class="intro-content">
                <div class="intro-header">
                    <div class="logo">
                        <i class="fas fa-graduation-cap"></i>
                        <h1>EduTrack</h1>
                    </div>
                    <h2>سیستم مدیریت یادگیری هوشمند</h2>
                    <p>پلتفرم جامع آموزش آنلاین با قابلیت‌های پیشرفته مدیریت کلاس، آزمون و پیگیری پیشرفت دانش‌آموزان</p>
                </div>
                
                <div class="features">
                    <div class="feature">
                        <i class="fas fa-chalkboard-teacher"></i>
                        <div>
                            <h3>مدیریت کلاس</h3>
                            <p>ایجاد و مدیریت کلاس‌های مجازی با ابزارهای تعاملی</p>
                        </div>
                    </div>
                    <div class="feature">
                        <i class="fas fa-file-alt"></i>
                        <div>
                            <h3>آزمون‌های هوشمند</h3>
                            <p>طراحی و برگزاری آزمون‌های آنلاین با تصحیح خودکار</p>
                        </div>
                    </div>
                    <div class="feature">
                        <i class="fas fa-chart-line"></i>
                        <div>
                            <h3>گزارش‌گیری پیشرفته</h3>
                            <p>پیگیری پیشرفت و تحلیل عملکرد دانش‌آموزان</p>
                        </div>
                    </div>
                    <div class="feature">
                        <i class="fas fa-mobile-alt"></i>
                        <div>
                            <h3>دسترسی آفلاین</h3>
                            <p>امکان استفاده بدون نیاز به اینترنت مداوم</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Side - Login Form -->
        <div class="login-section">
            <div class="login-container">
                <div class="login-card">
                    <div class="login-header">
                        <h2>ورود به سیستم</h2>
                        <p>برای دسترسی به پنل کاربری خود وارد شوید</p>
                    </div>

                    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="login-form">
                        @Html.AntiForgeryToken()
                        
                        <!-- Error Display -->
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="error-notification">
                                <i class="fas fa-exclamation-triangle"></i>
                                <div class="error-content">
                                    <h4>خطا در ورود</h4>
                                    <ul>
                                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                        {
                                            <li>@error.ErrorMessage</li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        }
                        
                        <div class="form-group">
                            <div class="input-group">
                                <i class="fas fa-user"></i>
                                <input name="Email" asp-for="Email" value="admin" placeholder="نام کاربری یا ایمیل" />
                            </div>
                            <span asp-validation-for="Email" class="error-message"></span>
                        </div>
                        
                        <div class="form-group">
                            <div class="input-group">
                                <i class="fas fa-lock"></i>
                                <input name="Password" asp-for="Password" value="Passw0rd!" type="password" placeholder="رمز عبور" id="passwordInput" />
                                <button type="button" class="password-toggle" onclick="togglePassword()">
                                    <i class="fas fa-eye" id="passwordToggleIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="error-message"></span>
                        </div>
                        
                        <div class="form-options">
                            <label class="checkbox">
                                <input type="checkbox" asp-for="RememberMe" />
                                <span class="checkmark"></span>
                                مرا به خاطر بسپار
                            </label>
                        </div>
                        
                        <button type="submit" class="login-button" id="loginButton">
                            <span class="button-text">ورود به سیستم</span>
                            <div class="button-loader">
                                <div class="spinner"></div>
                            </div>
                        </button>
                        
                        <div class="login-footer">
                            <p>حساب کاربری ندارید؟ <a asp-controller="Account" asp-action="Register">ثبت نام کنید</a></p>
                        </div>
                    </form>

                    <!-- Demo Accounts -->
                    <div class="demo-section">
                        <h3>حساب‌های آزمایشی</h3>
                        <div class="demo-accounts">
                            <div class="demo-account" data-username="admin" data-password="Passw0rd!">
                                <i class="fas fa-user-shield"></i>
                                <span>مدیر</span>
                            </div>
                            <div class="demo-account" data-username="teacher" data-password="Passw0rd!">
                                <i class="fas fa-chalkboard-teacher"></i>
                                <span>استاد</span>
                            </div>
                            <div class="demo-account" data-username="student1" data-password="Passw0rd!">
                                <i class="fas fa-user-graduate"></i>
                                <span>دانشجو</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function() {
            // Form submission handling
            $('form').on('submit', function(e) {
                const $button = $('#loginButton');
                const $buttonText = $button.find('.button-text');
                const $buttonLoader = $button.find('.button-loader');
                
                $buttonText.hide();
                $buttonLoader.show();
                $button.prop('disabled', true);
                
                if (!$(this).valid()) {
                    $buttonText.show();
                    $buttonLoader.hide();
                    $button.prop('disabled', false);
                    e.preventDefault();
                    return false;
                }
            });
            
            // Demo account click handlers
            $('.demo-account').on('click', function() {
                const username = $(this).data('username');
                const password = $(this).data('password');
                
                $('input[name="Email"]').val(username);
                $('input[name="Password"]').val(password);
                
                $(this).addClass('selected');
                setTimeout(() => $(this).removeClass('selected'), 1000);
            });
        });

        function togglePassword() {
            const passwordInput = document.getElementById('passwordInput');
            const toggleIcon = document.getElementById('passwordToggleIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }
    </script>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            height: 100vh;
            overflow: hidden;
        }

        .login-layout {
            display: flex;
            height: 100vh;
            width: 100vw;
            flex-direction: row-reverse;
        }

        /* Left Side - Introduction */
        .intro-section {
            flex: 1;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 60px;
            color: white;
            position: relative;
            overflow: hidden;
        }

        .intro-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="dots" width="20" height="20" patternUnits="userSpaceOnUse"><circle cx="10" cy="10" r="1" fill="rgba(255,255,255,0.1)"/></pattern></defs><rect width="100" height="100" fill="url(%23dots)"/></svg>');
            opacity: 0.3;
        }

        .intro-content {
            position: relative;
            z-index: 2;
            max-width: 500px;
        }

        .intro-header {
            margin-bottom: 50px;
        }

        .intro-header .logo {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 20px;
        }

        .intro-header .logo i {
            font-size: 40px;
            color: rgba(255, 255, 255, 0.9);
        }

        .intro-header .logo h1 {
            font-size: 36px;
            font-weight: 800;
            margin: 0;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        }

        .intro-header h2 {
            font-size: 28px;
            font-weight: 600;
            margin-bottom: 15px;
            color: rgba(255, 255, 255, 0.95);
        }

        .intro-header p {
            font-size: 16px;
            line-height: 1.6;
            color: rgba(255, 255, 255, 0.8);
        }

        .features {
            display: grid;
            gap: 25px;
        }

        .feature {
            display: flex;
            align-items: flex-start;
            gap: 15px;
            padding: 20px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: all 0.3s ease;
        }

        .feature:hover {
            background: rgba(255, 255, 255, 0.15);
            transform: translateY(-2px);
        }

        .feature i {
            font-size: 24px;
            color: rgba(255, 255, 255, 0.9);
            margin-top: 5px;
        }

        .feature h3 {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 5px;
            color: white;
        }

        .feature p {
            font-size: 14px;
            color: rgba(255, 255, 255, 0.8);
            line-height: 1.5;
        }

        /* Right Side - Login Form */
        .login-section {
            flex: 1;
            background: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px;
        }

        .login-container {
            width: 100%;
            max-width: 400px;
        }

        .login-card {
            background: white;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(0, 0, 0, 0.05);
        }

        .login-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .login-header h2 {
            font-size: 24px;
            font-weight: 700;
            color: #333;
            margin-bottom: 8px;
        }

        .login-header p {
            color: #666;
            font-size: 14px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .input-group {
            position: relative;
            display: flex;
            align-items: center;
            background: #f8f9fa;
            border: 2px solid #e9ecef;
            border-radius: 12px;
            padding: 0 15px;
            transition: all 0.3s ease;
        }

        .input-group:focus-within {
            border-color: #667eea;
            background: #fff;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .input-group i {
            color: #999;
            margin-left: 10px;
        }

        .input-group input {
            flex: 1;
            border: none;
            background: transparent;
            padding: 15px 0;
            font-size: 16px;
            outline: none;
            color: #333;
        }

        .input-group input::placeholder {
            color: #999;
        }

        .password-toggle {
            background: none;
            border: none;
            color: #999;
            cursor: pointer;
            padding: 5px;
            margin-right: 5px;
        }

        .password-toggle:hover {
            color: #667eea;
        }

        .error-message {
            display: block;
            color: #dc3545;
            font-size: 12px;
            margin-top: 5px;
            padding-right: 5px;
        }

        .form-options {
            margin: 20px 0;
        }

        .checkbox {
            display: flex;
            align-items: center;
            cursor: pointer;
            font-size: 14px;
            color: #666;
        }

        .checkbox input {
            display: none;
        }

        .checkmark {
            width: 18px;
            height: 18px;
            border: 2px solid #ddd;
            border-radius: 4px;
            margin-left: 8px;
            position: relative;
            transition: all 0.3s ease;
        }

        .checkbox input:checked + .checkmark {
            background: #667eea;
            border-color: #667eea;
        }

        .checkbox input:checked + .checkmark::after {
            content: '✓';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white;
            font-size: 12px;
            font-weight: bold;
        }

        .login-button {
            width: 100%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 12px;
            padding: 15px;
            color: white;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin: 20px 0;
            position: relative;
            overflow: hidden;
        }

        .login-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
        }

        .login-button:disabled {
            opacity: 0.7;
            cursor: not-allowed;
            transform: none;
        }

        .button-text {
            display: block;
        }

        .button-loader {
            display: none;
            align-items: center;
            justify-content: center;
        }

        .spinner {
            width: 20px;
            height: 20px;
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-top: 2px solid white;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        .login-footer {
            text-align: center;
            margin-top: 20px;
            padding-top: 20px;
            border-top: 1px solid #eee;
        }

        .login-footer p {
            color: #666;
            font-size: 14px;
            margin: 0;
        }

        .login-footer a {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
        }

        .login-footer a:hover {
            text-decoration: underline;
        }

        .demo-section {
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid #eee;
        }

        .demo-section h3 {
            text-align: center;
            color: #666;
            font-size: 14px;
            font-weight: 600;
            margin-bottom: 15px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .demo-accounts {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 10px;
        }

        .demo-account {
            background: #f8f9fa;
            border: 2px solid #e9ecef;
            border-radius: 12px;
            padding: 15px 10px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 8px;
        }

        .demo-account:hover {
            border-color: #667eea;
            background: #fff;
            transform: translateY(-2px);
        }

        .demo-account.selected {
            background: #667eea;
            border-color: #667eea;
            color: white;
        }

        .demo-account i {
            font-size: 20px;
            color: #667eea;
        }

        .demo-account.selected i {
            color: white;
        }

        .demo-account span {
            font-size: 12px;
            font-weight: 600;
            color: #666;
        }

        .demo-account.selected span {
            color: white;
        }

        .alert-danger {
            background: #f8d7da;
            border: 1px solid #f5c6cb;
            color: #721c24;
            border-radius: 8px;
            padding: 12px;
            margin-bottom: 20px;
            font-size: 14px;
        }

        .error-notification {
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
            border-radius: 12px;
            padding: 16px;
            margin-bottom: 20px;
            display: flex;
            align-items: flex-start;
            gap: 12px;
            box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);
            animation: slideDown 0.3s ease-out;
        }

        .error-notification i {
            color: white;
            font-size: 20px;
            margin-top: 2px;
        }

        .error-content {
            flex: 1;
        }

        .error-content h4 {
            color: white;
            font-size: 16px;
            font-weight: 600;
            margin: 0 0 8px 0;
        }

        .error-content ul {
            margin: 0;
            padding: 0;
            list-style: none;
        }

        .error-content li {
            color: rgba(255, 255, 255, 0.95);
            font-size: 14px;
            margin-bottom: 4px;
            position: relative;
            padding-right: 15px;
        }

        .error-content li:before {
            content: '•';
            position: absolute;
            right: 0;
            color: rgba(255, 255, 255, 0.8);
        }

        .error-content li:last-child {
            margin-bottom: 0;
        }

        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        @@keyframes slideDown {
            0% {
                opacity: 0;
                transform: translateY(-10px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .login-layout {
                flex-direction: column;
            }
            
            .intro-section {
                flex: 0 0 40%;
                padding: 30px 20px;
            }
            
            .intro-content {
                max-width: none;
            }
            
            .intro-header .logo h1 {
                font-size: 28px;
            }
            
            .intro-header h2 {
                font-size: 22px;
            }
            
            .features {
                gap: 15px;
            }
            
            .feature {
                padding: 15px;
            }
            
            .login-section {
                flex: 1;
                padding: 20px;
            }
            
            .login-card {
                padding: 30px 20px;
            }
        }

        @@media (max-width: 480px) {
            .intro-section {
                flex: 0 0 35%;
                padding: 20px 15px;
            }
            
            .intro-header .logo h1 {
                font-size: 24px;
            }
            
            .intro-header h2 {
                font-size: 18px;
            }
            
            .intro-header p {
                font-size: 14px;
            }
            
            .features {
                gap: 10px;
            }
            
            .feature {
                padding: 12px;
            }
            
            .feature h3 {
                font-size: 16px;
            }
            
            .feature p {
                font-size: 12px;
            }
            
            .login-section {
                padding: 15px;
            }
            
            .login-card {
                padding: 25px 15px;
            }
            
            .demo-accounts {
                grid-template-columns: 1fr;
                gap: 8px;
            }
        }
    </style>
</body>
</html>