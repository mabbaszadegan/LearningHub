@model EduTrack.Application.Common.Models.DashboardViewModel
@{
    ViewData["Title"] = "داشبورد";
}

<div class="container-fluid">
    <!-- Compact Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-lg-3 col-md-6">
            <div class="stats-card-minimal">
                <div class="stats-icon-minimal success">
                    <i class="fas fa-book"></i>
                </div>
                <div class="stats-info">
                    <div class="stats-number-minimal">@Model.TotalCourses</div>
                    <div class="stats-label-minimal">دوره فعال</div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="stats-card-minimal">
                <div class="stats-icon-minimal primary">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stats-info">
                    <div class="stats-number-minimal">125</div>
                    <div class="stats-label-minimal">دانش‌آموز</div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="stats-card-minimal">
                <div class="stats-icon-minimal warning">
                    <i class="fas fa-clipboard-list"></i>
                </div>
                <div class="stats-info">
                    <div class="stats-number-minimal">@Model.RecentExams.TotalCount</div>
                    <div class="stats-label-minimal">آزمون فعال</div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="stats-card-minimal">
                <div class="stats-icon-minimal info">
                    <i class="fas fa-chart-line"></i>
                </div>
                <div class="stats-info">
                    <div class="stats-number-minimal">85%</div>
                    <div class="stats-label-minimal">میانگین نمرات</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Dashboard Content -->
    <div class="row g-3">
        <!-- Left Column - Main Content -->
        <div class="col-lg-8">
            <!-- Compact Quick Actions -->
            <div class="panel-minimal mb-3">
                <div class="panel-header-minimal">
                    <h3 class="panel-title-minimal">ابزارهای سریع</h3>
                </div>
                <div class="panel-body-minimal">
                    <div class="row g-2">
                        <div class="col-md-3 col-sm-6">
                            <a asp-controller="Courses" asp-action="Create" class="quick-action-minimal">
                                <i class="fas fa-plus"></i>
                                <span>دوره جدید</span>
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <a asp-controller="Exam" asp-action="Create" class="quick-action-minimal">
                                <i class="fas fa-clipboard-list"></i>
                                <span>آزمون جدید</span>
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <a asp-controller="Classes" asp-action="Create" class="quick-action-minimal">
                                <i class="fas fa-users"></i>
                                <span>کلاس جدید</span>
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <a asp-controller="Progress" asp-action="Index" class="quick-action-minimal">
                                <i class="fas fa-chart-bar"></i>
                                <span>گزارش‌ها</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Courses List - Compact -->
            <div class="panel-minimal mb-3">
                <div class="panel-header-minimal">
                    <h3 class="panel-title-minimal">دوره‌های من</h3>
                    <a asp-controller="Courses" asp-action="Index" class="btn-link-minimal">همه <i class="fas fa-chevron-left"></i></a>
                </div>
                <div class="panel-body-minimal">
                    @if (Model.Courses.Items.Any())
                    {
                        <div class="row g-2">
                            @foreach (var course in Model.Courses.Items.Take(4))
                            {
                                <div class="col-md-6">
                                    <div class="course-card-minimal">
                                        <div class="course-card-body-minimal">
                                            <h5 class="course-title-minimal">@course.Title</h5>
                                            <p class="course-desc-minimal">@course.Description</p>
                                            <div class="course-meta-minimal">
                                                <span><i class="fas fa-layer-group"></i> @course.ModuleCount</span>
                                                <span><i class="fas fa-book-open"></i> @course.LessonCount</span>
                                                <a asp-controller="Courses" asp-action="Edit" asp-route-id="@course.Id" class="course-edit-btn">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state-minimal">
                            <i class="fas fa-book"></i>
                            <p>هنوز دوره‌ای ایجاد نشده</p>
                            <a asp-controller="Courses" asp-action="Create" class="btn-sm-minimal">ایجاد دوره</a>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <!-- Right Sidebar - Compact -->
        <div class="col-lg-4">
            <!-- Recent Activities - Minimal -->
            <div class="panel-minimal mb-3">
                <div class="panel-header-minimal">
                    <h3 class="panel-title-minimal">فعالیت‌های اخیر</h3>
                </div>
                <div class="panel-body-minimal">
                    <div class="activity-list-minimal">
                        <div class="activity-item-minimal">
                            <div class="activity-icon-minimal success">
                                <i class="fas fa-user-plus"></i>
                            </div>
                            <div class="activity-content-minimal">
                                <div class="activity-title-minimal">دانش‌آموز جدید</div>
                                <div class="activity-desc-minimal">علی احمدی به کلاس پیوست</div>
                            </div>
                        </div>
                        <div class="activity-item-minimal">
                            <div class="activity-icon-minimal primary">
                                <i class="fas fa-clipboard-check"></i>
                            </div>
                            <div class="activity-content-minimal">
                                <div class="activity-title-minimal">آزمون تکمیل شد</div>
                                <div class="activity-desc-minimal">آزمون مبحث 3 ریاضی</div>
                            </div>
                        </div>
                        <div class="activity-item-minimal">
                            <div class="activity-icon-minimal warning">
                                <i class="fas fa-exclamation-triangle"></i>
                            </div>
                            <div class="activity-content-minimal">
                                <div class="activity-title-minimal">نیاز به بررسی</div>
                                <div class="activity-desc-minimal">نمرات پایین آزمون فیزیک</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Minimal Modern Styles - All sizes reduced */
        

        .page-title {
            font-size: 1.25rem;
            font-weight: 600;
            margin: 0;
            color: #1a1a1a;
        }

        .page-subtitle {
            font-size: 0.813rem;
            color: #6c757d;
        }

        .header-time {
            font-size: 0.813rem;
            color: #6c757d;
        }

        .stats-card-minimal {
            background: white;
            border-radius: 8px;
            padding: 0.875rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            border: 1px solid #e9ecef;
            transition: all 0.2s;
        }

        .stats-card-minimal:hover {
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            transform: translateY(-1px);
        }

        .stats-icon-minimal {
            width: 32px;
            height: 32px;
            border-radius: 6px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.875rem;
            color: white;
        }

        .stats-icon-minimal.success { background: #28a745; }
        .stats-icon-minimal.primary { background: #007bff; }
        .stats-icon-minimal.warning { background: #ffc107; }
        .stats-icon-minimal.info { background: #17a2b8; }

        .stats-number-minimal {
            font-size: 1.25rem;
            font-weight: 700;
            color: #1a1a1a;
        }

        .stats-label-minimal {
            font-size: 0.75rem;
            color: #6c757d;
        }

        .panel-minimal {
            background: white;
            border-radius: 8px;
            border: 1px solid #e9ecef;
        }

        .panel-header-minimal {
            padding: 0.875rem 1rem;
            border-bottom: 1px solid #f0f0f0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .panel-title-minimal {
            font-size: 0.875rem;
            font-weight: 600;
            margin: 0;
            color: #1a1a1a;
        }

        .btn-link-minimal {
            font-size: 0.75rem;
            color: #667eea;
            text-decoration: none;
        }

        .btn-link-minimal:hover {
            color: #5a6fd8;
        }

        .panel-body-minimal {
            padding: 1rem;
        }

        .quick-action-minimal {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 0.875rem;
            background: #f8f9fa;
            border-radius: 8px;
            text-decoration: none;
            color: #495057;
            transition: all 0.2s;
            gap: 0.5rem;
        }

        .quick-action-minimal i {
            font-size: 1rem;
        }

        .quick-action-minimal span {
            font-size: 0.75rem;
            font-weight: 500;
        }

        .quick-action-minimal:hover {
            background: #667eea;
            color: white;
            transform: translateY(-2px);
        }

        .course-card-minimal {
            background: white;
            border: 1px solid #e9ecef;
            border-radius: 8px;
            padding: 0.875rem;
            transition: all 0.2s;
        }

        .course-card-minimal:hover {
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            border-color: #667eea;
        }

        .course-title-minimal {
            font-size: 0.875rem;
            font-weight: 600;
            margin: 0 0 0.5rem 0;
            color: #1a1a1a;
        }

        .course-desc-minimal {
            font-size: 0.75rem;
            color: #6c757d;
            margin: 0 0 0.75rem 0;
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
        }

        .course-meta-minimal {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-size: 0.7rem;
            color: #6c757d;
        }

        .course-meta-minimal i {
            font-size: 0.7rem;
        }

        .course-edit-btn {
            margin-right: auto;
            color: #667eea;
            text-decoration: none;
        }

        .course-edit-btn:hover {
            color: #5a6fd8;
        }

        .activity-list-minimal {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
        }

        .activity-item-minimal {
            display: flex;
            gap: 0.75rem;
            align-items: flex-start;
        }

        .activity-icon-minimal {
            width: 28px;
            height: 28px;
            border-radius: 6px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.75rem;
            color: white;
            flex-shrink: 0;
        }

        .activity-icon-minimal.success { background: #28a745; }
        .activity-icon-minimal.primary { background: #007bff; }
        .activity-icon-minimal.warning { background: #ffc107; }

        .activity-title-minimal {
            font-size: 0.813rem;
            font-weight: 600;
            color: #1a1a1a;
            margin-bottom: 0.25rem;
        }

        .activity-desc-minimal {
            font-size: 0.75rem;
            color: #6c757d;
        }

        .empty-state-minimal {
            text-align: center;
            padding: 2rem 1rem;
        }

        .empty-state-minimal i {
            font-size: 2rem;
            color: #dee2e6;
            margin-bottom: 1rem;
        }

        .empty-state-minimal p {
            font-size: 0.813rem;
            color: #6c757d;
            margin-bottom: 1rem;
        }

        .btn-sm-minimal {
            padding: 0.5rem 1rem;
            font-size: 0.75rem;
            border-radius: 6px;
            background: #667eea;
            color: white;
            text-decoration: none;
            display: inline-block;
        }

        .btn-sm-minimal:hover {
            background: #5a6fd8;
            color: white;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Update time
            function updateTime() {
                const now = new Date();
                const timeString = now.toLocaleTimeString('fa-IR', { 
                    hour: '2-digit', 
                    minute: '2-digit'
                });
                $('#currentTime').text(timeString);
            }
            
            updateTime();
            setInterval(updateTime, 1000);
        });
    </script>
}
