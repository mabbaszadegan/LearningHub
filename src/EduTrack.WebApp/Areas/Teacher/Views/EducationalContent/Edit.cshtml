@model EduTrack.Application.Features.EducationalContent.Commands.CreateEducationalContentCommand
@{
    ViewData["Title"] = "ویرایش محتوای آموزشی";
}

<!-- Minimal Page Header -->
<div class="page-header-minimal">
    <div class="header-content-minimal">
        <div>
            <h1 class="page-title-minimal">ویرایش محتوای آموزشی</h1>
            <p class="page-subtitle-minimal">@ViewBag.SubChapterTitle</p>
        </div>
        <div class="header-actions-minimal">
            <a asp-action="Index" asp-route-subChapterId="@ViewBag.SubChapterId" class="btn-minimal btn-secondary-minimal">
                <i class="fas fa-arrow-right"></i>
                <span>بازگشت</span>
            </a>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card-minimal">
            <div class="card-body-minimal">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <input asp-for="SubChapterId" type="hidden" />
                    <input asp-for="Order" type="hidden" />
                    <input name="subChapterId" value="@ViewBag.SubChapterId" type="hidden" />
                    <input name="id" value="@(ViewBag.ContentId ?? 0)" type="hidden" />
                    
                    <div class="form-group-minimal">
                        <label class="form-label-minimal">عنوان محتوا</label>
                        <input asp-for="Title" class="form-control-minimal" placeholder="عنوان محتوا را وارد کنید" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group-minimal">
                        <label class="form-label-minimal">توضیحات (اختیاری)</label>
                        <textarea asp-for="Description" class="form-control-minimal" rows="3" 
                                  placeholder="توضیحات کوتاه در مورد این محتوا"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group-minimal">
                        <label class="form-label-minimal">نوع محتوا</label>
                        <select asp-for="Type" class="form-control-minimal" id="contentType">
                            <option value="">نوع محتوا را انتخاب کنید</option>
                            <option value="Text">متن</option>
                            <option value="Image">تصویر</option>
                            <option value="Video">ویدیو</option>
                            <option value="Audio">صدا</option>
                            <option value="PDF">PDF</option>
                            <option value="File">فایل</option>
                            <option value="ExternalUrl">لینک خارجی</option>
                        </select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    
                    <!-- Text Content -->
                    <div class="form-group-minimal" id="textContentGroup" style="display: none;">
                        <label class="form-label-minimal">محتوای متنی</label>
                        <textarea asp-for="TextContent" class="form-control-minimal" rows="8" 
                                  placeholder="محتوای متنی خود را اینجا بنویسید..."></textarea>
                        <span asp-validation-for="TextContent" class="text-danger"></span>
                    </div>
                    
                    <!-- File Upload -->
                    <div class="form-group-minimal" id="fileUploadGroup" style="display: none;">
                        <label class="form-label-minimal">فایل جدید (اختیاری)</label>
                        <input asp-for="File" type="file" class="form-control-minimal" />
                        <span asp-validation-for="File" class="text-danger"></span>
                        <small class="form-text text-muted">
                            فرمت‌های مجاز: JPG, PNG, GIF, MP4, AVI, MP3, WAV, PDF, DOC, DOCX
                        </small>
                        @if (ViewBag.ExistingFile != null)
                        {
                            <div class="existing-file-info mt-2">
                                <small class="text-muted">
                                    <i class="fas fa-file me-1"></i>
                                    فایل فعلی: @ViewBag.ExistingFile.OriginalFileName
                                </small>
                            </div>
                        }
                    </div>
                    
                    <!-- External URL -->
                    <div class="form-group-minimal" id="externalUrlGroup" style="display: none;">
                        <label class="form-label-minimal">لینک خارجی</label>
                        <input asp-for="ExternalUrl" class="form-control-minimal" 
                               placeholder="https://example.com" />
                        <span asp-validation-for="ExternalUrl" class="text-danger"></span>
                        <small class="form-text text-muted">
                            لینک کامل را وارد کنید (مثال: https://www.youtube.com/watch?v=...)
                        </small>
                    </div>
                    
                    <div class="form-group-minimal">
                        <label class="toggle-label-minimal">
                            <input asp-for="IsActive" type="checkbox" class="toggle-input-minimal" />
                            <span class="toggle-slider-minimal"></span>
                            <span class="toggle-text-minimal">محتوا فعال است</span>
                        </label>
                    </div>
                    
                    <div class="form-actions-minimal">
                        <a asp-action="Index" asp-route-subChapterId="@ViewBag.SubChapterId" class="btn-minimal btn-secondary-minimal">
                            <i class="fas fa-times"></i>
                            <span>انصراف</span>
                        </a>
                        <button type="submit" class="btn-minimal btn-primary-minimal">
                            <i class="fas fa-save"></i>
                            <span>ذخیره تغییرات</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    /* Page Header Minimal */
    .page-header-minimal {
        background: white;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        border: 1px solid #e9ecef;
    }

    .header-content-minimal {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
    }

    .page-title-minimal {
        font-size: 1.5rem;
        font-weight: 600;
        color: #2d3748;
        margin: 0;
    }

    .page-subtitle-minimal {
        font-size: 0.875rem;
        color: #718096;
        margin: 0.25rem 0 0 0;
    }

    .header-actions-minimal {
        display: flex;
        gap: 0.75rem;
    }

    /* Card Minimal */
    .card-minimal {
        background: white;
        border-radius: 8px;
        border: 1px solid #e9ecef;
        overflow: hidden;
    }

    .card-body-minimal {
        padding: 2rem;
    }

    /* Form Minimal */
    .form-group-minimal {
        margin-bottom: 1.25rem;
    }

    .form-label-minimal {
        display: block;
        font-size: 0.875rem;
        font-weight: 500;
        color: #4a5568;
        margin-bottom: 0.5rem;
    }

    .form-control-minimal {
        width: 100%;
        padding: 0.625rem 0.875rem;
        font-size: 0.875rem;
        border: 1px solid #e2e8f0;
        border-radius: 6px;
        transition: all 0.2s;
    }

    .form-control-minimal:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .form-text {
        font-size: 0.75rem;
        color: #6c757d;
        margin-top: 0.25rem;
    }

    .existing-file-info {
        padding: 0.5rem;
        background: #f8f9fa;
        border-radius: 4px;
        border: 1px solid #e9ecef;
    }

    /* Toggle Switch Minimal */
    .toggle-label-minimal {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        cursor: pointer;
    }

    .toggle-input-minimal {
        display: none;
    }

    .toggle-slider-minimal {
        position: relative;
        width: 44px;
        height: 24px;
        background: #cbd5e0;
        border-radius: 12px;
        transition: all 0.2s;
    }

    .toggle-slider-minimal:before {
        content: '';
        position: absolute;
        width: 20px;
        height: 20px;
        background: white;
        border-radius: 50%;
        top: 2px;
        left: 2px;
        transition: all 0.2s;
    }

    .toggle-input-minimal:checked + .toggle-slider-minimal {
        background: #667eea;
    }

    .toggle-input-minimal:checked + .toggle-slider-minimal:before {
        transform: translateX(20px);
    }

    .toggle-text-minimal {
        font-size: 0.875rem;
        font-weight: 500;
        color: #4a5568;
    }

    /* Form Actions */
    .form-actions-minimal {
        display: flex;
        justify-content: flex-end;
        gap: 0.75rem;
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid #e9ecef;
    }

    /* Buttons Minimal */
    .btn-minimal {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.625rem 1.25rem;
        font-size: 0.875rem;
        font-weight: 500;
        border-radius: 6px;
        border: none;
        cursor: pointer;
        transition: all 0.2s;
        text-decoration: none;
    }

    .btn-primary-minimal {
        background: #667eea;
        color: white;
    }

    .btn-primary-minimal:hover {
        background: #5568d3;
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }

    .btn-secondary-minimal {
        background: white;
        color: #718096;
        border: 1px solid #e2e8f0;
    }

    .btn-secondary-minimal:hover {
        background: #f7fafc;
        color: #2d3748;
        border-color: #cbd5e0;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Handle content type change
            $('#contentType').on('change', function() {
                const contentType = $(this).val();
                
                // Hide all groups
                $('#textContentGroup, #fileUploadGroup, #externalUrlGroup').hide();
                
                // Show relevant group based on type
                switch(contentType) {
                    case 'Text':
                        $('#textContentGroup').show();
                        break;
                    case 'Image':
                    case 'Video':
                    case 'Audio':
                    case 'PDF':
                    case 'File':
                        $('#fileUploadGroup').show();
                        break;
                    case 'ExternalUrl':
                        $('#externalUrlGroup').show();
                        break;
                }
            });
            
            // Trigger change on page load if type is already selected
            $('#contentType').trigger('change');
            
            // Handle form submission to prevent button staying in loading state
            $('form').on('submit', function() {
                const $submitBtn = $(this).find('button[type="submit"]');
                const $form = $(this);
                
                // Add loading state
                $submitBtn.prop('disabled', true);
                $submitBtn.html('<i class="fas fa-spinner fa-spin"></i><span>در حال ذخیره...</span>');
                
                // Remove loading state after a delay (in case of validation errors)
                setTimeout(function() {
                    if ($form.find('.text-danger').length > 0) {
                        $submitBtn.prop('disabled', false);
                        $submitBtn.html('<i class="fas fa-save"></i><span>ذخیره تغییرات</span>');
                    }
                }, 100);
            });
        });
    </script>
}