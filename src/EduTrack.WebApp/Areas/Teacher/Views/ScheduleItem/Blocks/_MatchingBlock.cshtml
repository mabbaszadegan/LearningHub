@model dynamic

<div class="content-block-template question-type-block" data-type="matching">
    <div class="block-header">
        <div class="block-type">
            <i class="fas fa-link"></i>
            <span>بلاک تطبیقی</span>
        </div>
        @await Html.PartialAsync("_BlockActions", new ViewDataDictionary(ViewData) { { "IsQuestionBlock", "false" } })
    </div>
    <div class="block-content">
        <div class="question-settings">
            <div class="settings-grid">
                <div class="setting-item">
                    <label>امتیاز:</label>
                    <select class="form-select-sm" data-setting="points">
                        @for (int i = 1; i <= 20; i++)
                        {
                            <option value="@i" selected="@(i == 1)">@i</option>
                        }
                    </select>
                </div>
                <div class="setting-item">
                    <label>
                        <input type="checkbox" data-setting="isRequired" checked>
                        اجباری
                    </label>
                </div>
            </div>
        </div>

        <div class="matching-container">
            <div class="matching-header">
                <span>آیتم‌های تطبیق</span>
                <button type="button" class="btn-teacher btn-primary btn-sm" data-action="add-matching-item">
                    <i class="fas fa-plus"></i>
                    افزودن جفت
                </button>
            </div>
            <div class="matching-items-list" data-role="matching-items"></div>
        </div>
    </div>
</div>
