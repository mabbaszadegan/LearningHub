@model dynamic

<div class="content-block-template question-type-block" data-type="ordering">
    <div class="block-header">
        <div class="block-type">
            <i class="fas fa-sort"></i>
            <span>بلاک مرتب‌سازی</span>
        </div>
        @await Html.PartialAsync("_BlockActions", new ViewDataDictionary(ViewData) { { "IsQuestionBlock", "false" } })
    </div>
    <div class="block-content">
        <div class="question-settings">
            <div class="settings-grid">
                <div class="setting-item">
                    <label>امتیاز:</label>
                    <select class="form-select-sm" data-setting="points">
                        @for (int i = 1; i <= 20; i++)
                        {
                            <option value="@i" selected="@(i == 1)">@i</option>
                        }
                    </select>
                </div>
                <div class="setting-item">
                    <label>
                        <input type="checkbox" data-setting="isRequired" checked>
                        اجباری
                    </label>
                </div>
            </div>
        </div>

        <div class="ordering-settings">
            <div class="ordering-settings-card">
                <div class="settings-section-header">
                    <i class="fas fa-sliders-h"></i>
                    <span>تنظیمات بلاک</span>
                </div>
                
                <div class="direction-settings-section">
                    <label class="direction-label">جهت مرتب‌سازی:</label>
                    <div class="direction-options" role="radiogroup" aria-label="جهت مرتب‌سازی">
                        <label class="direction-option">
                            <input type="radio" name="direction" value="horizontal-ltr" data-setting="direction" class="direction-input">
                            <div class="direction-option-content">
                                <div class="direction-icon">
                                    <i class="fas fa-arrows-alt-h"></i>
                                </div>
                                <div class="direction-preview">
                                    <span class="preview-item">1</span>
                                    <span class="preview-item">2</span>
                                    <span class="preview-item">3</span>
                                </div>
                                <div class="direction-info">
                                    <span class="direction-title">افقی (چپ به راست)</span>
                                </div>
                                <div class="direction-check">
                                    <i class="fas fa-check"></i>
                                </div>
                            </div>
                        </label>
                        
                        <label class="direction-option">
                            <input type="radio" name="direction" value="horizontal-rtl" data-setting="direction" class="direction-input">
                            <div class="direction-option-content">
                                <div class="direction-icon">
                                    <i class="fas fa-arrows-alt-h"></i>
                                </div>
                                <div class="direction-preview preview-rtl">
                                    <span class="preview-item">3</span>
                                    <span class="preview-item">2</span>
                                    <span class="preview-item">1</span>
                                </div>
                                <div class="direction-info">
                                    <span class="direction-title">افقی (راست به چپ)</span>
                                </div>
                                <div class="direction-check">
                                    <i class="fas fa-check"></i>
                                </div>
                            </div>
                        </label>
                        
                        <label class="direction-option">
                            <input type="radio" name="direction" value="vertical" data-setting="direction" class="direction-input" checked>
                            <div class="direction-option-content">
                                <div class="direction-icon">
                                    <i class="fas fa-arrows-alt-v"></i>
                                </div>
                                <div class="direction-preview preview-vertical">
                                    <span class="preview-item">1</span>
                                    <span class="preview-item">2</span>
                                    <span class="preview-item">3</span>
                                </div>
                                <div class="direction-info">
                                    <span class="direction-title">عمودی</span>
                                </div>
                                <div class="direction-check">
                                    <i class="fas fa-check"></i>
                                </div>
                            </div>
                        </label>
                    </div>
                </div>
                
                <div class="other-settings-section">
                    <div class="setting-toggle">
                        <label class="toggle-label">
                            <input type="checkbox" data-setting="allowDragDrop" checked class="toggle-input">
                            <span class="toggle-slider"></span>
                            <span class="toggle-text">اجازه کشیدن و رها کردن</span>
                        </label>
                    </div>
                    
                    <div class="setting-toggle">
                        <label class="toggle-label">
                            <input type="checkbox" data-setting="showNumbers" checked class="toggle-input">
                            <span class="toggle-slider"></span>
                            <span class="toggle-text">نمایش شماره</span>
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <div class="ordering-items-container">
            <div class="ordering-header">
                <span>آیتم‌های مرتب‌سازی</span>
                <button type="button" class="btn-teacher btn-primary btn-sm" data-action="add-ordering-item">
                    <i class="fas fa-plus"></i>
                    افزودن آیتم
                </button>
            </div>
            <div class="ordering-items-list" data-role="ordering-items"></div>
        </div>

        <div class="correct-order-section">
            <div class="section-header">
                <span>ترتیب صحیح را تنظیم کنید:</span>
                <button type="button" class="btn-teacher btn-secondary btn-sm" data-action="save-correct-order">
                    <i class="fas fa-check"></i>
                    ذخیره ترتیب صحیح
                </button>
            </div>
            <div class="correct-order-list" data-role="correct-order"></div>
        </div>
    </div>
</div>
