<link rel="stylesheet" href="~/css/areas/teacher/schedule-items/multiple-choice-content-builder.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/areas/teacher/schedule-items/stage4-enhancements.css" asp-append-version="true" />

@model EduTrack.Application.Common.Models.ScheduleItems.CreateScheduleItemRequest

<div class="multiple-choice-content-builder">
    <div class="builder-content-layout">
        <!-- Main Content Area -->
        <div class="main-content-area">
            <!-- Optional Context Block (Text/Image/Video/Audio) -->
            <div class="context-section">
                <div class="section-header">
                    <div class="section-title">
                        <i class="fas fa-layer-group"></i>
                        <span>محتوای زمینه (اختیاری)</span>
                    </div>
                    <div class="section-actions">
                        <button type="button" class="btn-teacher btn-primary" id="mcAddContextBlockBtn">
                            <i class="fas fa-plus"></i>
                            <span>افزودن بلاک</span>
                        </button>
                        <button type="button" class="btn-teacher btn-danger" id="mcRemoveContextBlockBtn" style="display:none">
                            <i class="fas fa-trash"></i>
                            <span>حذف بلاک</span>
                        </button>
                    </div>
                </div>

                <div class="context-container" id="mcContextContainer">
                    <div class="empty-state" id="mcContextEmptyState">
                        <div class="empty-state-icon">
                            <i class="fas fa-plus-circle"></i>
                        </div>
                        <h4>هنوز محتوایی اضافه نشده</h4>
                        <p>می‌توانید یک بلاک متن، تصویر، ویدیو یا صوت به عنوان زمینه تمرین اضافه کنید یا این بخش را خالی بگذارید.</p>
                    </div>
                </div>
            </div>

            <!-- Multiple Choice Questions -->
            <div class="mc-editor-section">
                <div class="section-header">
                    <div class="section-title">
                        <i class="fas fa-list-ul"></i>
                        <span>سوالات چندگزینه‌ای</span>
                    </div>
                    <div class="section-actions">
                        <button type="button" class="btn-teacher btn-secondary" id="mcAddQuestionBtn">
                            <i class="fas fa-plus"></i>
                            <span>افزودن سوال</span>
                        </button>
                    </div>
                </div>

                <div class="mc-questions" id="mcQuestionsContainer">
                    <!-- Dynamic question editors will be added here -->
                </div>
            </div>
        </div>

        <!-- Fixed Sidebar -->
        <div class="content-sidebar">
            <div class="sidebar-header">
                <div class="sidebar-title">
                    <i class="fas fa-list"></i>
                    <span>فهرست سوالات</span>
                </div>
                <div class="sidebar-count" id="mcSidebarCount">0</div>
            </div>
            <div class="sidebar-content" id="mcSidebar">
                <!-- Filled by JS: questions list and quick actions -->
            </div>
        </div>
    </div>
</div>

<!-- Hidden field for content -->
<input type="hidden" id="multipleChoiceContentJson" value="@Model.ContentJson" />

<!-- Block Templates (non-question variants) -->
<div id="mcContentBlockTemplates" style="display: none;">
    @{
        ViewData["IsQuestionBlock"] = "false";
    }
    @await Html.PartialAsync("_TextBlock", new { BlockType = "text" })
    @await Html.PartialAsync("_ImageBlock", new { BlockType = "image" })
    @await Html.PartialAsync("_VideoBlock", new { BlockType = "video" })
    @await Html.PartialAsync("_AudioBlock", new { BlockType = "audio" })
</div>

<script src="~/js/areas/teacher/schedule-items/multiple-choice-content-builder.js" asp-append-version="true"></script>


