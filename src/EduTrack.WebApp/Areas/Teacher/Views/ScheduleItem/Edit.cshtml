@model EduTrack.Application.Common.Models.ScheduleItems.UpdateScheduleItemRequest
@{
    ViewData["Title"] = "ویرایش آیتم آموزشی";
    var scheduleItemTypes = ViewBag.ScheduleItemTypes as List<object> ?? new List<object>();
}

<div class="edit-schedule-item-form">
    <form id="editScheduleItemForm" method="post">
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.TeachingPlanId)
        @Html.HiddenFor(m => m.GroupId)
        @Html.HiddenFor(m => m.LessonId)
        @Html.HiddenFor(m => m.Type)
        @Html.HiddenFor(m => m.DisciplineHint)
        <input name="id" value="@ViewBag.ItemId" type="hidden" />
        
        <!-- Basic Information -->
        <div class="form-section">
            <h5 class="section-title">
                <i class="fas fa-info-circle"></i>
                اطلاعات کلی
            </h5>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Title" class="form-label">عنوان آیتم *</label>
                        <input asp-for="Title" class="form-control" placeholder="عنوان آیتم آموزشی را وارد کنید..." required />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label">نوع آیتم</label>
                        <input type="text" class="form-control" value="@ViewBag.ItemTypeName" readonly />
                        <small class="form-text text-muted">نوع آیتم قابل تغییر نیست</small>
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <label asp-for="Description" class="form-label">توضیحات</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="توضیحات اختیاری در مورد آیتم آموزشی..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <!-- Schedule Information -->
        <div class="form-section">
            <h5 class="section-title">
                <i class="fas fa-calendar-alt"></i>
                زمان‌بندی
            </h5>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="StartDate" class="form-label">تاریخ شروع *</label>
                        <input asp-for="StartDate" type="datetime-local" class="form-control" required />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DueDate" class="form-label">تاریخ مهلت</label>
                        <input asp-for="DueDate" type="datetime-local" class="form-control" />
                        <span asp-validation-for="DueDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="MaxScore" class="form-label">حداکثر امتیاز</label>
                        <input asp-for="MaxScore" type="number" class="form-control" min="0" max="100" step="0.1" placeholder="0" />
                        <span asp-validation-for="MaxScore" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="form-check">
                            <input asp-for="IsMandatory" class="form-check-input" type="checkbox" />
                            <label asp-for="IsMandatory" class="form-check-label">
                                آیتم اجباری
                            </label>
                        </div>
                        <span asp-validation-for="IsMandatory" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Content Design Section -->
        <div class="form-section" id="contentDesignSection">
            <h5 class="section-title">
                <i class="fas fa-paint-brush"></i>
                طراحی محتوا
            </h5>
            
            <div id="contentDesignContainer">
                <!-- Content design will be loaded dynamically based on item type -->
            </div>
        </div>

        <!-- Form Actions -->
        <div class="form-actions">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                <i class="fas fa-times"></i>
                انصراف
            </button>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i>
                ذخیره تغییرات
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/js/areas/teacher/schedule-items/schedule-item-form.js"></script>
}

@section Styles {
    <link href="~/css/areas/teacher/schedule-items/schedule-item-form.css" rel="stylesheet" />
}
