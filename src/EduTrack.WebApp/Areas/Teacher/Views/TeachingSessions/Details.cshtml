@model EduTrack.Application.Common.Models.TeachingSessionReportDto
@{
    ViewData["Title"] = "Session Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-chalkboard-teacher me-2"></i>
                        Session Details - @(Model.Title ?? "Untitled Session")
                    </h4>
                    <div>
                        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-outline-primary">
                            <i class="fas fa-edit me-1"></i>Edit
                        </a>
                        <a href="@Url.Action("Index", new { planId = Model.TeachingPlanId })" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to Sessions
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Session Info -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="text-center p-3 bg-light rounded">
                                <i class="fas fa-calendar-alt fa-2x text-primary mb-2"></i>
                                <h6 class="mb-1">Session Date</h6>
                                <strong>@Model.SessionDate.ToString("MMM dd, yyyy")</strong><br>
                                <small class="text-muted">@Model.SessionDate.ToString("HH:mm")</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center p-3 bg-light rounded">
                                <i class="fas fa-video fa-2x text-success mb-2"></i>
                                <h6 class="mb-1">Mode</h6>
                                <span class="badge bg-@(Model.Mode == EduTrack.Domain.Enums.SessionMode.InPerson ? "primary" : Model.Mode == EduTrack.Domain.Enums.SessionMode.Online ? "success" : "warning") fs-6">
                                    @Model.Mode
                                </span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center p-3 bg-light rounded">
                                <i class="fas fa-users fa-2x text-info mb-2"></i>
                                <h6 class="mb-1">Attendance</h6>
                                <strong>@Model.PresentCount / @Model.AttendanceCount</strong><br>
                                <small class="text-muted">Present / Total</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center p-3 bg-light rounded">
                                <i class="fas fa-user-tie fa-2x text-secondary mb-2"></i>
                                <h6 class="mb-1">Created By</h6>
                                <strong>@Model.CreatedByTeacherName</strong><br>
                                <small class="text-muted">@Model.CreatedAt.ToString("MMM dd, yyyy")</small>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Location))
                    {
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="alert alert-info">
                                    <i class="fas fa-map-marker-alt me-2"></i>
                                    <strong>Location:</strong> @Model.Location
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Tabs -->
                    <ul class="nav nav-tabs" id="sessionTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="summary-tab" data-bs-toggle="tab" data-bs-target="#summary" type="button" role="tab">
                                <i class="fas fa-info-circle me-1"></i>Summary
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="attendance-tab" data-bs-toggle="tab" data-bs-target="#attendance" type="button" role="tab">
                                <i class="fas fa-users me-1"></i>Attendance
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="schedule-tab" data-bs-toggle="tab" data-bs-target="#schedule" type="button" role="tab">
                                <i class="fas fa-tasks me-1"></i>Create Schedule Item
                            </button>
                        </li>
                    </ul>

                    <div class="tab-content" id="sessionTabsContent">
                        <!-- Summary Tab -->
                        <div class="tab-pane fade show active" id="summary" role="tabpanel">
                            <div class="row mt-4">
                                <div class="col-md-6">
                                    <h5><i class="fas fa-list me-2"></i>Topics Covered</h5>
                                    <div class="card">
                                        <div class="card-body">
                                            <pre class="mb-0">@Model.TopicsJson</pre>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <h5><i class="fas fa-chart-bar me-2"></i>Statistics</h5>
                                    <div class="card">
                                        <div class="card-body">
                                            @if (!string.IsNullOrEmpty(Model.StatsJson))
                                            {
                                                <pre class="mb-0">@Model.StatsJson</pre>
                                            }
                                            else
                                            {
                                                <p class="text-muted mb-0">No statistics recorded</p>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.Notes))
                            {
                                <div class="row mt-4">
                                    <div class="col-12">
                                        <h5><i class="fas fa-sticky-note me-2"></i>Session Notes</h5>
                                        <div class="card">
                                            <div class="card-body">
                                                <p class="mb-0">@Model.Notes</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(Model.AttachmentsJson))
                            {
                                <div class="row mt-4">
                                    <div class="col-12">
                                        <h5><i class="fas fa-paperclip me-2"></i>Attachments</h5>
                                        <div class="card">
                                            <div class="card-body">
                                                <pre class="mb-0">@Model.AttachmentsJson</pre>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Attendance Tab -->
                        <div class="tab-pane fade" id="attendance" role="tabpanel">
                            <div class="mt-4">
                                <h5><i class="fas fa-users me-2"></i>Attendance Records</h5>
                                @if (Model.Attendance.Any())
                                {
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead class="table-dark">
                                                <tr>
                                                    <th>Student</th>
                                                    <th>Status</th>
                                                    <th>Participation Score</th>
                                                    <th>Comment</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var attendance in Model.Attendance)
                                                {
                                                    <tr>
                                                        <td>
                                                            <strong>@attendance.StudentName</strong>
                                                        </td>
                                                        <td>
                                                            <span class="badge bg-@(attendance.Status == EduTrack.Domain.Enums.AttendanceStatus.Present ? "success" : 
                                                                        attendance.Status == EduTrack.Domain.Enums.AttendanceStatus.Absent ? "danger" : 
                                                                        attendance.Status == EduTrack.Domain.Enums.AttendanceStatus.Late ? "warning" : "info")">
                                                                @attendance.Status
                                                            </span>
                                                        </td>
                                                        <td>
                                                            @if (attendance.ParticipationScore.HasValue)
                                                            {
                                                                <span class="badge bg-primary">@attendance.ParticipationScore.Value.ToString("F1")</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="text-muted">-</span>
                                                            }
                                                        </td>
                                                        <td>
                                                            @if (!string.IsNullOrEmpty(attendance.Comment))
                                                            {
                                                                <small>@attendance.Comment</small>
                                                            }
                                                            else
                                                            {
                                                                <span class="text-muted">-</span>
                                                            }
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                                else
                                {
                                    <div class="text-center py-4">
                                        <i class="fas fa-users fa-3x text-muted mb-3"></i>
                                        <h5 class="text-muted">No attendance records</h5>
                                        <p class="text-muted">Attendance records will appear here once they are added.</p>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Create Schedule Item Tab -->
                        <div class="tab-pane fade" id="schedule" role="tabpanel">
                            <div class="mt-4">
                                <h5><i class="fas fa-tasks me-2"></i>Create Schedule Item from Session</h5>
                                <div class="card">
                                    <div class="card-body">
                                        <p class="mb-3">Create targeted schedule items based on this teaching session for specific students or groups.</p>
                                        <a href="@Url.Action("CreateScheduleItemFromReport", new { reportId = Model.Id })" class="btn btn-primary">
                                            <i class="fas fa-plus me-1"></i>Create Schedule Item
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
