@model List<EduTrack.Application.Common.Models.TeachingSessionReportDto>
@{
    ViewData["Title"] = "Teaching Sessions";
    var planId = ViewBag.TeachingPlanId as int?;
    var planTitle = ViewBag.TeachingPlanTitle as string;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-chalkboard-teacher me-2"></i>
                        Teaching Sessions - @planTitle
                    </h4>
                    <div>
                        <a href="@Url.Action("Create", new { planId = planId })" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>New Session
                        </a>
                        <a href="@Url.Action("Index", "TeachingPlan")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to Plans
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Date</th>
                                        <th>Title</th>
                                        <th>Mode</th>
                                        <th>Location</th>
                                        <th>Attendance</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var session in Model.OrderByDescending(s => s.SessionDate))
                                    {
                                        <tr>
                                            <td>
                                                <strong>@session.SessionDate.ToString("MMM dd, yyyy")</strong><br>
                                                <small class="text-muted">@session.SessionDate.ToString("HH:mm")</small>
                                            </td>
                                            <td>
                                                <div>
                                                    <strong>@(session.Title ?? "Untitled Session")</strong>
                                                </div>
                                                @if (!string.IsNullOrEmpty(session.Notes))
                                                {
                                                    <small class="text-muted">
                                                        @(session.Notes.Length > 100 ? session.Notes.Substring(0, 100) + "..." : session.Notes)
                                                    </small>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-@(session.Mode == EduTrack.Domain.Enums.SessionMode.InPerson ? "primary" : session.Mode == EduTrack.Domain.Enums.SessionMode.Online ? "success" : "warning")">
                                                    @session.Mode
                                                </span>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(session.Location))
                                                {
                                                    <i class="fas fa-map-marker-alt me-1"></i>@session.Location
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <span class="badge bg-success me-1">@session.PresentCount</span>
                                                    <span class="badge bg-danger me-1">@session.AbsentCount</span>
                                                    <small class="text-muted">(@session.AttendanceCount total)</small>
                                                </div>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @session.CreatedAt.ToString("MMM dd, yyyy")
                                                </small>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Details", new { id = session.Id })" class="btn btn-sm btn-outline-primary" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("Edit", new { id = session.Id })" class="btn btn-sm btn-outline-secondary" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-chalkboard-teacher fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No teaching sessions found</h5>
                            <p class="text-muted">Start by creating your first teaching session report.</p>
                            <a href="@Url.Action("Create", new { planId = planId })" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>Create First Session
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
