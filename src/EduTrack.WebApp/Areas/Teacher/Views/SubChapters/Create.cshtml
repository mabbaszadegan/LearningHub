@model EduTrack.Application.Features.Chapters.Commands.CreateSubChapterCommand
@{
    ViewData["Title"] = "ایجاد زیرمبحث جدید";
}

<div class="header-actions-minimal">
            <a asp-controller="SubChapters" asp-action="Index" asp-route-chapterId="@ViewBag.ChapterId" class="btn-minimal btn-secondary-minimal">
                <i class="fas fa-arrow-right"></i>
                <span>بازگشت</span>
            </a>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card-minimal">
            <div class="card-body-minimal">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <input asp-for="ChapterId" type="hidden" />
                    
                    <div class="form-group-minimal">
                        <label class="form-label-minimal">عنوان زیرمبحث</label>
                        <input asp-for="Title" class="form-control-minimal" placeholder="عنوان زیرمبحث را وارد کنید" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group-minimal">
                        <label class="form-label-minimal">توضیحات</label>
                        <textarea asp-for="Description" class="form-control-minimal" rows="3" 
                                  placeholder="توضیحات کوتاه در مورد این زیرمبحث (اختیاری)"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group-minimal">
                        <label class="form-label-minimal">هدف زیرمبحث</label>
                        <textarea asp-for="Objective" class="form-control-minimal" rows="4" 
                                  placeholder="هدف این زیرمبحث چیست؟ دانش‌آموزان چه چیزی یاد خواهند گرفت؟"></textarea>
                        <span asp-validation-for="Objective" class="text-danger"></span>
                    </div>
                    
                    <div class="form-actions-minimal">
                        <a asp-controller="SubChapters" asp-action="Index" asp-route-chapterId="@ViewBag.ChapterId" class="btn-minimal btn-secondary-minimal">
                            <i class="fas fa-times"></i>
                            <span>انصراف</span>
                        </a>
                        <button type="submit" class="btn-minimal btn-primary-minimal">
                            <i class="fas fa-save"></i>
                            <span>ایجاد زیرمبحث</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    /* Page Header Minimal */
    

    

    

    

    .header-actions-minimal {
        display: flex;
        gap: 0.75rem;
    }

    /* Card Minimal */
    .card-minimal {
        background: white;
        border-radius: 8px;
        border: 1px solid #e9ecef;
        overflow: hidden;
    }

    .card-body-minimal {
        padding: 2rem;
    }

    /* Form Minimal */
    .form-group-minimal {
        margin-bottom: 1.25rem;
    }

    .form-label-minimal {
        display: block;
        font-size: 0.875rem;
        font-weight: 500;
        color: #4a5568;
        margin-bottom: 0.5rem;
    }

    .form-control-minimal {
        width: 100%;
        padding: 0.625rem 0.875rem;
        font-size: 0.875rem;
        border: 1px solid #e2e8f0;
        border-radius: 6px;
        transition: all 0.2s;
    }

    .form-control-minimal:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    /* Form Actions */
    .form-actions-minimal {
        display: flex;
        justify-content: flex-end;
        gap: 0.75rem;
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid #e9ecef;
    }

    /* Buttons Minimal */
    .btn-minimal {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.625rem 1.25rem;
        font-size: 0.875rem;
        font-weight: 500;
        border-radius: 6px;
        border: none;
        cursor: pointer;
        transition: all 0.2s;
        text-decoration: none;
    }

    .btn-primary-minimal {
        background: #667eea;
        color: white;
    }

    .btn-primary-minimal:hover {
        background: #5568d3;
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }

    .btn-secondary-minimal {
        background: white;
        color: #718096;
        border: 1px solid #e2e8f0;
    }

    .btn-secondary-minimal:hover {
        background: #f7fafc;
        color: #2d3748;
        border-color: #cbd5e0;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Handle form submission to prevent button staying in loading state
            $('form').on('submit', function() {
                const $submitBtn = $(this).find('button[type="submit"]');
                const $form = $(this);
                
                // Add loading state
                $submitBtn.prop('disabled', true);
                $submitBtn.html('<i class="fas fa-spinner fa-spin"></i><span>در حال ایجاد...</span>');
                
                // Remove loading state after a delay (in case of validation errors)
                setTimeout(function() {
                    if ($form.find('.text-danger').length > 0) {
                        $submitBtn.prop('disabled', false);
                        $submitBtn.html('<i class="fas fa-save"></i><span>ایجاد زیرمبحث</span>');
                    }
                }, 100);
            });
        });
    </script>
}
