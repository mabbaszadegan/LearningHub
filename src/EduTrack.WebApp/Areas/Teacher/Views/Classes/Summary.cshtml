@using EduTrack.Application.Common.Models.Courses
@model ClassSummaryDto
@{
    ViewData["Title"] = "خلاصه کلاس";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">خلاصه کلاس: @Model.ClassName</h3>
                    <div>
                        <a asp-action="Details" asp-route-id="@Model.ClassId" class="btn btn-secondary">
                            <i class="fas fa-arrow-right"></i> بازگشت
                        </a>
                        <a asp-action="Export" asp-route-id="@Model.ClassId" class="btn btn-success">
                            <i class="fas fa-download"></i> دانلود گزارش
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Class Information -->
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-info-circle text-primary"></i>
                                        اطلاعات کلی
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <table class="table table-borderless">
                                        <tr>
                                            <td><strong>نام کلاس:</strong></td>
                                            <td>@Model.ClassName</td>
                                        </tr>
                                        <tr>
                                            <td><strong>عنوان دوره:</strong></td>
                                            <td>@Model.CourseTitle</td>
                                        </tr>
                                        <tr>
                                            <td><strong>معلم:</strong></td>
                                            <td>@Model.TeacherName</td>
                                        </tr>
                                        <tr>
                                            <td><strong>تاریخ شروع:</strong></td>
                                            <td>@Model.StartDate.ToString("yyyy/MM/dd")</td>
                                        </tr>
                                        <tr>
                                            <td><strong>تاریخ پایان:</strong></td>
                                            <td>@(Model.EndDate?.ToString("yyyy/MM/dd") ?? "تعیین نشده")</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <!-- Statistics -->
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-chart-pie text-success"></i>
                                        آمار کلاس
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="row text-center">
                                        <div class="col-6">
                                            <div class="border rounded p-3 mb-3">
                                                <h4 class="text-primary mb-1">@Model.TotalStudents</h4>
                                                <small class="text-muted">کل دانش‌آموزان</small>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="border rounded p-3 mb-3">
                                                <h4 class="text-success mb-1">@Model.CompletedStudents</h4>
                                                <small class="text-muted">دانش‌آموزان فارغ‌التحصیل</small>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="border rounded p-3">
                                                <h4 class="text-info mb-1">@Model.CompletionPercentage.ToString("F1")%</h4>
                                                <small class="text-muted">درصد تکمیل</small>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="border rounded p-3">
                                                <h4 class="text-warning mb-1">@Model.AverageScore.ToString("F1")</h4>
                                                <small class="text-muted">میانگین نمرات</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Progress Chart -->
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-chart-bar text-info"></i>
                                        نمودار پیشرفت
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="progress mb-3" style="height: 30px;">
                                        <div class="progress-bar bg-success" role="progressbar" 
                                             style="width: @Model.CompletionPercentage%" 
                                             aria-valuenow="@Model.CompletionPercentage" 
                                             aria-valuemin="0" 
                                             aria-valuemax="100">
                                            @Model.CompletionPercentage.ToString("F1")%
                                        </div>
                                    </div>
                                    
                                    <div class="row text-center">
                                        <div class="col-md-4">
                                            <div class="d-flex align-items-center justify-content-center">
                                                <div class="bg-success rounded-circle me-2" style="width: 12px; height: 12px;"></div>
                                                <span>فارغ‌التحصیل: @Model.CompletedStudents</span>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="d-flex align-items-center justify-content-center">
                                                <div class="bg-warning rounded-circle me-2" style="width: 12px; height: 12px;"></div>
                                                <span>در حال تحصیل: @(Model.TotalStudents - Model.CompletedStudents)</span>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="d-flex align-items-center justify-content-center">
                                                <div class="bg-info rounded-circle me-2" style="width: 12px; height: 12px;"></div>
                                                <span>کل: @Model.TotalStudents</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (Model.TotalStudents == 0)
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="alert alert-info text-center">
                                    <i class="fas fa-info-circle fa-2x mb-3"></i>
                                    <h5>هنوز دانش‌آموزی در این کلاس ثبت‌نام نکرده است</h5>
                                    <p class="mb-3">برای شروع، دانش‌آموزان را در این کلاس ثبت‌نام کنید.</p>
                                    <a asp-action="Details" asp-route-id="@Model.ClassId" class="btn btn-primary">
                                        <i class="fas fa-user-plus"></i> ثبت‌نام دانش‌آموز
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
