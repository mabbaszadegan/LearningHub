@model List<EduTrack.Application.Common.Models.ClassDto>
@{
    ViewData["Title"] = "کلاس‌های من";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="h4 mb-0">کلاس‌های من</h2>
    <a asp-action="Create" class="btn btn-modern-primary">
        <i class="fas fa-plus me-2"></i>ایجاد کلاس جدید
    </a>
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var classItem in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="modern-card">
                    <div class="modern-card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="modern-card-title">@classItem.Name</h5>
                            <span class="badge bg-@(classItem.IsActive ? "success" : "secondary")">
                                @(classItem.IsActive ? "فعال" : "غیرفعال")
                            </span>
                        </div>
                        
                        <div class="mb-3">
                            <small class="text-muted">
                                <i class="fas fa-book me-1"></i>دوره: @classItem.CourseId
                            </small>
                        </div>
                        
                        <div class="row text-center mb-3">
                            <div class="col-6">
                                <div class="stats-number">@classItem.StudentCount</div>
                                <div class="stats-label">دانش‌آموز</div>
                            </div>
                            <div class="col-6">
                                <div class="stats-number">@classItem.TeacherName</div>
                                <div class="stats-label">معلم</div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <small class="text-muted">
                                <i class="fas fa-calendar me-1"></i>
                                شروع: @classItem.StartDate.ToString("yyyy/MM/dd")
                            </small>
                        </div>
                        
                        <div class="d-flex gap-2">
                            <a href="#" class="btn btn-modern-secondary btn-sm flex-fill">
                                <i class="fas fa-edit me-1"></i>ویرایش
                            </a>
                            <a href="#" class="btn btn-modern-primary btn-sm flex-fill">
                                <i class="fas fa-eye me-1"></i>مشاهده
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <div class="mb-4">
            <i class="fas fa-chalkboard fa-3x text-muted"></i>
        </div>
        <h4 class="text-muted mb-3">هنوز کلاسی ایجاد نکرده‌اید</h4>
        <p class="text-muted mb-4">اولین کلاس خود را ایجاد کنید و شروع به تدریس کنید.</p>
        <a asp-action="Create" class="btn btn-modern-primary">
            <i class="fas fa-plus me-2"></i>ایجاد کلاس جدید
        </a>
    </div>
}