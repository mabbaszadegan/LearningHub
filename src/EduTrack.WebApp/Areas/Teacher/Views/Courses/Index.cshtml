@model List<EduTrack.Application.Common.Models.CourseDto>
@{
    ViewData["Title"] = "دوره‌های من";
}

<!-- Page Header -->
<div class="page-header-minimal mb-3">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">دوره‌های من</h1>
            <p class="page-subtitle mb-0">مدیریت و سازماندهی دوره‌های آموزشی</p>
        </div>
        <a asp-action="Create" class="btn-action-primary">
            <i class="fas fa-plus"></i>
            <span>دوره جدید</span>
        </a>
    </div>
</div>

<!-- Filter Bar -->
<div class="filter-bar-minimal mb-3">
    <div class="filter-group">
        <button class="filter-btn active" data-filter="all">
            <span>همه</span>
            <span class="filter-count">@Model.Count</span>
        </button>
        <button class="filter-btn" data-filter="active">
            <span>فعال</span>
            <span class="filter-count">@Model.Count(c => c.IsActive)</span>
        </button>
        <button class="filter-btn" data-filter="inactive">
            <span>غیرفعال</span>
            <span class="filter-count">@Model.Count(c => !c.IsActive)</span>
        </button>
    </div>
    <div class="filter-info">
        <i class="fas fa-grip-vertical"></i>
        <span>برای تغییر ترتیب، کارت‌ها را بکشید</span>
    </div>
</div>

@if (Model.Any())
{
    <!-- Courses Grid with Drag & Drop -->
    <div class="courses-grid-sortable" id="coursesGrid">
        @foreach (var course in Model.OrderBy(c => c.Order))
        {
            <div class="course-card-draggable" data-course-id="@course.Id" data-status="@(course.IsActive ? "active" : "inactive")">
                <!-- Card Content -->
                <div class="course-card-content">
                    <!-- Header -->
                    <div class="course-card-header-mini">
                        <h3 class="course-title-drag">@course.Title</h3>
                        
                        <!-- Drag Handle with Left/Right Buttons - Desktop -->
                        <div class="drag-handle-desktop">
                            <button class="move-btn move-up" data-course-id="@course.Id" data-direction="up" title="انتقال به قبل">
                                <i class="fas fa-chevron-right"></i>
                            </button>
                            <div class="drag-icon">
                                <i class="fas fa-grip-vertical"></i>
                            </div>
                            <button class="move-btn move-down" data-course-id="@course.Id" data-direction="down" title="انتقال به بعد">
                                <i class="fas fa-chevron-left"></i>
                            </button>
                        </div>
                        <div class="course-actions-top">
                            <label class="toggle-switch-mini" title="فعال/غیرفعال">
                                <input type="checkbox" 
                                       class="toggle-course-active" 
                                       data-course-id="@course.Id" 
                                       @(course.IsActive ? "checked" : "") />
                                <span class="toggle-slider-mini"></span>
                            </label>
                        </div>
                    </div>
                    
                    <!-- Description -->
                    <p class="course-desc-drag">@course.Description</p>
                    
                    <!-- Stats -->
                    <div class="course-stats-mini">
                        <div class="stat-item-mini">
                            <i class="fas fa-layer-group"></i>
                            <span>@course.ModuleCount ماژول</span>
                        </div>
                        <div class="stat-item-mini">
                            <i class="fas fa-book-open"></i>
                            <span>@course.LessonCount درس</span>
                        </div>
                        <div class="stat-item-mini">
                            <i class="fas fa-users"></i>
                            <span>0 دانش‌آموز</span>
                        </div>
                    </div>
                    
                    <!-- Action Buttons -->
                    <div class="course-actions-grid">
                        <a asp-controller="Chapters" asp-action="Index" asp-route-courseId="@course.Id" 
                           class="action-btn-mini primary" title="مدیریت مباحث">
                            <i class="fas fa-book"></i>
                            <span>مباحث</span>
                        </a>
                        <a asp-controller="InteractiveLesson" asp-action="ByCourse" asp-route-courseId="@course.Id" 
                           class="action-btn-mini success" title="مدیریت درس‌های تعاملی">
                            <i class="fas fa-play-circle"></i>
                            <span>درس‌ها</span>
                        </a>
                        <a href="#" class="action-btn-mini warning" title="مدیریت آزمون‌ها">
                            <i class="fas fa-clipboard-list"></i>
                            <span>آزمون‌ها</span>
                        </a>
                        <a asp-action="Edit" asp-route-id="@course.Id" 
                           class="action-btn-mini info" title="ویرایش دوره">
                            <i class="fas fa-edit"></i>
                            <span>ویرایش</span>
                        </a>
                    </div>
                    
                    <!-- Drag Handle - Mobile (Vertical) -->
                    <div class="drag-handle-mobile">
                        <button class="move-btn-mobile move-up" data-course-id="@course.Id" data-direction="up" title="انتقال به بالا">
                            <i class="fas fa-chevron-up"></i>
                        </button>
                        <div class="drag-icon-mobile">
                            <i class="fas fa-grip-vertical"></i>
                        </div>
                        <button class="move-btn-mobile move-down" data-course-id="@course.Id" data-direction="down" title="انتقال به پایین">
                            <i class="fas fa-chevron-down"></i>
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <!-- Empty State -->
    <div class="empty-state-minimal">
        <div class="empty-icon">
            <i class="fas fa-book"></i>
        </div>
        <h3>هنوز دوره‌ای ایجاد نشده</h3>
        <p>اولین دوره آموزشی خود را ایجاد کنید</p>
        <a asp-action="Create" class="btn-action-primary">
            <i class="fas fa-plus"></i>
            <span>ایجاد دوره جدید</span>
        </a>
    </div>
}

@section Styles {
    <style>
        /* Page Header */
        .btn-action-primary {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.625rem 1.125rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 8px;
            text-decoration: none;
            font-size: 0.813rem;
            font-weight: 500;
            transition: all 0.2s;
            border: none;
        }

