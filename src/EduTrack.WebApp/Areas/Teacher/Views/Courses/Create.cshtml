@model EduTrack.Application.Features.Courses.Commands.CreateCourseCommand
@using EduTrack.Domain.Enums
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "ایجاد دوره جدید";
    var disciplineOptions = new List<SelectListItem>
    {
        new("زبان‌ها", ((int)DisciplineType.Language).ToString()),
        new("ریاضیات", ((int)DisciplineType.Math).ToString()),
        new("برنامه‌نویسی", ((int)DisciplineType.Programming).ToString()),
        new("علوم", ((int)DisciplineType.Science).ToString()),
        new("سایر", ((int)DisciplineType.Other).ToString())
    };

    if (Model != null)
    {
        foreach (var option in disciplineOptions)
        {
            if (int.TryParse(option.Value, out var enumValue) &&
                Model.DisciplineType == (DisciplineType)enumValue)
            {
                option.Selected = true;
            }
        }
    }
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <!-- Back Button -->
        <div class="mb-3">
            <a asp-action="Index" class="btn-back-minimal">
                <i class="fas fa-arrow-right"></i>
                <span>بازگشت به لیست</span>
            </a>
        </div>

        <!-- Form Card -->
        <div class="form-card-minimal">
            <div class="form-header-minimal">
                <div class="form-icon-minimal">
                    <i class="fas fa-plus"></i>
                </div>
                <div>
                    <h2 class="form-title-minimal">ایجاد دوره جدید</h2>
                    <p class="form-subtitle-minimal">اطلاعات دوره آموزشی را وارد کنید</p>
                </div>
            </div>

            <form asp-action="Create" method="post" class="form-body-minimal">
                <input type="hidden" asp-for="Thumbnail" />
                <input type="hidden" asp-for="ThumbnailFileId" />
                <!-- Title -->
                <div class="form-group-minimal">
                    <label asp-for="Title" class="form-label-minimal">
                        <i class="fas fa-heading"></i>
                        <span>عنوان دوره</span>
                        <span class="required-star">*</span>
                    </label>
                    <input asp-for="Title" 
                           class="form-input-minimal" 
                           placeholder="مثال: ریاضی پایه دهم" 
                           autocomplete="off" />
                    <span asp-validation-for="Title" class="validation-error-minimal"></span>
                </div>

                <!-- Description -->
                <div class="form-group-minimal">
                    <label asp-for="Description" class="form-label-minimal">
                        <i class="fas fa-align-right"></i>
                        <span>توضیحات</span>
                        <span class="required-star">*</span>
                    </label>
                    <textarea asp-for="Description" 
                              class="form-textarea-minimal" 
                              rows="4" 
                              placeholder="توضیحات کامل درباره دوره، اهداف آموزشی و محتوای آن..."></textarea>
                    <span asp-validation-for="Description" class="validation-error-minimal"></span>
                </div>

                <!-- Discipline Type -->
                <div class="form-group-minimal">
                    <label asp-for="DisciplineType" class="form-label-minimal">
                        <i class="fas fa-layer-group"></i>
                        <span>حوزه آموزشی</span>
                    </label>
                    <select asp-for="DisciplineType"
                            asp-items="disciplineOptions"
                            class="form-input-minimal">
                        <option value="">انتخاب حوزه</option>
                    </select>
                    <span asp-validation-for="DisciplineType" class="validation-error-minimal"></span>
                </div>

                <!-- Thumbnail -->
                <div class="form-group-minimal">
                    <label class="form-label-minimal">
                        <i class="fas fa-image"></i>
                        <span>تصویر دوره</span>
                    </label>
                    <div class="course-thumbnail-wrapper" data-thumbnail-wrapper>
                        @if (!string.IsNullOrWhiteSpace(Model?.Thumbnail))
                        {
                            <img src="@Model!.Thumbnail" alt="تصویر دوره" class="course-thumbnail-preview img-fluid" data-thumbnail-preview />
                        }
                        else
                        {
                            <div class="course-thumbnail-placeholder" data-thumbnail-placeholder>
                                <i class="fas fa-image"></i>
                                <span>تصویری انتخاب نشده است</span>
                            </div>
                        }
                    </div>
                    <div class="course-thumbnail-actions">
                        <label class="btn-submit-minimal thumbnail-upload-btn">
                            <i class="fas fa-upload"></i>
                            <span>انتخاب تصویر</span>
                            <input type="file" id="courseThumbnailInput" accept="image/*" hidden />
                        </label>
                        <button type="button" class="btn-cancel-minimal thumbnail-remove-btn" data-remove-thumbnail>
                            <i class="fas fa-times"></i>
                            <span>حذف تصویر</span>
                        </button>
                    </div>
                    <small class="form-text-helper" data-thumbnail-status>
                        <i class="fas fa-info-circle"></i>
                        تصویر با فرمت‌های JPG، PNG یا WEBP و حداکثر حجم ۵ مگابایت پشتیبانی می‌شود.
                    </small>
                    <span asp-validation-for="ThumbnailFileId" class="validation-error-minimal"></span>
                </div>

                <!-- Info Box -->
                <div class="info-box-minimal">
                    <i class="fas fa-info-circle"></i>
                    <div>
                        <strong>نکته:</strong>
                        <p>ترتیب نمایش دوره‌ها را می‌توانید از صفحه لیست با کشیدن و رها کردن کارت‌ها تغییر دهید.</p>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="form-actions-minimal">
                    <button type="submit" class="btn-submit-minimal">
                        <i class="fas fa-check"></i>
                        <span>ایجاد دوره</span>
                    </button>
                    <a asp-action="Index" class="btn-cancel-minimal">
                        <i class="fas fa-times"></i>
                        <span>انصراف</span>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Back Button */
        .btn-back-minimal {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 0.875rem;
            background: white;
            border: 1px solid #e9ecef;
            border-radius: 6px;
            color: #6c757d;
            text-decoration: none;
            font-size: 0.813rem;
            font-weight: 500;
            transition: all 0.2s;
        }

        .btn-back-minimal:hover {
            background: #f8f9fa;
            color: #667eea;
            border-color: #667eea;
        }

        .btn-back-minimal i {
            font-size: 0.75rem;
        }

        /* Form Card */
        .form-card-minimal {
            background: white;
            border-radius: 12px;
            border: 1px solid #e9ecef;
            overflow: hidden;
        }

        .form-header-minimal {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1.5rem;
            background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
            border-bottom: 1px solid #e9ecef;
        }

        .form-icon-minimal {
            width: 48px;
            height: 48px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.25rem;
        }

        .form-title-minimal {
            font-size: 1.25rem;
            font-weight: 600;
            color: #1a1a1a;
            margin: 0;
        }

        .form-subtitle-minimal {
            font-size: 0.813rem;
            color: #6c757d;
            margin: 0.25rem 0 0 0;
        }

        .form-body-minimal {
            padding: 1.5rem;
        }

        /* Form Groups */
        .form-group-minimal {
            margin-bottom: 1.25rem;
        }

        .form-label-minimal {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.875rem;
            font-weight: 600;
            color: #495057;
            margin-bottom: 0.5rem;
        }

        .form-label-minimal i {
            font-size: 0.875rem;
            color: #adb5bd;
        }

        .required-star {
            color: #dc3545;
        }

        .form-input-minimal,
        .form-textarea-minimal {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 1px solid #e9ecef;
            border-radius: 8px;
            font-size: 0.875rem;
            color: #495057;
            transition: all 0.2s;
        }

        .form-input-minimal:focus,
        .form-textarea-minimal:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .form-textarea-minimal {
            resize: vertical;
            font-family: inherit;
            line-height: 1.6;
        }

        .validation-error-minimal {
            display: block;
            font-size: 0.75rem;
            color: #dc3545;
            margin-top: 0.375rem;
        }

        /* Info Box */
        .info-box-minimal {
            display: flex;
            gap: 0.875rem;
            padding: 1rem;
            background: rgba(102, 126, 234, 0.05);
            border: 1px solid rgba(102, 126, 234, 0.2);
            border-radius: 8px;
            margin-bottom: 1.5rem;
        }

        .info-box-minimal > i {
            font-size: 1rem;
            color: #667eea;
            flex-shrink: 0;
            margin-top: 0.125rem;
        }

        .info-box-minimal strong {
            font-size: 0.813rem;
            color: #667eea;
            display: block;
            margin-bottom: 0.25rem;
        }

        .info-box-minimal p {
            font-size: 0.75rem;
            color: #6c757d;
            margin: 0;
            line-height: 1.5;
        }

        /* Form Actions */
        .form-actions-minimal {
            display: flex;
            gap: 0.75rem;
            padding-top: 1rem;
            border-top: 1px solid #f0f0f0;
        }

        .btn-submit-minimal {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 0.875rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
        }

        .btn-submit-minimal:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
        }

        .btn-cancel-minimal {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            background: white;
            color: #6c757d;
            border: 1px solid #e9ecef;
            border-radius: 8px;
            font-size: 0.875rem;
            font-weight: 500;
            text-decoration: none;
            transition: all 0.2s;
        }

        .btn-cancel-minimal:hover {
            background: #f8f9fa;
            color: #495057;
            border-color: #dee2e6;
        }

        /* Responsive */
        @@media (max-width: 767.98px) {
            .form-actions-minimal {
                flex-direction: column;
            }

            .btn-submit-minimal,
            .btn-cancel-minimal {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/areas/teacher/courses/course-form.js" asp-append-version="true"></script>
    
    <script>
        $(document).ready(function() {
            // Handle form submission to prevent button staying in loading state
            $('form').on('submit', function() {
                const $submitBtn = $(this).find('button[type="submit"]');
                const $form = $(this);
                
                // Add loading state
                $submitBtn.prop('disabled', true);
                $submitBtn.html('<i class="fas fa-spinner fa-spin"></i><span>در حال ایجاد...</span>');
                
                // Remove loading state after a delay (in case of validation errors)
                setTimeout(function() {
                    if ($form.find('.text-danger').length > 0) {
                        $submitBtn.prop('disabled', false);
                        $submitBtn.html('<i class="fas fa-save"></i><span>ایجاد دوره</span>');
                    }
                }, 100);
            });
        });
    </script>
}