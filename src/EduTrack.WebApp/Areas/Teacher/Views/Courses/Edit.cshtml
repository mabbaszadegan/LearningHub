@model EduTrack.Application.Features.Courses.Commands.UpdateCourseCommand
@{
    ViewData["Title"] = "ویرایش دوره";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <!-- Back Button -->
        <div class="mb-3">
            <a asp-action="Index" class="btn-back-minimal">
                <i class="fas fa-arrow-right"></i>
                <span>بازگشت به لیست</span>
            </a>
        </div>

        <!-- Form Card -->
        <div class="form-card-minimal">
            <div class="form-header-minimal">
                <div class="form-icon-minimal edit">
                    <i class="fas fa-edit"></i>
                </div>
                <div>
                    <h2 class="form-title-minimal">ویرایش دوره</h2>
                    <p class="form-subtitle-minimal">ویرایش اطلاعات دوره آموزشی</p>
                </div>
            </div>

            <form asp-action="Edit" method="post" class="form-body-minimal">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Order" />
                <input type="hidden" asp-for="Thumbnail" />

                <!-- Title -->
                <div class="form-group-minimal">
                    <label asp-for="Title" class="form-label-minimal">
                        <i class="fas fa-heading"></i>
                        <span>عنوان دوره</span>
                        <span class="required-star">*</span>
                    </label>
                    <input asp-for="Title" 
                           class="form-input-minimal" 
                           placeholder="مثال: ریاضی پایه دهم" 
                           autocomplete="off" />
                    <span asp-validation-for="Title" class="validation-error-minimal"></span>
                </div>

                <!-- Description -->
                <div class="form-group-minimal">
                    <label asp-for="Description" class="form-label-minimal">
                        <i class="fas fa-align-right"></i>
                        <span>توضیحات</span>
                        <span class="required-star">*</span>
                    </label>
                    <textarea asp-for="Description" 
                              class="form-textarea-minimal" 
                              rows="4" 
                              placeholder="توضیحات کامل درباره دوره، اهداف آموزشی و محتوای آن..."></textarea>
                    <span asp-validation-for="Description" class="validation-error-minimal"></span>
                </div>

                <!-- Active Status -->
                <div class="form-group-minimal">
                    <label class="form-label-minimal">
                        <i class="fas fa-toggle-on"></i>
                        <span>وضعیت</span>
                    </label>
                    <div class="custom-switch-container">
                        <label class="custom-switch-label">
                            <input type="checkbox" asp-for="IsActive" class="custom-switch-input" />
                            <span class="custom-switch-slider"></span>
                            <span class="custom-switch-text">
                                <span class="switch-active">دوره فعال است</span>
                                <span class="switch-inactive">دوره غیرفعال است</span>
                            </span>
                        </label>
                    </div>
                    <small class="form-text-helper">
                        <i class="fas fa-info-circle"></i>
                        دوره‌های غیرفعال برای دانش‌آموزان قابل مشاهده نخواهند بود
                    </small>
                </div>

                <!-- Info Box -->
                <div class="info-box-minimal">
                    <i class="fas fa-info-circle"></i>
                    <div>
                        <strong>نکته:</strong>
                        <p>ترتیب نمایش این دوره را می‌توانید از صفحه لیست با کشیدن و رها کردن کارت آن تغییر دهید.</p>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="quick-actions-edit">
                    <h3 class="quick-actions-title">دسترسی سریع</h3>
                    <div class="quick-actions-grid-edit">
                        <a asp-controller="Chapters" asp-action="Index" asp-route-courseId="@Model.Id" class="quick-action-item-edit primary">
                            <i class="fas fa-book"></i>
                            <span>مدیریت مباحث</span>
                        </a>
                        <a asp-controller="InteractiveLesson" asp-action="ByCourse" asp-route-courseId="@Model.Id" class="quick-action-item-edit success">
                            <i class="fas fa-play-circle"></i>
                            <span>مدیریت درس‌ها</span>
                        </a>
                        <a href="#" class="quick-action-item-edit warning">
                            <i class="fas fa-clipboard-list"></i>
                            <span>مدیریت آزمون‌ها</span>
                        </a>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="form-actions-minimal">
                    <button type="submit" class="btn-submit-minimal">
                        <i class="fas fa-save"></i>
                        <span>ذخیره تغییرات</span>
                    </button>
                    <a asp-action="Index" class="btn-cancel-minimal">
                        <i class="fas fa-times"></i>
                        <span>انصراف</span>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Back Button */
        .btn-back-minimal {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 0.875rem;
            background: white;
            border: 1px solid #e9ecef;
            border-radius: 6px;
            color: #6c757d;
            text-decoration: none;
            font-size: 0.813rem;
            font-weight: 500;
            transition: all 0.2s;
        }

        .btn-back-minimal:hover {
            background: #f8f9fa;
            color: #667eea;
            border-color: #667eea;
        }

        /* Form Card */
        .form-card-minimal {
            background: white;
            border-radius: 12px;
            border: 1px solid #e9ecef;
            overflow: hidden;
        }

        .form-header-minimal {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1.5rem;
            background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
            border-bottom: 1px solid #e9ecef;
        }

        .form-icon-minimal {
            width: 48px;
            height: 48px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.25rem;
        }

        .form-icon-minimal.edit {
            background: linear-gradient(135deg, #17a2b8 0%, #138496 100%);
        }

        .form-title-minimal {
            font-size: 1.25rem;
            font-weight: 600;
            color: #1a1a1a;
            margin: 0;
        }

        .form-subtitle-minimal {
            font-size: 0.813rem;
            color: #6c757d;
            margin: 0.25rem 0 0 0;
        }

        .form-body-minimal {
            padding: 1.5rem;
        }

        /* Form Groups */
        .form-group-minimal {
            margin-bottom: 1.25rem;
        }

        .form-label-minimal {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.875rem;
            font-weight: 600;
            color: #495057;
            margin-bottom: 0.5rem;
        }

        .form-label-minimal i {
            font-size: 0.875rem;
            color: #adb5bd;
        }

        .required-star {
            color: #dc3545;
        }

        .form-input-minimal,
        .form-textarea-minimal {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 1px solid #e9ecef;
            border-radius: 8px;
            font-size: 0.875rem;
            color: #495057;
            transition: all 0.2s;
        }

        .form-input-minimal:focus,
        .form-textarea-minimal:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .form-textarea-minimal {
            resize: vertical;
            font-family: inherit;
            line-height: 1.6;
        }

        .validation-error-minimal {
            display: block;
            font-size: 0.75rem;
            color: #dc3545;
            margin-top: 0.375rem;
        }

        /* Custom Switch */
        .custom-switch-container {
            margin-bottom: 0.5rem;
        }

        .custom-switch-label {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            cursor: pointer;
            user-select: none;
        }

        .custom-switch-input {
            display: none;
        }

        .custom-switch-slider {
            position: relative;
            width: 48px;
            height: 24px;
            background: #ccc;
            border-radius: 24px;
            transition: 0.3s;
            flex-shrink: 0;
        }

        .custom-switch-slider:before {
            content: "";
            position: absolute;
            width: 20px;
            height: 20px;
            right: 2px;
            bottom: 2px;
            background: white;
            border-radius: 50%;
            transition: 0.3s;
        }

        .custom-switch-input:checked + .custom-switch-slider {
            background: #28a745;
        }

        .custom-switch-input:checked + .custom-switch-slider:before {
            transform: translateX(-24px);
        }

        .custom-switch-text {
            font-size: 0.875rem;
            color: #495057;
        }

        .switch-inactive {
            display: inline;
        }

        .switch-active {
            display: none;
        }

        .custom-switch-input:checked ~ .custom-switch-text .switch-inactive {
            display: none;
        }

        .custom-switch-input:checked ~ .custom-switch-text .switch-active {
            display: inline;
        }

        .form-text-helper {
            display: flex;
            align-items: center;
            gap: 0.375rem;
            font-size: 0.75rem;
            color: #6c757d;
        }

        .form-text-helper i {
            font-size: 0.7rem;
        }

        /* Info Box */
        .info-box-minimal {
            display: flex;
            gap: 0.875rem;
            padding: 1rem;
            background: rgba(102, 126, 234, 0.05);
            border: 1px solid rgba(102, 126, 234, 0.2);
            border-radius: 8px;
            margin-bottom: 1.5rem;
        }

        .info-box-minimal > i {
            font-size: 1rem;
            color: #667eea;
            flex-shrink: 0;
            margin-top: 0.125rem;
        }

        .info-box-minimal strong {
            font-size: 0.813rem;
            color: #667eea;
            display: block;
            margin-bottom: 0.25rem;
        }

        .info-box-minimal p {
            font-size: 0.75rem;
            color: #6c757d;
            margin: 0;
            line-height: 1.5;
        }

        /* Quick Actions Edit */
        .quick-actions-edit {
            padding: 1.25rem;
            background: #f8f9fa;
            border-radius: 8px;
            margin-bottom: 1.5rem;
        }

        .quick-actions-title {
            font-size: 0.875rem;
            font-weight: 600;
            color: #495057;
            margin: 0 0 0.875rem 0;
        }

        .quick-actions-grid-edit {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 0.75rem;
        }

        .quick-action-item-edit {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 1rem;
            border-radius: 8px;
            text-decoration: none;
            font-size: 0.813rem;
            font-weight: 500;
            transition: all 0.2s;
            gap: 0.5rem;
            border: 2px solid;
        }

        .quick-action-item-edit i {
            font-size: 1.25rem;
        }

        .quick-action-item-edit.primary {
            background: rgba(102, 126, 234, 0.1);
            color: #667eea;
            border-color: rgba(102, 126, 234, 0.3);
        }

        .quick-action-item-edit.primary:hover {
            background: #667eea;
            color: white;
            transform: translateY(-2px);
        }

        .quick-action-item-edit.success {
            background: rgba(40, 167, 69, 0.1);
            color: #28a745;
            border-color: rgba(40, 167, 69, 0.3);
        }

        .quick-action-item-edit.success:hover {
            background: #28a745;
            color: white;
            transform: translateY(-2px);
        }

        .quick-action-item-edit.warning {
            background: rgba(255, 193, 7, 0.1);
            color: #ffc107;
            border-color: rgba(255, 193, 7, 0.3);
        }

        .quick-action-item-edit.warning:hover {
            background: #ffc107;
            color: #212529;
            transform: translateY(-2px);
        }

        /* Form Actions */
        .form-actions-minimal {
            display: flex;
            gap: 0.75rem;
            padding-top: 1rem;
            border-top: 1px solid #f0f0f0;
        }

        .btn-submit-minimal {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            background: linear-gradient(135deg, #17a2b8 0%, #138496 100%);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 0.875rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
        }

        .btn-submit-minimal:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(23, 162, 184, 0.3);
        }

        .btn-cancel-minimal {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            background: white;
            color: #6c757d;
            border: 1px solid #e9ecef;
            border-radius: 8px;
            font-size: 0.875rem;
            font-weight: 500;
            text-decoration: none;
            transition: all 0.2s;
        }

        .btn-cancel-minimal:hover {
            background: #f8f9fa;
            color: #495057;
            border-color: #dee2e6;
        }

        /* Responsive */
        @@media (max-width: 767.98px) {
            .form-actions-minimal {
                flex-direction: column;
            }

            .btn-submit-minimal,
            .btn-cancel-minimal {
                width: 100%;
                justify-content: center;
            }

            .quick-actions-grid-edit {
                grid-template-columns: 1fr;
            }
        }
    </style>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Handle form submission to prevent button staying in loading state
            $('form').on('submit', function() {
                const $submitBtn = $(this).find('button[type="submit"]');
                const $form = $(this);
                
                // Add loading state
                $submitBtn.prop('disabled', true);
                $submitBtn.html('<i class="fas fa-spinner fa-spin"></i><span>در حال ذخیره...</span>');
                
                // Remove loading state after a delay (in case of validation errors)
                setTimeout(function() {
                    if ($form.find('.text-danger').length > 0) {
                        $submitBtn.prop('disabled', false);
                        $submitBtn.html('<i class="fas fa-save"></i><span>ذخیره تغییرات</span>');
                    }
                }, 100);
            });
        });
    </script>
}
