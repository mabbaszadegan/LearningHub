@model EduTrack.Application.Features.InteractiveLesson.DTOs.InteractiveLessonWithStagesDto
@{
    ViewData["Title"] = "جزئیات درس تعاملی";
}

<div class="interactive-lesson-details">
    <!-- Header Section -->
    <div class="details-header">
        <div class="header-content">
            <div class="header-icon">
                <i class="fas fa-play-circle"></i>
            </div>
            <div class="header-text">
                <h2>@Model.Title</h2>
                <p>دوره: @Model.CourseTitle</p>
            </div>
        </div>
        <div class="header-actions">
            <a href="@Url.Action("ManageStages", new { interactiveLessonId = Model.Id })" class="btn btn-primary">
                <i class="fas fa-cog"></i>
                مدیریت مراحل
            </a>
            <a href="@Url.Action("ByCourse", new { courseId = Model.CourseId })" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-right"></i>
                بازگشت
            </a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="details-content">
        <div class="row">
            <!-- Lesson Information -->
            <div class="col-md-8">
                <div class="lesson-info-card">
                    <div class="card-header">
                        <h4>اطلاعات درس</h4>
                    </div>
                    <div class="card-body">
                        <div class="info-item">
                            <label>توضیحات:</label>
                            <p>@Model.Description</p>
                        </div>
                        <div class="info-item">
                            <label>ترتیب:</label>
                            <span class="badge bg-primary">@Model.Order</span>
                        </div>
                        <div class="info-item">
                            <label>تاریخ ایجاد:</label>
                            <span>@Model.CreatedAt.ToString("yyyy/MM/dd")</span>
                        </div>
                    </div>
                </div>

                <!-- Stages List -->
                <div class="stages-list-card">
                    <div class="card-header">
                        <h4>مراحل درس</h4>
                        <span class="badge bg-success">@Model.Stages.Count مرحله</span>
                    </div>
                    <div class="card-body">
                        @if (Model.Stages.Any())
                        {
                            <div class="stages-list">
                                @foreach (var stage in Model.Stages.OrderBy(s => s.Order))
                                {
                                    <div class="stage-item">
                                        <div class="stage-header">
                                            <div class="stage-number">@stage.Order</div>
                                            <div class="stage-info">
                                                <h5>@stage.Title</h5>
                                                <p>@stage.Description</p>
                                            </div>
                                            <div class="stage-meta">
                                                <span class="badge bg-info">@stage.StageType</span>
                                                <span class="badge bg-secondary">@stage.ArrangementType</span>
                                            </div>
                                        </div>
                                        @if (!string.IsNullOrEmpty(stage.TextContent))
                                        {
                                            <div class="stage-content">
                                                <div class="content-box">
                                                    @stage.TextContent
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="empty-state">
                                <i class="fas fa-layer-group"></i>
                                <p>هنوز مرحله‌ای تعریف نشده است</p>
                                <a href="@Url.Action("ManageStages", new { interactiveLessonId = Model.Id })" class="btn btn-primary">
                                    <i class="fas fa-plus"></i>
                                    افزودن مرحله
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-md-4">
                <!-- SubChapters -->
                <div class="subchapters-card">
                    <div class="card-header">
                        <h4>زیرمباحث مرتبط</h4>
                        <span class="badge bg-primary">@Model.SubChapters.Count زیرمبحث</span>
                    </div>
                    <div class="card-body">
                        @if (Model.SubChapters.Any())
                        {
                            <div class="subchapters-list">
                                @foreach (var subChapter in Model.SubChapters)
                                {
                                    <div class="subchapter-item">
                                        <h6>@subChapter.Title</h6>
                                        <p>@subChapter.ChapterTitle</p>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="empty-state">
                                <i class="fas fa-folder-open"></i>
                                <p>هیچ زیرمبحثی انتخاب نشده</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- Actions -->
                <div class="actions-card">
                    <div class="card-header">
                        <h4>عملیات</h4>
                    </div>
                    <div class="card-body">
                        <div class="action-buttons">
                            <a href="@Url.Action("ManageStages", new { interactiveLessonId = Model.Id })" class="btn btn-primary btn-block">
                                <i class="fas fa-cog"></i>
                                مدیریت مراحل
                            </a>
                            <a href="@Url.Action("ManageSubChapters", new { interactiveLessonId = Model.Id })" class="btn btn-outline-primary btn-block">
                                <i class="fas fa-folder"></i>
                                مدیریت زیرمباحث
                            </a>
                            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-outline-secondary btn-block">
                                <i class="fas fa-edit"></i>
                                ویرایش درس
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .interactive-lesson-details {
            min-height: 100vh;
            background: #f8f9fa;
            padding: 0;
        }

        .details-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 4px 20px rgba(102, 126, 234, 0.3);
        }

        .header-content {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .header-icon {
            width: 60px;
            height: 60px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
        }

        .header-text h2 {
            margin: 0;
            font-size: 1.75rem;
            font-weight: 700;
        }

        .header-text p {
            margin: 0.5rem 0 0 0;
            opacity: 0.9;
            font-size: 1rem;
        }

        .header-actions {
            display: flex;
            gap: 1rem;
        }

        .details-content {
            padding: 2rem;
        }

        .lesson-info-card,
        .stages-list-card,
        .subchapters-card,
        .actions-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            border: 1px solid #e9ecef;
            margin-bottom: 2rem;
        }

        .card-header {
            padding: 1.5rem;
            border-bottom: 1px solid #e9ecef;
            background: #fafbfc;
            border-radius: 12px 12px 0 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .card-header h4 {
            margin: 0;
            font-size: 1.125rem;
            font-weight: 600;
            color: #2c3e50;
        }

        .card-body {
            padding: 1.5rem;
        }

        .info-item {
            margin-bottom: 1rem;
        }

        .info-item label {
            font-weight: 600;
            color: #2c3e50;
            display: block;
            margin-bottom: 0.5rem;
        }

        .info-item p {
            margin: 0;
            color: #6c757d;
        }

        .stages-list {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .stage-item {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 1rem;
            border: 1px solid #e9ecef;
        }

        .stage-header {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 0.75rem;
        }

        .stage-number {
            width: 30px;
            height: 30px;
            background: #667eea;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
            font-size: 0.875rem;
        }

        .stage-info {
            flex: 1;
        }

        .stage-info h5 {
            margin: 0 0 0.25rem 0;
            font-size: 1rem;
            font-weight: 600;
            color: #2c3e50;
        }

        .stage-info p {
            margin: 0;
            font-size: 0.875rem;
            color: #6c757d;
        }

        .stage-meta {
            display: flex;
            gap: 0.5rem;
        }

        .stage-content {
            margin-top: 0.75rem;
            padding-top: 0.75rem;
            border-top: 1px solid #e9ecef;
        }

        .content-box {
            background: white;
            border-radius: 6px;
            padding: 1rem;
            border: 1px solid #e9ecef;
            font-size: 0.875rem;
            line-height: 1.5;
        }

        .subchapters-list {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
        }

        .subchapter-item {
            background: #f8f9fa;
            border-radius: 6px;
            padding: 0.75rem;
            border: 1px solid #e9ecef;
        }

        .subchapter-item h6 {
            margin: 0 0 0.25rem 0;
            font-size: 0.875rem;
            font-weight: 600;
            color: #2c3e50;
        }

        .subchapter-item p {
            margin: 0;
            font-size: 0.75rem;
            color: #6c757d;
        }

        .action-buttons {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
        }

        .btn-block {
            width: 100%;
            justify-content: center;
        }

        .empty-state {
            text-align: center;
            color: #6c757d;
            padding: 2rem;
        }

        .empty-state i {
            font-size: 2rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }

        .empty-state p {
            margin-bottom: 1rem;
        }

        @@media (max-width: 768px) {
            .details-header {
                padding: 1.5rem;
                flex-direction: column;
                gap: 1rem;
                text-align: center;
            }
            
            .header-actions {
                flex-direction: column;
                width: 100%;
            }
            
            .details-content {
                padding: 1rem;
            }
            
            .stage-header {
                flex-direction: column;
                align-items: stretch;
                gap: 0.75rem;
            }
            
            .stage-meta {
                justify-content: center;
            }
        }
    </style>
}
