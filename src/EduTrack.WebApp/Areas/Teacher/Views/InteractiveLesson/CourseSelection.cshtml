@model List<EduTrack.Domain.Entities.Course>

@{
    ViewData["Title"] = "انتخاب دوره";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-play-circle me-2"></i>مدیریت درس‌های تعاملی
                    </h3>
                    <p class="text-muted mb-0">ابتدا دوره مورد نظر را انتخاب کنید</p>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="row">
                            @foreach (var course in Model)
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="card h-100 course-card">
                                        <div class="card-body text-center">
                                            <div class="course-icon mb-3">
                                                <i class="fas fa-book fa-3x text-primary"></i>
                                            </div>
                                            <h5 class="card-title">@course.Title</h5>
                                            <p class="card-text text-muted">@course.Description</p>
                                            <div class="course-meta mb-3">
                                                <small class="text-muted">
                                                    <i class="fas fa-calendar me-1"></i>
                                                    @course.CreatedAt.ToString("yyyy/MM/dd")
                                                </small>
                                            </div>
                                            <a asp-action="ByCourse" asp-route-courseId="@course.Id" class="btn btn-primary">
                                                <i class="fas fa-play me-1"></i>
                                                مشاهده درس‌های تعاملی
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-book fa-4x text-muted mb-3"></i>
                            <h4 class="text-muted">هیچ دوره‌ای یافت نشد</h4>
                            <p class="text-muted">ابتدا دوره‌ای ایجاد کنید</p>
                            <a asp-area="" asp-controller="Admin" asp-action="Courses" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>
                                ایجاد دوره جدید
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.course-card {
    transition: transform 0.2s ease-in-out;
    border: 1px solid #e3e6f0;
}

.course-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
}

.course-icon {
    opacity: 0.8;
}

.course-card:hover .course-icon {
    opacity: 1;
}
</style>
