@using EduTrack.Application.Common.Models.Courses
@model List<ChapterDto>
@{
    ViewData["Title"] = "مدیریت مباحث";
}

<!-- Filter/Sort Info Bar -->
@if (Model.Any())
{
    <div class="filter-bar-minimal mb-3">
        <div class="filter-group">
            <button class="filter-btn-minimal active" data-filter="all">
                <i class="fas fa-book"></i>
                <span>همه (@Model.Count)</span>
            </button>
            <button class="filter-btn-minimal" data-filter="active">
                <i class="fas fa-check-circle"></i>
                <span>فعال (@Model.Count(c => c.IsActive))</span>
            </button>
            <button class="filter-btn-minimal" data-filter="inactive">
                <i class="fas fa-times-circle"></i>
                <span>غیرفعال (@Model.Count(c => !c.IsActive))</span>
            </button>
        </div>
        <div class="drag-info">
            <i class="fas fa-grip-lines"></i>
            <span>برای تغییر ترتیب، مباحث را بکشید و رها کنید</span>
    </div>
    </div>
}

@if (Model.Any())
{
    <!-- Chapters List with Enhanced Drag & Drop -->
    <div class="chapters-sortable-list" id="chaptersContainer">
        @foreach (var chapter in Model.OrderBy(c => c.Order))
        {
            <div class="chapter-card-draggable" data-chapter-id="@chapter.Id" data-status="@(chapter.IsActive ? "active" : "inactive")" data-is-active="@(chapter.IsActive ? "true" : "false")">
                <!-- Enhanced Drag Handle with Up/Down -->
                <div class="drag-handle-enhanced">
                    <button class="move-btn-chapter move-up" data-chapter-id="@chapter.Id" data-direction="up" title="انتقال به بالا">
                        <i class="fas fa-chevron-up"></i>
                    </button>
                    <div class="drag-lines">
                        <i class="fas fa-grip-lines"></i>
                    </div>
                    <span class="drag-hint">کشیدن</span>
                    <button class="move-btn-chapter move-down" data-chapter-id="@chapter.Id" data-direction="down" title="انتقال به پایین">
                        <i class="fas fa-chevron-down"></i>
                    </button>
                </div>
                
                <!-- Card Content -->
                <div class="chapter-card-content">
                    <!-- Header Section -->
                    <div class="chapter-header-section">
                        <div class="chapter-info">
                            <h3 class="chapter-title-main">@chapter.Title</h3>
                            @if (!string.IsNullOrEmpty(chapter.Description))
                            {
                                <p class="chapter-description">@chapter.Description</p>
                            }
                        </div>
                        <div class="chapter-actions-top">
                            <label class="toggle-switch-minimal" title="فعال/غیرفعال">
                                <input type="checkbox" 
                                       class="toggle-chapter-active" 
                                       data-chapter-id="@chapter.Id" 
                                       @(chapter.IsActive ? "checked" : "") />
                                <span class="toggle-slider-minimal"></span>
                            </label>
                            <div class="dropdown">
                                <button class="btn-icon-minimal" data-bs-toggle="dropdown">
                                    <i class="fas fa-ellipsis-v"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-action="Edit" asp-route-id="@chapter.Id">
                                            <i class="fas fa-edit"></i>ویرایش مبحث
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-action="Delete" asp-route-id="@chapter.Id" method="post" 
                                              onsubmit="return confirm('آیا از حذف این مبحث اطمینان دارید؟')">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="fas fa-trash"></i>حذف مبحث
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                            </div>
                        </div>
                        
                    <!-- Objective Section -->
                    @if (!string.IsNullOrEmpty(chapter.Objective))
                    {
                        <div class="objective-box-minimal">
                            <i class="fas fa-bullseye"></i>
                            <span>@chapter.Objective</span>
                        </div>
                    }
                    
                    <!-- Stats Section -->
                    <div class="chapter-stats-section">
                        <div class="stat-badge">
                            <i class="fas fa-list"></i>
                            <span>@chapter.SubChapterCount زیرمبحث</span>
                        </div>
                        </div>
                        
                    <!-- Sub-chapters List -->
                        @if (chapter.SubChapters.Any())
                        {
                        <div class="subchapters-section">
                            <div class="subchapters-header-main">
                                <span class="subchapters-title-main">
                                    <i class="fas fa-layer-group"></i>
                                    زیرمباحث
                                </span>
                            </div>
                            <div class="subchapters-list-expanded">
                                    @foreach (var subChapter in chapter.SubChapters.OrderBy(sc => sc.Order))
                                    {
                                    <div class="subchapter-card-inline @(!subChapter.IsActive ? "inactive" : "")">
                                        <div class="subchapter-main-info">
                                            <div class="subchapter-icon-circle">
                                                <i class="fas fa-bookmark"></i>
                                            </div>
                                            <div class="subchapter-details">
                                                <span class="subchapter-title-text">@subChapter.Title</span>
                                                <span class="subchapter-meta-text">
                                                    <i class="fas fa-file-alt"></i>
                                                    @subChapter.ContentCount محتوا
                                                </span>
                                            </div>
                                        </div>
                                        <div class="subchapter-actions-inline">
                                            <label class="toggle-switch-mini" title="فعال/غیرفعال">
                                                <input type="checkbox" 
                                                       class="toggle-subchapter-active" 
                                                       data-subchapter-id="@subChapter.Id" 
                                                       @(subChapter.IsActive ? "checked" : "") />
                                                <span class="toggle-slider-mini"></span>
                                            </label>
                                            <a asp-controller="SubChapters" 
                                               asp-action="Edit" 
                                               asp-route-id="@subChapter.Id" 
                                               class="btn-action-inline edit"
                                               title="ویرایش">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-controller="EducationalContent" 
                                               asp-action="Index" 
                                               asp-route-subChapterId="@subChapter.Id" 
                                               class="btn-action-inline content"
                                               title="مدیریت محتوا">
                                                <i class="fas fa-folder-open"></i>
                                            </a>
                                        </div>
                                    </div>
                                    }
                                </div>
                            </div>
                        }
                    
                    <!-- Action Buttons -->
                    <div class="chapter-actions-footer">
                        <a asp-controller="SubChapters" asp-action="Create" asp-route-chapterId="@chapter.Id" class="action-btn-footer primary">
                            <i class="fas fa-plus"></i>
                            <span>افزودن زیرمبحث</span>
                        </a>
                        @if (chapter.SubChapters.Any())
                        {
                            <a asp-action="Index" asp-controller="SubChapters" asp-route-chapterId="@chapter.Id" class="action-btn-footer success">
                                <i class="fas fa-tasks"></i>
                                <span>مدیریت زیرمباحث</span>
                            </a>
                        }
                        <a asp-action="Edit" asp-route-id="@chapter.Id" class="action-btn-footer info">
                            <i class="fas fa-edit"></i>
                            <span>ویرایش</span>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <!-- Empty State -->
    <div class="empty-state-minimal">
        <div class="empty-icon">
            <i class="fas fa-book-open"></i>
        </div>
        <h3>هنوز مبحثی اضافه نشده</h3>
        <p>برای شروع، اولین مبحث دوره را ایجاد کنید</p>
        <a asp-action="Create" asp-route-courseId="@ViewBag.CourseId" class="btn-action-primary">
            <i class="fas fa-plus"></i>
            <span>افزودن مبحث جدید</span>
        </a>
    </div>
}

