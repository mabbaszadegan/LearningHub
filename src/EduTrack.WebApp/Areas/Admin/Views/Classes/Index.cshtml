@model EduTrack.WebApp.Models.ClassManagementViewModel
@{
    ViewData["Title"] = "مدیریت کلاس‌ها";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0 text-gray-800">مدیریت کلاس‌ها</h1>
                    <p class="mb-0 text-muted">مدیریت و نظارت بر کلاس‌های آموزشی</p>
                </div>
                <div>
                    <a href="@Url.Action("Create", "Classroom")" class="btn btn-primary">
                        <i class="fas fa-plus"></i> ایجاد کلاس جدید
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filter -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-body">
                    <form method="get" class="row">
                        <div class="col-md-4 mb-3">
                            <label for="search" class="form-label">جستجو</label>
                            <input type="text" class="form-control" id="search" name="search" 
                                   value="@Model.Search" placeholder="نام کلاس، دوره یا معلم">
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="isActive" class="form-label">وضعیت</label>
                            <select class="form-control" id="isActive" name="isActive">
                                <option value="">همه کلاس‌ها</option>
                                <option value="true" selected="@(Model.IsActive == true)">فعال</option>
                                <option value="false" selected="@(Model.IsActive == false)">غیرفعال</option>
                            </select>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="pageSize" class="form-label">تعداد در صفحه</label>
                            <select class="form-control" id="pageSize" name="pageSize">
                                <option value="10" selected="@(Model.PageSize == 10)">10</option>
                                <option value="20" selected="@(Model.PageSize == 20)">20</option>
                                <option value="50" selected="@(Model.PageSize == 50)">50</option>
                                <option value="100" selected="@(Model.PageSize == 100)">100</option>
                            </select>
                        </div>
                        <div class="col-md-2 mb-3">
                            <label class="form-label">&nbsp;</label>
                            <div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search"></i> جستجو
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Classes Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        لیست کلاس‌ها (@Model.TotalClasses کلاس)
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.Classes.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered" id="classesTable">
                                <thead>
                                    <tr>
                                        <th>نام کلاس</th>
                                        <th>دوره</th>
                                        <th>معلم</th>
                                        <th>تعداد دانش‌آموز</th>
                                        <th>تاریخ شروع</th>
                                        <th>تاریخ پایان</th>
                                        <th>وضعیت</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var classItem in Model.Classes)
                                    {
                                        <tr id="class-@classItem.Id">
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="mr-3">
                                                        <div class="icon-circle bg-@(classItem.IsActive ? "success" : "secondary")">
                                                            <i class="fas fa-school text-white"></i>
                                                        </div>
                                                    </div>
                                                    <div>
                                                        <div class="font-weight-bold">@classItem.Name</div>
                                                        <div class="text-muted small">شناسه: @classItem.Id</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="font-weight-bold">@classItem.Course.Title</div>
                                                <div class="text-muted small">شناسه دوره: @classItem.CourseId</div>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="mr-3">
                                                        <div class="icon-circle bg-warning">
                                                            <i class="fas fa-chalkboard-teacher text-white"></i>
                                                        </div>
                                                    </div>
                                                    <div>
                                                        <div class="font-weight-bold">@classItem.Teacher.FullName</div>
                                                        <div class="text-muted small">@classItem.Teacher.Email</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge badge-info badge-lg">@classItem.Enrollments.Count</span>
                                                <div class="text-muted small">دانش‌آموز</div>
                                            </td>
                                            <td>@classItem.StartDate.ToString("yyyy/MM/dd")</td>
                                            <td>
                                                @if (classItem.EndDate.HasValue)
                                                {
                                                    @classItem.EndDate.Value.ToString("yyyy/MM/dd")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">نامحدود</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge badge-@(classItem.IsActive ? "success" : "secondary")" id="status-@classItem.Id">
                                                    @(classItem.IsActive ? "فعال" : "غیرفعال")
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("ClassDetails", "Admin", new { id = classItem.Id })" 
                                                       class="btn btn-sm btn-outline-info" title="جزئیات">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("Details", "Classroom", new { id = classItem.Id })" 
                                                       class="btn btn-sm btn-outline-primary" title="مشاهده کلاس" target="_blank">
                                                        <i class="fas fa-external-link-alt"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-outline-warning" 
                                                            onclick="showEnrollmentModal(@classItem.Id, '@classItem.Name')" title="مدیریت ثبت‌نام">
                                                        <i class="fas fa-user-plus"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        @if (Model.TotalPages > 1)
                        {
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-center">
                                    @if (Model.CurrentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Classes", "Admin", new { search = Model.Search, isActive = Model.IsActive, page = Model.CurrentPage - 1, pageSize = Model.PageSize })">قبلی</a>
                                        </li>
                                    }

                                    @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                                    {
                                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                            <a class="page-link" href="@Url.Action("Classes", "Admin", new { search = Model.Search, isActive = Model.IsActive, page = i, pageSize = Model.PageSize })">@i</a>
                                        </li>
                                    }

                                    @if (Model.CurrentPage < Model.TotalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Classes", "Admin", new { search = Model.Search, isActive = Model.IsActive, page = Model.CurrentPage + 1, pageSize = Model.PageSize })">بعدی</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-school fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">کلاسی یافت نشد</h5>
                            <p class="text-muted">با فیلترهای مختلف جستجو کنید یا کلاس جدیدی ایجاد کنید.</p>
                            <a href="@Url.Action("Create", "Classroom")" class="btn btn-primary">
                                <i class="fas fa-plus"></i> ایجاد کلاس جدید
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics -->
    @if (Model.Classes.Any())
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">آمار کلاس‌ها</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="text-center">
                                    <div class="h4 mb-0 font-weight-bold text-primary">@Model.Classes.Count(c => c.IsActive)</div>
                                    <div class="text-xs font-weight-bold text-uppercase text-muted">کلاس‌های فعال</div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <div class="h4 mb-0 font-weight-bold text-success">@Model.Classes.Sum(c => c.Enrollments.Count)</div>
                                    <div class="text-xs font-weight-bold text-uppercase text-muted">کل ثبت‌نام‌ها</div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <div class="h4 mb-0 font-weight-bold text-info">@Model.Classes.Select(c => c.TeacherId).Distinct().Count()</div>
                                    <div class="text-xs font-weight-bold text-uppercase text-muted">معلمان فعال</div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <div class="h4 mb-0 font-weight-bold text-warning">@(Model.Classes.Any() ? Math.Round(Model.Classes.Average(c => c.Enrollments.Count), 1) : 0)</div>
                                    <div class="text-xs font-weight-bold text-uppercase text-muted">میانگین ثبت‌نام</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Enrollment Management Modal -->
<div class="modal fade" id="enrollmentModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">مدیریت ثبت‌نام کلاس</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body" id="enrollmentContent">
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="sr-only">در حال بارگذاری...</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">بستن</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showEnrollmentModal(classId, className) {
            $('#enrollmentModal .modal-title').text('مدیریت ثبت‌نام کلاس: ' + className);
            $('#enrollmentModal').modal('show');
            
            // Load enrollment details via AJAX
            $.get('@Url.Action("ClassDetails", "Admin")/' + classId)
                .done(function(data) {
                    $('#enrollmentContent').html(data);
                })
                .fail(function() {
                    $('#enrollmentContent').html('<p class="text-danger">خطا در بارگذاری اطلاعات کلاس.</p>');
                });
        }

        function showAlert(type, message) {
            var alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
            var alertHtml = `
                <div class="alert ${alertClass} alert-dismissible fade show" role="alert">
                    ${message}
                    <button type="button" class="close" data-dismiss="alert">
                        <span>&times;</span>
                    </button>
                </div>
            `;
            
            // Remove existing alerts
            $('.alert').remove();
            
            // Add new alert at the top of the container
            $('.container-fluid').prepend(alertHtml);
            
            // Auto-dismiss after 5 seconds
            setTimeout(function() {
                $('.alert').fadeOut();
            }, 5000);
        }

        // Show success message if exists
        @if (TempData["Success"] != null)
        {
            <text>
            $(document).ready(function() {
                showAlert('success', '@TempData["Success"]');
            });
            </text>
        }
    </script>
}

<style>
    .icon-circle {
        height: 2.5rem;
        width: 2.5rem;
        border-radius: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .badge-lg {
        font-size: 1rem;
        padding: 0.5rem 0.75rem;
    }
    
    .text-gray-800 {
        color: #5a5c69 !important;
    }
</style>
