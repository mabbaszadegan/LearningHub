@model EduTrack.WebApp.Models.AnalyticsViewModel
@{
    ViewData["Title"] = "آمار و تحلیل";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0 text-gray-800">آمار و تحلیل سیستم</h1>
                    <p class="mb-0 text-muted">تحلیل جامع عملکرد و فعالیت‌های سیستم</p>
                </div>
                <div>
                    <button type="button" class="btn btn-info" onclick="refreshAnalytics()">
                        <i class="fas fa-sync-alt"></i> بروزرسانی
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- User Statistics -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">آمار کاربران</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-primary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                کل کاربران
                                            </div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.UserStats.TotalUsers</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-users fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-success shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                                کاربران فعال
                                            </div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.UserStats.ActiveUsers</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-user-check fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-warning shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                                معلمان
                                            </div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.UserStats.TotalTeachers</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-chalkboard-teacher fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-info shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                                دانش‌آموزان
                                            </div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.UserStats.TotalStudents</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-user-graduate fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Course and Class Statistics -->
    <div class="row mb-4">
        <div class="col-lg-6">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">آمار دوره‌ها</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6 mb-3">
                            <div class="text-center">
                                <div class="h4 mb-0 font-weight-bold text-primary">@Model.CourseStats.TotalCourses</div>
                                <div class="text-xs font-weight-bold text-uppercase text-muted">کل دوره‌ها</div>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="text-center">
                                <div class="h4 mb-0 font-weight-bold text-success">@Model.CourseStats.ActiveCourses</div>
                                <div class="text-xs font-weight-bold text-uppercase text-muted">دوره‌های فعال</div>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="text-center">
                                <div class="h4 mb-0 font-weight-bold text-info">@Model.CourseStats.TotalModules</div>
                                <div class="text-xs font-weight-bold text-uppercase text-muted">کل ماژول‌ها</div>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="text-center">
                                <div class="h4 mb-0 font-weight-bold text-warning">@Model.CourseStats.TotalLessons</div>
                                <div class="text-xs font-weight-bold text-uppercase text-muted">کل درس‌ها</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">آمار کلاس‌ها</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6 mb-3">
                            <div class="text-center">
                                <div class="h4 mb-0 font-weight-bold text-primary">@Model.ClassStats.TotalClasses</div>
                                <div class="text-xs font-weight-bold text-uppercase text-muted">کل کلاس‌ها</div>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="text-center">
                                <div class="h4 mb-0 font-weight-bold text-success">@Model.ClassStats.ActiveClasses</div>
                                <div class="text-xs font-weight-bold text-uppercase text-muted">کلاس‌های فعال</div>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="text-center">
                                <div class="h4 mb-0 font-weight-bold text-info">@Model.ClassStats.TotalEnrollments</div>
                                <div class="text-xs font-weight-bold text-uppercase text-muted">کل ثبت‌نام‌ها</div>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="text-center">
                                <div class="h4 mb-0 font-weight-bold text-warning">@Model.ClassStats.ActiveEnrollments</div>
                                <div class="text-xs font-weight-bold text-uppercase text-muted">ثبت‌نام‌های فعال</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Activity Statistics -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">آمار فعالیت‌ها</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-dark shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-dark text-uppercase mb-1">
                                                کل فعالیت‌ها
                                            </div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ActivityStats.TotalActivities</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-history fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-success shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                                این هفته
                                            </div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ActivityStats.ActivitiesThisWeek</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-calendar-week fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-info shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                                این ماه
                                            </div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ActivityStats.ActivitiesThisMonth</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-calendar-alt fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-warning shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                                کاربران فعال
                                            </div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ActivityStats.UniqueActiveUsersThisWeek</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-user-clock fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Lists -->
    <div class="row mb-4">
        <!-- Top Users -->
        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">فعال‌ترین کاربران</h6>
                </div>
                <div class="card-body">
                    @if (Model.TopUsers.Any())
                    {
                        @foreach (var user in Model.TopUsers.Take(5))
                        {
                            <div class="d-flex align-items-center mb-3">
                                <div class="mr-3">
                                    <div class="icon-circle bg-primary">
                                        <i class="fas fa-user text-white"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="font-weight-bold">@user.Name</div>
                                    <div class="progress">
                                        <div class="progress-bar bg-primary" role="progressbar" 
                                             style="width: @(Model.TopUsers.Max(u => u.Count) > 0 ? (user.Count * 100 / Model.TopUsers.Max(u => u.Count)) : 0)%">
                                        </div>
                                    </div>
                                </div>
                                <div class="ml-2">
                                    <span class="badge badge-primary">@user.Count</span>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">داده‌ای موجود نیست</p>
                    }
                </div>
            </div>
        </div>

        <!-- Top Courses -->
        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">محبوب‌ترین دوره‌ها</h6>
                </div>
                <div class="card-body">
                    @if (Model.TopCourses.Any())
                    {
                        @foreach (var course in Model.TopCourses.Take(5))
                        {
                            <div class="d-flex align-items-center mb-3">
                                <div class="mr-3">
                                    <div class="icon-circle bg-success">
                                        <i class="fas fa-book text-white"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="font-weight-bold">@course.Name</div>
                                    <div class="progress">
                                        <div class="progress-bar bg-success" role="progressbar" 
                                             style="width: @(Model.TopCourses.Max(c => c.Count) > 0 ? (course.Count * 100 / Model.TopCourses.Max(c => c.Count)) : 0)%">
                                        </div>
                                    </div>
                                </div>
                                <div class="ml-2">
                                    <span class="badge badge-success">@course.Count</span>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">داده‌ای موجود نیست</p>
                    }
                </div>
            </div>
        </div>

        <!-- Top Classes -->
        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">پرطرفدارترین کلاس‌ها</h6>
                </div>
                <div class="card-body">
                    @if (Model.TopClasses.Any())
                    {
                        @foreach (var classItem in Model.TopClasses.Take(5))
                        {
                            <div class="d-flex align-items-center mb-3">
                                <div class="mr-3">
                                    <div class="icon-circle bg-info">
                                        <i class="fas fa-school text-white"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="font-weight-bold">@classItem.Name</div>
                                    <div class="progress">
                                        <div class="progress-bar bg-info" role="progressbar" 
                                             style="width: @(Model.TopClasses.Max(c => c.Count) > 0 ? (classItem.Count * 100 / Model.TopClasses.Max(c => c.Count)) : 0)%">
                                        </div>
                                    </div>
                                </div>
                                <div class="ml-2">
                                    <span class="badge badge-info">@classItem.Count</span>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">داده‌ای موجود نیست</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">آخرین فعالیت‌ها</h6>
                </div>
                <div class="card-body">
                    @if (Model.RecentActivity.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>کاربر</th>
                                        <th>عملیات</th>
                                        <th>جزئیات</th>
                                        <th>زمان</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var activity in Model.RecentActivity.Take(10))
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="mr-3">
                                                        <div class="icon-circle bg-@(activity.User.Role == UserRole.Admin ? "danger" : activity.User.Role == UserRole.Teacher ? "warning" : "info")">
                                                            <i class="fas fa-@(activity.User.Role == UserRole.Admin ? "user-shield" : activity.User.Role == UserRole.Teacher ? "chalkboard-teacher" : "user-graduate") text-white"></i>
                                                        </div>
                                                    </div>
                                                    <div>
                                                        <div class="font-weight-bold">@activity.User.FullName</div>
                                                        <div class="text-muted small">@activity.User.Role.ToString()</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge badge-secondary">@activity.Action</span>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(activity.Details))
                                                {
                                                    <span class="text-muted">@activity.Details</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>@activity.Timestamp.ToString("yyyy/MM/dd HH:mm")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="text-center mt-3">
                            <a href="@Url.Action("ActivityLogs", "Admin")" class="btn btn-outline-primary">
                                <i class="fas fa-history"></i> مشاهده همه فعالیت‌ها
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-history fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">فعالیتی ثبت نشده است</h5>
                            <p class="text-muted">هنوز فعالیتی در سیستم انجام نشده است.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function refreshAnalytics() {
            location.reload();
        }

        // Auto refresh every 5 minutes
        setInterval(function() {
            refreshAnalytics();
        }, 300000);
    </script>
}

<style>
    .icon-circle {
        height: 2.5rem;
        width: 2.5rem;
        border-radius: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .border-left-primary {
        border-left: 0.25rem solid #4e73df !important;
    }
    
    .border-left-success {
        border-left: 0.25rem solid #1cc88a !important;
    }
    
    .border-left-info {
        border-left: 0.25rem solid #36b9cc !important;
    }
    
    .border-left-warning {
        border-left: 0.25rem solid #f6c23e !important;
    }
    
    .border-left-dark {
        border-left: 0.25rem solid #5a5c69 !important;
    }
    
    .text-gray-800 {
        color: #5a5c69 !important;
    }
    
    .text-gray-300 {
        color: #dddfeb !important;
    }
</style>
