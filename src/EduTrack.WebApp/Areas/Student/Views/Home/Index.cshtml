@model EduTrack.WebApp.Models.StudentDashboardViewModel
@{
    ViewData["Title"] = "صفحه خانه";
}

@section Styles {
    <link rel="stylesheet" href="~/css/areas/student/home-page.css" asp-append-version="true" />
}

<div class="content-container">
    <div class="dashboard-section"
         data-dashboard-endpoint="@Url.Action("RecentCoursesSection", "Home", new { area = "Student" })"
         data-dashboard-type="recent-courses">
        <div class="dashboard-section-loading">
            <div class="spinner-border spinner-border-sm text-primary" role="status">
                <span class="visually-hidden">در حال بارگذاری...</span>
            </div>
            <span>در حال بارگذاری دوره‌های اخیر...</span>
        </div>
    </div>

    <div class="dashboard-section"
         data-dashboard-endpoint="@Url.Action("EnrolledCoursesSection", "Home", new { area = "Student" })"
         data-dashboard-type="enrolled-courses">
        <div class="dashboard-section-loading">
            <div class="spinner-border spinner-border-sm text-primary" role="status">
                <span class="visually-hidden">در حال بارگذاری...</span>
            </div>
            <span>در حال بارگذاری دوره‌های ثبت‌نام شده...</span>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/areas/student/home-page.js" asp-append-version="true"></script>
}