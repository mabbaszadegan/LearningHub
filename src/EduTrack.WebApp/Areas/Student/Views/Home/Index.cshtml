@model EduTrack.WebApp.Models.StudentDashboardViewModel
@{
    ViewData["Title"] = "داشبورد دانش‌آموز";
}

@section Styles {
    <link rel="stylesheet" href="~/css/areas/student/buttons.css" asp-append-version="true" />
}

<div class="content-container">
    <!-- Welcome Section -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-home me-2"></i>
            خوش آمدید، @Model.StudentName!
        </div>
        <div class="card-body">
            <p class="mb-3">آماده یادگیری و کسب دانش جدید هستید؟</p>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="stat-item">
                        <i class="fas fa-book-open text-primary"></i>
                        <div>
                            <div class="stat-number">@Model.CompletedLessons</div>
                            <div class="stat-label">درس تکمیل شده</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="stat-item">
                        <i class="fas fa-graduation-cap text-success"></i>
                        <div>
                            <div class="stat-number">@Model.TotalClasses</div>
                            <div class="stat-label">کل کلاس‌ها</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-bolt me-2"></i>
            دسترسی سریع
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <a href="@Url.Action("Index", "Catalog")" class="btn-continue w-100">
                        <i class="fas fa-graduation-cap"></i>
                        مشاهده دوره‌ها
                    </a>
                </div>
                <div class="col-md-6 mb-3">
                    <a href="@Url.Action("Index", "Course")" class="btn-secondary-action w-100">
                        <i class="fas fa-book-open"></i>
                        دوره‌های من
                    </a>
                </div>
                <div class="col-md-6 mb-3">
                    <a href="@Url.Action("MyProgress", "Home")" class="btn-success-action w-100">
                        <i class="fas fa-chart-line"></i>
                        پیشرفت من
                    </a>
                </div>
                <div class="col-md-6 mb-3">
                    <a href="@Url.Action("Index", "Profile")" class="btn-warning-action w-100">
                        <i class="fas fa-user-circle"></i>
                        پروفایل
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Classes -->
    <div class="card">
        <div class="card-header">
            <i class="fas fa-book-open me-2"></i>
            کلاس‌های اخیر
        </div>
        <div class="card-body">
            @if (Model.RecentClasses != null && Model.RecentClasses.Any())
            {
                @foreach (var enrollment in Model.RecentClasses.Take(3))
                {
                    <div class="course-item mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">کلاس اخیر</h6>
                                <small class="text-muted">آخرین فعالیت</small>
                            </div>
                            <div>
                                <a href="@Url.Action("Index", "Course")" class="btn-continue btn-sm">
                                    <i class="fas fa-play"></i>
                                    ادامه
                                </a>
                            </div>
                        </div>
                    </div>
                }
                
                <div class="text-center mt-3">
                    <a href="@Url.Action("Index", "Course")" class="btn-secondary-action">
                        <i class="fas fa-list"></i>
                        مشاهده همه کلاس‌ها
                    </a>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <i class="fas fa-book-open"></i>
                    <h5>کلاسی ندارید</h5>
                    <p>هنوز در هیچ کلاسی ثبت‌نام نکرده‌اید</p>
                    <a href="@Url.Action("Index", "Catalog")" class="btn-continue">
                        <i class="fas fa-graduation-cap"></i>
                        مشاهده دوره‌ها
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize bottom navigation
            if (window.bottomNavigation) {
                window.bottomNavigation.setActivePage('home');
            }
        });
    </script>
}