@model EduTrack.Application.Common.Models.DashboardViewModel
@{
    ViewData["Title"] = "داشبورد دانش‌آموز";
}

<!-- Student Welcome Header -->
<div class="dashboard-header bg-gradient-primary text-white py-4 mb-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <div class="d-flex align-items-center">
                    <div class="dashboard-avatar me-3">
                        <i class="fas fa-user-graduate"></i>
                    </div>
                    <div>
                        <h1 class="h3 mb-1">خوش آمدید، دانش‌آموز عزیز!</h1>
                        <p class="mb-0 opacity-75">آماده یادگیری و کسب دانش جدید هستید؟</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 text-end">
                <div class="dashboard-time">
                    <div class="time-display" id="currentTime"></div>
                    <div class="date-display" id="currentDate"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <!-- Student Progress Stats -->
    <div class="row mb-5">
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="stats-card student-stats">
                <div class="stats-card-header">
                    <div class="dashboard-card-icon primary">
                        <i class="fas fa-book-open"></i>
                    </div>
                    <div class="stats-trend positive">
                        <i class="fas fa-arrow-up"></i>
                        <span>+@(Model.CompletedCourses)</span>
                    </div>
                </div>
                <div class="stats-content">
                    <div class="stats-number">@Model.CompletedCourses</div>
                    <div class="stats-label">دوره تکمیل شده</div>
                    <div class="stats-description">از @Model.TotalCourses دوره</div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="stats-card student-stats">
                <div class="stats-card-header">
                    <div class="dashboard-card-icon success">
                        <i class="fas fa-play-circle"></i>
                    </div>
                    <div class="stats-trend positive">
                        <i class="fas fa-arrow-up"></i>
                        <span>+@(Model.CompletedLessons)</span>
                    </div>
                </div>
                <div class="stats-content">
                    <div class="stats-number">@Model.CompletedLessons</div>
                    <div class="stats-label">درس مطالعه شده</div>
                    <div class="stats-description">از @Model.TotalLessons درس</div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="stats-card student-stats">
                <div class="stats-card-header">
                    <div class="dashboard-card-icon warning">
                        <i class="fas fa-clipboard-check"></i>
                    </div>
                    <div class="stats-trend positive">
                        <i class="fas fa-arrow-up"></i>
                        <span>+@(Model.CompletedExams)</span>
                    </div>
                </div>
                <div class="stats-content">
                    <div class="stats-number">@Model.CompletedExams</div>
                    <div class="stats-label">آزمون پاس شده</div>
                    <div class="stats-description">از @Model.RecentExams.TotalCount آزمون</div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="stats-card student-stats">
                <div class="stats-card-header">
                    <div class="dashboard-card-icon info">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <div class="stats-trend positive">
                        <i class="fas fa-arrow-up"></i>
                        <span>@(Model.OverallProgress.ToString("F1"))%</span>
                    </div>
                </div>
                <div class="stats-content">
                    <div class="stats-number">@(Model.OverallProgress.ToString("F1"))%</div>
                    <div class="stats-label">پیشرفت کلی</div>
                    <div class="stats-description">میانگین عملکرد</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Dashboard Content -->
    <div class="row">
        <!-- Left Column - Main Content -->
        <div class="col-lg-8">
            <!-- Student Quick Actions -->
            <div class="dashboard-panel mb-4">
                <div class="panel-header">
                    <h3 class="panel-title">
                        <i class="fas fa-rocket me-2"></i>عملیات سریع
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="row g-3">
                        <div class="col-md-3 col-sm-6">
                            <a asp-controller="Catalog" asp-action="Index" class="quick-action-card student-action">
                                <div class="quick-action-icon primary">
                                    <i class="fas fa-book"></i>
                                </div>
                                <div class="quick-action-text">مرور دوره‌ها</div>
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <a asp-controller="Exam" asp-action="Index" class="quick-action-card student-action">
                                <div class="quick-action-icon success">
                                    <i class="fas fa-clipboard-list"></i>
                                </div>
                                <div class="quick-action-text">شرکت در آزمون</div>
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <a asp-controller="Progress" asp-action="Index" class="quick-action-card student-action">
                                <div class="quick-action-icon warning">
                                    <i class="fas fa-chart-line"></i>
                                </div>
                                <div class="quick-action-text">پیگیری پیشرفت</div>
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <a asp-controller="Classroom" asp-action="Index" class="quick-action-card student-action">
                                <div class="quick-action-icon info">
                                    <i class="fas fa-users"></i>
                                </div>
                                <div class="quick-action-text">کلاس‌های من</div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Available Courses -->
            <div class="dashboard-panel mb-4">
                <div class="panel-header">
                    <h3 class="panel-title">
                        <i class="fas fa-graduation-cap me-2"></i>دوره‌های پیشنهادی
                    </h3>
                    <a asp-controller="Catalog" asp-action="Index" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-eye me-1"></i>مشاهده همه
                    </a>
                </div>
                <div class="panel-body">
                    @if (Model.Courses.Items.Any())
                    {
                        <div class="row g-3">
                            @foreach (var course in Model.Courses.Items.Take(4))
                            {
                                <div class="col-md-6">
                                    <div class="course-card student-course">
                                        <div class="course-card-header">
                                            <div class="course-card-image">
                                                <i class="fas fa-graduation-cap"></i>
                                            </div>
                                            <div class="course-status-badge">
                                                <span class="badge badge-primary">جدید</span>
                                            </div>
                                        </div>
                                        <div class="course-card-content">
                                            <h4 class="course-title">@course.Title</h4>
                                            <p class="course-description">@course.Description</p>
                                            <div class="course-progress">
                                                <div class="progress">
                                                    <div class="progress-bar" style="width: 0%"></div>
                                                </div>
                                                <small class="text-muted">آماده شروع</small>
                                            </div>
                                            <div class="course-stats">
                                                <div class="course-stat">
                                                    <div class="course-stat-number">@course.ModuleCount</div>
                                                    <div class="course-stat-label">ماژول</div>
                                                </div>
                                                <div class="course-stat">
                                                    <div class="course-stat-number">@course.LessonCount</div>
                                                    <div class="course-stat-label">درس</div>
                                                </div>
                                                <div class="course-stat">
                                                    <a asp-controller="Catalog" asp-action="Details" asp-route-id="@course.Id" class="btn btn-primary btn-sm">
                                                        <i class="fas fa-play me-1"></i>شروع
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="empty-state-icon">
                                <i class="fas fa-book-open"></i>
                            </div>
                            <h4 class="empty-state-title">هنوز دوره‌ای موجود نیست</h4>
                            <p class="empty-state-description">به زودی دوره‌های جدید اضافه خواهند شد.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <!-- Right Sidebar -->
        <div class="col-lg-4">
            <!-- Learning Progress -->
            <div class="dashboard-panel mb-4">
                <div class="panel-header">
                    <h3 class="panel-title">
                        <i class="fas fa-chart-pie me-2"></i>پیشرفت یادگیری
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="progress-circle-container">
                        <div class="progress-circle" data-progress="@Model.OverallProgress">
                            <div class="progress-circle-inner">
                                <div class="progress-percentage">@(Model.OverallProgress.ToString("F0"))%</div>
                                <div class="progress-label">پیشرفت کلی</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="progress-details">
                        <div class="progress-item">
                            <div class="progress-info">
                                <div class="progress-label">دوره‌های تکمیل شده</div>
                                <div class="progress-value">@Model.CompletedCourses از @Model.TotalCourses</div>
                            </div>
                            <div class="progress-bar-container">
                                <div class="progress-bar" style="width: @(Model.TotalCourses > 0 ? (Model.CompletedCourses * 100 / Model.TotalCourses) : 0)%"></div>
                            </div>
                        </div>
                        <div class="progress-item">
                            <div class="progress-info">
                                <div class="progress-label">درس‌های مطالعه شده</div>
                                <div class="progress-value">@Model.CompletedLessons از @Model.TotalLessons</div>
                            </div>
                            <div class="progress-bar-container">
                                <div class="progress-bar" style="width: @(Model.TotalLessons > 0 ? (Model.CompletedLessons * 100 / Model.TotalLessons) : 0)%"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Upcoming Exams -->
            <div class="dashboard-panel mb-4">
                <div class="panel-header">
                    <h3 class="panel-title">
                        <i class="fas fa-calendar-alt me-2"></i>آزمون‌های پیش رو
                    </h3>
                </div>
                <div class="panel-body">
                    @if (Model.RecentExams.Items.Any())
                    {
                        <div class="exam-list">
                            @foreach (var exam in Model.RecentExams.Items.Take(3))
                            {
                                <div class="exam-item">
                                    <div class="exam-icon">
                                        <i class="fas fa-clipboard-list"></i>
                                    </div>
                                    <div class="exam-info">
                                        <div class="exam-title">@exam.Title</div>
                                        <div class="exam-details">
                                            <span class="exam-duration">@exam.DurationMinutes دقیقه</span>
                                            <span class="exam-questions">@exam.QuestionCount سوال</span>
                                        </div>
                                    </div>
                                    <div class="exam-action">
                                        <a asp-controller="Exam" asp-action="Details" asp-route-id="@exam.Id" class="btn btn-sm btn-outline-primary">
                                            شرکت
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state-small">
                            <i class="fas fa-calendar-check"></i>
                            <p>آزمونی در دسترس نیست</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Study Tips -->
            <div class="dashboard-panel mb-4">
                <div class="panel-header">
                    <h3 class="panel-title">
                        <i class="fas fa-lightbulb me-2"></i>نکات مطالعه
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="tips-list">
                        <div class="tip-item">
                            <div class="tip-icon">
                                <i class="fas fa-clock"></i>
                            </div>
                            <div class="tip-text">روزانه حداقل 30 دقیقه مطالعه کنید</div>
                        </div>
                        <div class="tip-item">
                            <div class="tip-icon">
                                <i class="fas fa-notes-medical"></i>
                            </div>
                            <div class="tip-text">یادداشت‌برداری را فراموش نکنید</div>
                        </div>
                        <div class="tip-item">
                            <div class="tip-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="tip-text">با همکلاسی‌ها گروه مطالعه تشکیل دهید</div>
                        </div>
                        <div class="tip-item">
                            <div class="tip-icon">
                                <i class="fas fa-question-circle"></i>
                            </div>
                            <div class="tip-text">از پرسیدن سوال نترسید</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Student-specific styles */
        .student-stats {
            border-left: 4px solid #007bff;
        }

        .student-action:hover {
            background: linear-gradient(135deg, #007bff, #0056b3);
            color: white;
        }

        .student-course {
            border: 2px solid transparent;
            transition: all 0.3s ease;
        }

        .student-course:hover {
            border-color: #007bff;
            transform: translateY(-5px);
        }

        .progress-circle-container {
            display: flex;
            justify-content: center;
            margin-bottom: 2rem;
        }

        .progress-circle {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            background: conic-gradient(#007bff 0deg, #007bff calc(var(--progress) * 3.6deg), #e9ecef calc(var(--progress) * 3.6deg), #e9ecef 360deg);
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        .progress-circle-inner {
            width: 90px;
            height: 90px;
            border-radius: 50%;
            background: white;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

        .progress-percentage {
            font-size: 1.5rem;
            font-weight: 700;
            color: #007bff;
        }

        .progress-label {
            font-size: 0.75rem;
            color: #6c757d;
        }

        .exam-list {
            space-y: 1rem;
        }

        .exam-item {
            display: flex;
            align-items: center;
            padding: 1rem;
            background: #f8f9fa;
            border-radius: 10px;
            margin-bottom: 1rem;
        }

        .exam-icon {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            background: #007bff;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-left: 1rem;
        }

        .exam-info {
            flex: 1;
        }

        .exam-title {
            font-weight: 600;
            margin-bottom: 0.25rem;
        }

        .exam-details {
            font-size: 0.875rem;
            color: #6c757d;
        }

        .exam-duration,
        .exam-questions {
            margin-left: 1rem;
        }

        .tips-list {
            space-y: 1rem;
        }

        .tip-item {
            display: flex;
            align-items: center;
            padding: 0.75rem;
            background: #f8f9fa;
            border-radius: 8px;
            margin-bottom: 0.75rem;
        }

        .tip-icon {
            width: 32px;
            height: 32px;
            border-radius: 8px;
            background: #28a745;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-left: 0.75rem;
            font-size: 0.875rem;
        }

        .tip-text {
            font-size: 0.875rem;
            color: #333;
        }

        .empty-state-small {
            text-align: center;
            padding: 2rem 1rem;
            color: #6c757d;
        }

        .empty-state-small i {
            font-size: 2rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Update time and date
            function updateDateTime() {
                const now = new Date();
                const timeString = now.toLocaleTimeString('fa-IR', { 
                    hour: '2-digit', 
                    minute: '2-digit',
                    second: '2-digit'
                });
                const dateString = now.toLocaleDateString('fa-IR', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                });
                
                $('#currentTime').text(timeString);
                $('#currentDate').text(dateString);
            }
            
            updateDateTime();
            setInterval(updateDateTime, 1000);

            // Animate progress circle
            $('.progress-circle').each(function() {
                const progress = $(this).data('progress');
                $(this).css('--progress', progress);
            });

            // Animate stats cards
            $('.stats-card').each(function(index) {
                $(this).css('animation-delay', (index * 0.1) + 's');
                $(this).addClass('animate-fade-in-up');
            });

            // Animate course cards
            $('.course-card').each(function(index) {
                $(this).css('animation-delay', (index * 0.1) + 's');
                $(this).addClass('animate-fade-in-up');
            });
        });
    </script>
}
