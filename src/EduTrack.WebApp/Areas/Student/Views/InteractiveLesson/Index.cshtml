@model List<EduTrack.Application.Features.InteractiveLesson.DTOs.InteractiveLessonDto>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">درس‌های تعاملی</h3>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="row">
                            @foreach (var lesson in Model)
                            {
                                <div class="col-md-6 col-lg-4 mb-4">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <h5 class="card-title">@lesson.Title</h5>
                                            <p class="card-text">@lesson.Description</p>
                                            <div class="mb-3">
                                                <small class="text-muted">
                                                    <i class="fas fa-file-alt"></i> @lesson.ContentItems.Count(ci => ci.EducationalContentId.HasValue) محتوا
                                                    <br>
                                                    <i class="fas fa-question"></i> @lesson.ContentItems.Count(ci => ci.InteractiveQuestionId.HasValue) سوال
                                                </small>
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <a asp-action="View" asp-route-id="@lesson.Id" class="btn btn-primary btn-block">
                                                <i class="fas fa-play"></i> شروع درس
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center">
                            <p class="text-muted">هیچ درس تعاملی در دسترس نیست.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

