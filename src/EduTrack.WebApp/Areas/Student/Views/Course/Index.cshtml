@model List<EduTrack.Application.Features.CourseEnrollment.DTOs.StudentCourseEnrollmentSummaryDto>
@{
    ViewData["Title"] = "دوره‌های من";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="h4 mb-1">دوره‌های من</h2>
        <p class="text-muted mb-0">دوره‌هایی که در آن‌ها ثبت‌نام کرده‌اید</p>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Catalog" class="btn btn-modern-primary btn-sm">
            <i class="fas fa-plus me-1"></i>ثبت‌نام در دوره جدید
        </a>
    </div>
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var enrollment in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="course-card">
                    <div class="course-thumbnail">
                        @if (!string.IsNullOrEmpty(enrollment.CourseThumbnail))
                        {
                            <img src="@enrollment.CourseThumbnail" alt="@enrollment.CourseTitle" class="img-fluid">
                        }
                        else
                        {
                            <div class="course-thumbnail-placeholder">
                                <i class="fas fa-book fa-3x"></i>
                            </div>
                        }
                        <div class="course-status">
                            @if (enrollment.IsCompleted)
                            {
                                <span class="badge bg-success">تکمیل شده</span>
                            }
                            else
                            {
                                <span class="badge bg-primary">در حال انجام</span>
                            }
                        </div>
                    </div>
                    <div class="course-content">
                        <h5 class="course-title">@enrollment.CourseTitle</h5>
                        @if (!string.IsNullOrEmpty(enrollment.CourseDescription))
                        {
                            <p class="course-description">@enrollment.CourseDescription</p>
                        }
                        
                        <div class="course-progress mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <span class="progress-label">پیشرفت</span>
                                <span class="progress-percentage">@enrollment.ProgressPercentage%</span>
                            </div>
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" style="width: @enrollment.ProgressPercentage%" 
                                     aria-valuenow="@enrollment.ProgressPercentage" aria-valuemin="0" aria-valuemax="100">
                                </div>
                            </div>
                        </div>

                        <div class="course-stats mb-3">
                            <div class="row text-center">
                                <div class="col-4">
                                    <div class="stat-number">@enrollment.CompletedLessons</div>
                                    <div class="stat-label">درس تکمیل شده</div>
                                </div>
                                <div class="col-4">
                                    <div class="stat-number">@enrollment.CompletedExams</div>
                                    <div class="stat-label">آزمون انجام شده</div>
                                </div>
                                <div class="col-4">
                                    <div class="stat-number">@enrollment.AverageScore.ToString("F1")</div>
                                    <div class="stat-label">میانگین نمره</div>
                                </div>
                            </div>
                        </div>

                        <div class="course-actions">
                            <a asp-action="Study" asp-route-id="@enrollment.CourseId" class="btn btn-modern-primary btn-sm w-100 mb-2">
                                <i class="fas fa-play me-1"></i>ادامه مطالعه
                            </a>
                            <div class="d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@enrollment.CourseId" class="btn btn-modern-secondary btn-sm flex-fill">
                                    <i class="fas fa-info-circle me-1"></i>جزئیات
                                </a>
                                <button type="button" class="btn btn-modern-outline-danger btn-sm flex-fill" 
                                        onclick="unenrollCourse(@enrollment.CourseId)">
                                    <i class="fas fa-times me-1"></i>خروج
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <div class="empty-state">
            <i class="fas fa-book fa-4x text-muted mb-4"></i>
            <h4 class="text-muted mb-3">هنوز در دوره‌ای ثبت‌نام نکرده‌اید</h4>
            <p class="text-muted mb-4">برای شروع یادگیری، در یکی از دوره‌های موجود ثبت‌نام کنید</p>
            <a asp-action="Catalog" class="btn btn-modern-primary">
                <i class="fas fa-search me-2"></i>مشاهده کاتالوگ دوره‌ها
            </a>
        </div>
    </div>
}

@section Scripts {
    <script>
        function unenrollCourse(courseId) {
            if (confirm('آیا مطمئن هستید که می‌خواهید از این دوره خارج شوید؟')) {
                $.ajax({
                    url: '@Url.Action("Unenroll")',
                    type: 'POST',
                    data: { courseId: courseId },
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('خطا: ' + response.error);
                        }
                    },
                    error: function() {
                        alert('خطا در ارتباط با سرور');
                    }
                });
            }
        }
    </script>
}
