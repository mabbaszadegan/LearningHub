@using EduTrack.Application.Common.Models.Courses
@using EduTrack.Domain.Enums
@model EduTrack.Application.Common.Models.PaginatedList<CourseDto>
@{
    ViewData["Title"] = "کاتالوگ دوره‌ها";
}

@functions {
    string GetDisciplineTypeName(DisciplineType type)
    {
        return type switch
        {
            DisciplineType.Language => "زبان‌ها",
            DisciplineType.Math => "ریاضیات",
            DisciplineType.Programming => "برنامه‌نویسی",
            DisciplineType.Science => "علوم",
            DisciplineType.Other => "سایر",
            _ => "سایر"
        };
    }

    string GetDisciplineTypeIcon(DisciplineType type)
    {
        return type switch
        {
            DisciplineType.Language => "fas fa-language",
            DisciplineType.Math => "fas fa-calculator",
            DisciplineType.Programming => "fas fa-code",
            DisciplineType.Science => "fas fa-flask",
            DisciplineType.Other => "fas fa-book",
            _ => "fas fa-book"
        };
    }
}

@section Styles {
    <link rel="stylesheet" href="~/css/areas/student/buttons.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/areas/student/course/mobile-course-list.css" asp-append-version="true" />
}

<div class="content-container">
    <!-- Course Catalog Container for Desktop -->
    <div class="course-catalog-container">
        @if (Model.Items.Any())
        {
            <!-- Desktop Layout -->
            <div class="row">
                @foreach (var course in Model.Items)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="course-card" data-course-id="@course.Id">
                            <div class="course-thumbnail">
                                @if (!string.IsNullOrEmpty(course.Thumbnail))
                                {
                                    <img src="@course.Thumbnail" alt="@course.Title" class="img-fluid">
                                }
                                else
                                {
                                    <div class="course-thumbnail-placeholder">
                                        <i class="fas fa-graduation-cap"></i>
                                    </div>
                                }
                                <div class="course-title-overlay">
                                    <h5 class="course-title">@course.Title</h5>
                                </div>
                                <div class="course-status">
                                    @if (course.IsActive)
                                    {
                                        <span class="badge bg-primary">در دسترس</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">غیرفعال</span>
                                    }
                                </div>
                            </div>
                            
                            <div class="course-content">
                                @if (!string.IsNullOrEmpty(course.Description))
                                {
                                    <p class="course-description">@course.Description</p>
                                }
                                
                                <!-- Course Statistics Grid -->
                                <div class="course-stats-grid">
                                    <div class="course-stat-item">
                                        <i class="fas fa-layer-group course-stat-icon"></i>
                                        <span class="course-stat-text">@course.ChapterCount فصل</span>
                                    </div>
                                    <div class="course-stat-item">
                                        <i class="fas fa-play-circle course-stat-icon"></i>
                                        <span class="course-stat-text">0 زیرفصل</span>
                                    </div>
                                    <div class="course-stat-item">
                                        <i class="fas fa-users course-stat-icon"></i>
                                        <span class="course-stat-text">@course.ClassCount کلاس</span>
                                    </div>
                                    <div class="course-stat-item">
                                        <i class="fas fa-bookmark course-stat-icon"></i>
                                        <span class="course-stat-text">@course.ChapterCount درس</span>
                                    </div>
                                </div>
                                
                                <div class="course-action">
                                    @if (course.IsActive)
                                    {
                                        <button type="button" class="btn-success-action w-100" 
                                                data-action="enroll" data-course-id="@course.Id">
                                            <i class="fas fa-plus"></i>
                                            <span>ثبت‌نام در دوره</span>
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn-secondary-action w-100" disabled>
                                            <i class="fas fa-lock"></i>
                                            <span>دوره غیرفعال</span>
                                        </button>
                                    }
                                    
                                    <button type="button" class="btn-secondary-action w-100 mt-2" onclick="showCourseDetails(@course.Id)">
                                        <i class="fas fa-info-circle"></i>
                                        <span>مشاهده جزئیات</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            
            <!-- Pagination for Desktop -->
            @if (Model.TotalPages > 1)
            {
                <div class="pagination-container">
                    <nav aria-label="صفحه‌بندی دوره‌ها">
                        <ul class="pagination justify-content-center">
                            @if (Model.HasPreviousPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Catalog", new { pageNumber = Model.PageNumber - 1 })">
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            }
                            
                            @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Catalog", new { pageNumber = i })">@i</a>
                                </li>
                            }
                            
                            @if (Model.HasNextPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Catalog", new { pageNumber = Model.PageNumber + 1 })">
                                        <i class="fas fa-chevron-left"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            }
        }
    </div>

    <!-- Mobile Layout -->
    @if (Model.Items.Any())
    {
        <!-- Search Header -->
        <div class="mobile-course-search-header">
            <div class="search-box-container">
                <i class="fas fa-search search-icon"></i>
                <input type="text" id="courseSearchInput" class="search-input" placeholder="جستجوی دوره..." />
                <button type="button" class="search-clear-btn" id="searchClearBtn" style="display: none;">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>

        <!-- Course Groups -->
        <div class="mobile-course-groups" id="courseGroupsContainer">
            @{
                var groupedCourses = Model.Items
                    .GroupBy(c => c.DisciplineType)
                    .Where(g => g.Any()) // Only show groups with courses
                    .OrderBy(g => g.Key)
                    .ToList();
            }

            @foreach (var group in groupedCourses)
            {
                var disciplineType = group.Key;
                var courses = group.ToList();
                var groupId = $"group-{(int)disciplineType}";

                <div class="course-group" data-discipline-type="@((int)disciplineType)" data-group-id="@groupId">
                    <div class="course-group-header">
                        <div class="group-title">
                            <i class="@GetDisciplineTypeIcon(disciplineType)"></i>
                            <span>@GetDisciplineTypeName(disciplineType)</span>
                            <span class="course-count">(@courses.Count)</span>
                        </div>
                    </div>
                    
                    <div class="course-tiles-scroll">
                        <div class="course-tiles-container">
                            @foreach (var course in courses)
                            {
                                <div class="course-tile" data-course-id="@course.Id" data-course-title="@course.Title.ToLower()">
                                    <div class="tile-thumbnail">
                                        @if (!string.IsNullOrEmpty(course.Thumbnail))
                                        {
                                            <img src="@course.Thumbnail" alt="@course.Title">
                                        }
                                        else
                                        {
                                            <div class="tile-thumbnail-placeholder">
                                                <i class="fas fa-graduation-cap"></i>
                                            </div>
                                        }
                                        @if (!course.IsActive)
                                        {
                                            <div class="tile-inactive-overlay">
                                                <i class="fas fa-lock"></i>
                                            </div>
                                        }
                                    </div>
                                    <div class="tile-info">
                                        <h6 class="tile-title">@course.Title</h6>
                                        <div class="tile-meta">
                                            <span class="tile-stat-text">
                                                <i class="fas fa-layer-group"></i> @course.ChapterCount فصل
                                            </span>
                                        </div>
                                    </div>
                                    <div class="tile-actions">
                                        @if (course.IsActive)
                                        {
                                            <button type="button" class="tile-enroll-btn" 
                                                    data-action="enroll" data-course-id="@course.Id">
                                                <i class="fas fa-plus"></i>
                                                ثبت‌نام
                                            </button>
                                        }
                                        <a href="@Url.Action("Details", new { id = course.Id })" class="tile-details-btn">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Empty Search State -->
        <div class="empty-search-state" id="emptySearchState" style="display: none;">
            <div class="empty-search-content">
                <i class="fas fa-search"></i>
                <h5>نتیجه‌ای یافت نشد</h5>
                <p>دوره‌ای با این نام وجود ندارد</p>
            </div>
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="fas fa-search"></i>
            <h3>دوره‌ای یافت نشد</h3>
            <p>در حال حاضر هیچ دوره‌ای برای نمایش وجود ندارد. لطفاً بعداً دوباره بررسی کنید</p>
            <a asp-action="Index" class="btn-continue">
                <i class="fas fa-arrow-right"></i>
                بازگشت به دوره‌های من
            </a>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/areas/student/course/mobile-course-list.js" asp-append-version="true"></script>
}
