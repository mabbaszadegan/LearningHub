@using EduTrack.Application.Common.Models.Courses
@model EduTrack.Application.Common.Models.PaginatedList<CourseDto>
@{
    ViewData["Title"] = "کاتالوگ دوره‌ها";
}

@section Styles {
    <link rel="stylesheet" href="~/css/areas/student/buttons.css" asp-append-version="true" />
}

<div class="content-container">
    <!-- Course Catalog Container -->
    <div class="course-catalog-container">
        @if (Model.Items.Any())
        {
            <div class="row">
                @foreach (var course in Model.Items)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="course-card" data-course-id="@course.Id">
                            <div class="course-thumbnail">
                                @if (!string.IsNullOrEmpty(course.Thumbnail))
                                {
                                    <img src="@course.Thumbnail" alt="@course.Title" class="img-fluid">
                                }
                                else
                                {
                                    <div class="course-thumbnail-placeholder">
                                        <i class="fas fa-graduation-cap"></i>
                                    </div>
                                }
                                <div class="course-title-overlay">
                                    <h5 class="course-title">@course.Title</h5>
                                </div>
                                <div class="course-status">
                                    @if (course.IsActive)
                                    {
                                        <span class="badge bg-primary">قابل ثبت‌نام</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">غیرفعال</span>
                                    }
                                </div>
                            </div>
                            
                            <div class="course-content">
                                @if (!string.IsNullOrEmpty(course.Description))
                                {
                                    <p class="course-description">@course.Description</p>
                                }
                                
                                <!-- Course Statistics Grid -->
                                <div class="course-stats-grid">
                                    <div class="course-stat-item">
                                        <i class="fas fa-layer-group course-stat-icon"></i>
                                        <span class="course-stat-text">@course.ChapterCount مبحث</span>
                                    </div>
                                    <div class="course-stat-item">
                                        <i class="fas fa-play-circle course-stat-icon"></i>
                                        <span class="course-stat-text">@course.ModuleCount زیرمبحث</span>
                                    </div>
                                    <div class="course-stat-item">
                                        <i class="fas fa-users course-stat-icon"></i>
                                        <span class="course-stat-text">@course.ClassCount دانش‌آموز</span>
                                    </div>
                                    <div class="course-stat-item">
                                        <i class="fas fa-bookmark course-stat-icon"></i>
                                        <span class="course-stat-text">@course.LessonCount محتوا</span>
                                    </div>
                                </div>
                                
                                <div class="course-action">
                                    @if (course.IsActive)
                                    {
                                        <button type="button" class="btn-success-action w-100" 
                                                data-action="enroll" data-course-id="@course.Id">
                                            <i class="fas fa-plus"></i>
                                            <span>ثبت‌نام در دوره</span>
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn-secondary-action w-100" disabled>
                                            <i class="fas fa-lock"></i>
                                            <span>دوره غیرفعال</span>
                                        </button>
                                    }
                                    
                                    <button type="button" class="btn-secondary-action w-100 mt-2" onclick="showCourseDetails(@course.Id)">
                                        <i class="fas fa-info-circle"></i>
                                        <span>مشاهده جزئیات</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            
            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <div class="pagination-container">
                    <nav aria-label="صفحه‌بندی دوره‌ها">
                        <ul class="pagination justify-content-center">
                            @if (Model.HasPreviousPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Catalog", new { pageNumber = Model.PageNumber - 1 })">
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            }
                            
                            @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Catalog", new { pageNumber = i })">@i</a>
                                </li>
                            }
                            
                            @if (Model.HasNextPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Catalog", new { pageNumber = Model.PageNumber + 1 })">
                                        <i class="fas fa-chevron-left"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-search"></i>
                <h3>دوره‌ای یافت نشد</h3>
                <p>در حال حاضر دوره جدیدی برای ثبت‌نام وجود ندارد</p>
                <a asp-action="Index" class="btn-continue">
                    <i class="fas fa-arrow-right"></i>
                    بازگشت به دوره‌های من
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize bottom navigation
            if (window.bottomNavigation) {
                window.bottomNavigation.setActivePage('courses');
            }
            
            // Handle enrollment actions
            $('[data-action="enroll"]').click(function() {
                const courseId = $(this).data('course-id');
                enrollInCourse(courseId);
            });
        });
        
        function enrollInCourse(courseId) {
            if (confirm('آیا می‌خواهید در این دوره ثبت‌نام کنید؟')) {
                $.ajax({
                    url: '@Url.Action("Enroll", "Course")',
                    type: 'POST',
                    data: { courseId: courseId },
                    success: function(response) {
                        if (response.success) {
                            toastr.success('با موفقیت در دوره ثبت‌نام کردید');
                            location.reload();
                        } else {
                            toastr.error(response.error || 'خطا در ثبت‌نام');
                        }
                    },
                    error: function() {
                        toastr.error('خطا در ثبت‌نام');
                    }
                });
            }
        }
    </script>
}
