@model EduTrack.Application.Common.Models.PaginatedList<EduTrack.Application.Common.Models.CourseDto>

@if (Model.Items.Any())
{
    @foreach (var course in Model.Items)
    {
        <div class="course-card" data-course-id="@course.Id">
            <div class="course-thumbnail">
                <div class="course-thumbnail-content">
                    <div class="course-thumbnail-icon">
                        <i class="fas fa-graduation-cap"></i>
                    </div>
                    <div class="course-thumbnail-title">@course.Title</div>
                </div>
            </div>
            
            <div class="course-content">
                @if (!string.IsNullOrEmpty(course.Description))
                {
                    <div class="course-description">@course.Description</div>
                }
                
                <div class="course-stats-grid">
                    <div class="course-stat-item">
                        <i class="fas fa-layer-group course-stat-icon"></i>
                        <span class="course-stat-text">@course.ModuleCount مبحث</span>
                    </div>
                    <div class="course-stat-item">
                        <i class="fas fa-play-circle course-stat-icon"></i>
                        <span class="course-stat-text">@course.LessonCount درس</span>
                    </div>
                    <div class="course-stat-item">
                        <i class="fas fa-bookmark course-stat-icon"></i>
                        <span class="course-stat-text">@course.ChapterCount فصل</span>
                    </div>
                    <div class="course-stat-item">
                        <i class="fas fa-users course-stat-icon"></i>
                        <span class="course-stat-text">@course.ClassCount کلاس</span>
                    </div>
                </div>
                
                <div class="course-action">
                    <i class="fas fa-eye"></i>
                    <span>مشاهده جزئیات</span>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="empty-state">
        <i class="fas fa-search"></i>
        <h3>دوره‌ای یافت نشد</h3>
        <p>در حال حاضر دوره جدیدی برای ثبت‌نام وجود ندارد</p>
    </div>
}