@model EduTrack.Application.Common.Models.CourseDto
@{
    ViewData["Title"] = Model.Title;
}

<div class="row">
    <div class="col-lg-8">
        <div class="course-detail-card">
            <div class="course-header">
                <div class="course-thumbnail-large">
                    @if (!string.IsNullOrEmpty(Model.Thumbnail))
                    {
                        <img src="@Model.Thumbnail" alt="@Model.Title" class="img-fluid">
                    }
                    else
                    {
                        <div class="course-thumbnail-placeholder-large">
                            <i class="fas fa-book fa-4x"></i>
                        </div>
                    }
                </div>
                <div class="course-info">
                    <h1 class="course-title-large">@Model.Title</h1>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p class="course-description-large">@Model.Description</p>
                    }
                    
                    <div class="course-meta">
                        <div class="meta-item">
                            <i class="fas fa-calendar-alt"></i>
                            <span>تاریخ ایجاد: @Model.CreatedAt.ToString("yyyy/MM/dd")</span>
                        </div>
                        <div class="meta-item">
                            <i class="fas fa-user"></i>
                            <span>ایجادکننده: @Model.CreatedBy</span>
                        </div>
                        <div class="meta-item">
                            <i class="fas fa-check-circle"></i>
                            <span>وضعیت: @(Model.IsActive ? "فعال" : "غیرفعال")</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="course-stats-large">
                <div class="row">
                    <div class="col-md-3 text-center">
                        <div class="stat-number-large">@Model.ModuleCount</div>
                        <div class="stat-label-large">ماژول</div>
                    </div>
                    <div class="col-md-3 text-center">
                        <div class="stat-number-large">@Model.LessonCount</div>
                        <div class="stat-label-large">درس</div>
                    </div>
                    <div class="col-md-3 text-center">
                        <div class="stat-number-large">@Model.ChapterCount</div>
                        <div class="stat-label-large">فصل</div>
                    </div>
                    <div class="col-md-3 text-center">
                        <div class="stat-number-large">@Model.ClassCount</div>
                        <div class="stat-label-large">کلاس</div>
                    </div>
                </div>
            </div>

            <div class="course-content">
                <h3>درباره این دوره</h3>
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <p>@Model.Description</p>
                }
                else
                {
                    <p class="text-muted">توضیحاتی برای این دوره ارائه نشده است.</p>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="course-actions-card">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-cogs me-2"></i>عملیات
                    </h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.IsEnrolled)
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle me-2"></i>
                            شما در این دوره ثبت‌نام کرده‌اید
                        </div>
                        <a asp-action="Study" asp-route-id="@Model.Id" class="btn btn-modern-primary w-100 mb-3">
                            <i class="fas fa-play me-2"></i>شروع مطالعه
                        </a>
                        <button type="button" class="btn btn-modern-outline-danger w-100" 
                                onclick="unenrollCourse(@Model.Id)">
                            <i class="fas fa-times me-2"></i>خروج از دوره
                        </button>
                    }
                    else if (ViewBag.CanEnroll && Model.IsActive)
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            می‌توانید در این دوره ثبت‌نام کنید
                        </div>
                        <button type="button" class="btn btn-modern-success w-100 mb-3" 
                                onclick="enrollInCourse(@Model.Id)">
                            <i class="fas fa-plus me-2"></i>ثبت‌نام در دوره
                        </button>
                    }
                    else if (!Model.IsActive)
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            این دوره در حال حاضر غیرفعال است
                        </div>
                        <button type="button" class="btn btn-modern-secondary w-100" disabled>
                            <i class="fas fa-lock me-2"></i>دوره غیرفعال
                        </button>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-ban me-2"></i>
                            امکان ثبت‌نام در این دوره وجود ندارد
                        </div>
                    }

                    <hr>
                    
                    <div class="d-grid gap-2">
                        <a asp-action="Index" class="btn btn-modern-secondary btn-sm">
                            <i class="fas fa-list me-2"></i>دوره‌های من
                        </a>
                        <a asp-action="Catalog" class="btn btn-modern-secondary btn-sm">
                            <i class="fas fa-search me-2"></i>کاتالوگ دوره‌ها
                        </a>
                    </div>
                </div>
            </div>

            @if (ViewBag.IsEnrolled)
            {
                <div class="card mt-3">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-chart-line me-2"></i>پیشرفت شما
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="progress mb-3">
                            <div class="progress-bar" role="progressbar" style="width: @(ViewBag.Enrollment?.ProgressPercentage ?? 0)%" 
                                 aria-valuenow="@(ViewBag.Enrollment?.ProgressPercentage ?? 0)" aria-valuemin="0" aria-valuemax="100">
                                @(ViewBag.Enrollment?.ProgressPercentage ?? 0)%
                            </div>
                        </div>
                        
                        <div class="progress-stats">
                            <div class="row text-center">
                                <div class="col-6">
                                    <div class="stat-number">@(ViewBag.Enrollment?.EnrolledAt.ToString("yyyy/MM/dd") ?? "")</div>
                                    <div class="stat-label">تاریخ ثبت‌نام</div>
                                </div>
                                <div class="col-6">
                                    <div class="stat-number">@(ViewBag.Enrollment?.LastAccessedAt?.ToString("yyyy/MM/dd") ?? "هیچ‌گاه")</div>
                                    <div class="stat-label">آخرین بازدید</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function enrollInCourse(courseId) {
            if (confirm('آیا مطمئن هستید که می‌خواهید در این دوره ثبت‌نام کنید؟')) {
                $.ajax({
                    url: '@Url.Action("Enroll")',
                    type: 'POST',
                    data: { courseId: courseId },
                    success: function(response) {
                        if (response.success) {
                            alert(response.message);
                            location.reload();
                        } else {
                            alert('خطا: ' + response.error);
                        }
                    },
                    error: function() {
                        alert('خطا در ارتباط با سرور');
                    }
                });
            }
        }

        function unenrollCourse(courseId) {
            if (confirm('آیا مطمئن هستید که می‌خواهید از این دوره خارج شوید؟')) {
                $.ajax({
                    url: '@Url.Action("Unenroll")',
                    type: 'POST',
                    data: { courseId: courseId },
                    success: function(response) {
                        if (response.success) {
                            alert(response.message);
                            location.reload();
                        } else {
                            alert('خطا: ' + response.error);
                        }
                    },
                    error: function() {
                        alert('خطا در ارتباط با سرور');
                    }
                });
            }
        }
    </script>
}
