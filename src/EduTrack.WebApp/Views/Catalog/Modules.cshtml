@model List<EduTrack.Application.Common.Models.ModuleDto>
@{
    ViewData["Title"] = "ماژول‌های دوره";
    var courseId = ViewBag.CourseId as int?;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">ماژول‌های دوره</h3>
                    <a asp-action="CreateModule" asp-route-courseId="@courseId" class="btn btn-primary">
                        <i class="fas fa-plus"></i> ماژول جدید
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model.Any())
                    {
                        <div class="row">
                            @foreach (var module in Model)
                            {
                                <div class="col-md-6 col-lg-4 mb-4">
                                    <div class="card h-100">
                                        <div class="card-header d-flex justify-content-between align-items-center">
                                            <h5 class="card-title mb-0">@module.Title</h5>
                                            <span class="badge bg-info">@module.LessonCount درس</span>
                                        </div>
                                        <div class="card-body">
                                            @if (!string.IsNullOrEmpty(module.Description))
                                            {
                                                <p class="card-text text-muted">@module.Description</p>
                                            }
                                            <div class="d-flex justify-content-between align-items-center">
                                                <small class="text-muted">
                                                    ترتیب: @module.Order
                                                </small>
                                                @if (module.IsActive)
                                                {
                                                    <span class="badge bg-success">فعال</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">غیرفعال</span>
                                                }
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <div class="btn-group w-100" role="group">
                                                <a asp-action="Lessons" asp-route-moduleId="@module.Id" class="btn btn-outline-primary btn-sm">
                                                    <i class="fas fa-book"></i> دروس
                                                </a>
                                                <a asp-action="CreateLesson" asp-route-moduleId="@module.Id" class="btn btn-outline-success btn-sm">
                                                    <i class="fas fa-plus"></i> درس جدید
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-layer-group fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">هیچ ماژولی یافت نشد</h5>
                            <p class="text-muted">اولین ماژول را برای این دوره ایجاد کنید</p>
                            <a asp-action="CreateModule" asp-route-courseId="@courseId" class="btn btn-primary">
                                <i class="fas fa-plus"></i> ایجاد ماژول
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
