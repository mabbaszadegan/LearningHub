@model EduTrack.Application.Common.Models.PaginatedList<EduTrack.Application.Common.Models.ClassDto>
@{
    ViewData["Title"] = "کلاس‌ها";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">مدیریت کلاس‌ها</h3>
                    @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
                    {
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> کلاس جدید
                        </a>
                    }
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>نام کلاس</th>
                                    <th>دوره</th>
                                    <th>معلم</th>
                                    <th>تعداد دانش‌آموز</th>
                                    <th>تاریخ شروع</th>
                                    <th>وضعیت</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var classItem in Model.Items)
                                {
                                    <tr>
                                        <td>
                                            <strong>@classItem.Name</strong>
                                            @if (!string.IsNullOrEmpty(classItem.Description))
                                            {
                                                <br>
                                        
                                                <small class="text-muted">@(classItem.Description.Length > 50 ? classItem.Description.Substring(0, 50) + "..." : classItem.Description)</small>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-primary">دوره @classItem.CourseId</span>
                                        </td>
                                        <td>
                                            <span class="text-muted">@classItem.TeacherName</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@classItem.StudentCount</span>
                                        </td>
                                        <td>
                                            <small class="text-muted">@classItem.StartDate.ToString("yyyy/MM/dd")</small>
                                        </td>
                                        <td>
                                            @if (classItem.IsActive)
                                            {
                                                <span class="badge bg-success">فعال</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">غیرفعال</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@classItem.Id" class="btn btn-sm btn-outline-info" title="مشاهده">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Enroll" asp-route-id="@classItem.Id" class="btn btn-sm btn-outline-success" title="ثبت‌نام دانش‌آموز">
                                                    <i class="fas fa-user-plus"></i>
                                                </a>
                                                <a asp-action="Summary" asp-route-id="@classItem.Id" class="btn btn-sm btn-outline-primary" title="خلاصه کلاس">
                                                    <i class="fas fa-chart-bar"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (Model.TotalCount > 0)
                    {
                        <nav aria-label="صفحه‌بندی">
                            <ul class="pagination justify-content-center">
                                @if (Model.HasPreviousPage)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)">قبلی</a>
                                    </li>
                                }

                                @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                                {
                                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@i">@i</a>
                                    </li>
                                }

                                @if (Model.HasNextPage)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)">بعدی</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <p class="text-muted">هیچ کلاسی یافت نشد.</p>
                            <a asp-action="Create" class="btn btn-primary">اولین کلاس را ایجاد کنید</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
