@model EduTrack.WebApp.Models.CourseManagementViewModel
@{
    ViewData["Title"] = "مدیریت دوره‌ها";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0 text-gray-800">مدیریت دوره‌ها</h1>
                    <p class="mb-0 text-muted">مدیریت کامل دوره‌های آموزشی سیستم</p>
                </div>
                <div>
                    <a href="@Url.Action("CreateCourse", "Admin")" class="btn btn-primary">
                        <i class="fas fa-plus"></i> افزودن دوره جدید
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filter -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-body">
                    <form method="get" class="row">
                        <div class="col-md-4 mb-3">
                            <label for="search" class="form-label">جستجو</label>
                            <input type="text" class="form-control" id="search" name="search" 
                                   value="@Model.Search" placeholder="عنوان یا توضیحات دوره">
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="isActive" class="form-label">وضعیت</label>
                            <select class="form-control" id="isActive" name="isActive">
                                <option value="">همه دوره‌ها</option>
                                <option value="true" selected="@(Model.IsActive == true)">فعال</option>
                                <option value="false" selected="@(Model.IsActive == false)">غیرفعال</option>
                            </select>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="pageSize" class="form-label">تعداد در صفحه</label>
                            <select class="form-control" id="pageSize" name="pageSize">
                                <option value="10" selected="@(Model.PageSize == 10)">10</option>
                                <option value="20" selected="@(Model.PageSize == 20)">20</option>
                                <option value="50" selected="@(Model.PageSize == 50)">50</option>
                                <option value="100" selected="@(Model.PageSize == 100)">100</option>
                            </select>
                        </div>
                        <div class="col-md-2 mb-3">
                            <label class="form-label">&nbsp;</label>
                            <div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search"></i> جستجو
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Courses Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        لیست دوره‌ها (@Model.TotalCourses دوره)
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.Courses.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered" id="coursesTable">
                                <thead>
                                    <tr>
                                        <th>عنوان دوره</th>
                                        <th>توضیحات</th>
                                        <th>تعداد ماژول</th>
                                        <th>تعداد کلاس</th>
                                        <th>ترتیب</th>
                                        <th>تاریخ ایجاد</th>
                                        <th>وضعیت</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var course in Model.Courses)
                                    {
                                        <tr id="course-@course.Id">
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="mr-3">
                                                        @if (!string.IsNullOrEmpty(course.Thumbnail))
                                                        {
                                                            <img src="@course.Thumbnail" alt="@course.Title" class="course-thumbnail">
                                                        }
                                                        else
                                                        {
                                                            <div class="icon-circle bg-primary">
                                                                <i class="fas fa-book text-white"></i>
                                                            </div>
                                                        }
                                                    </div>
                                                    <div>
                                                        <div class="font-weight-bold">@course.Title</div>
                                                        <div class="text-muted small">شناسه: @course.Id</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(course.Description))
                                                {
                                                    <span class="text-muted">@(course.Description.Length > 100 ? course.Description.Substring(0, 100) + "..." : course.Description)</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge badge-info">@course.Modules.Count</span>
                                            </td>
                                            <td>
                                                <span class="badge badge-secondary">@course.Classes.Count</span>
                                            </td>
                                            <td>@course.Order</td>
                                            <td>@course.CreatedAt.ToString("yyyy/MM/dd")</td>
                                            <td>
                                                <span class="badge badge-@(course.IsActive ? "success" : "secondary")" id="status-@course.Id">
                                                    @(course.IsActive ? "فعال" : "غیرفعال")
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Details", "Catalog", new { id = course.Id })" 
                                                       class="btn btn-sm btn-outline-info" title="مشاهده" target="_blank">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-outline-@(course.IsActive ? "secondary" : "success")" 
                                                            onclick="toggleCourseStatus(@course.Id, '@course.Title', @course.IsActive.ToString().ToLower())" 
                                                            title="@(course.IsActive ? "غیرفعال کردن" : "فعال کردن")" id="toggle-@course.Id">
                                                        <i class="fas fa-@(course.IsActive ? "pause" : "play")"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-sm btn-outline-primary" 
                                                            onclick="showCourseDetails(@course.Id)" title="جزئیات">
                                                        <i class="fas fa-info-circle"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        @if (Model.TotalPages > 1)
                        {
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-center">
                                    @if (Model.CurrentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Courses", "Admin", new { search = Model.Search, isActive = Model.IsActive, page = Model.CurrentPage - 1, pageSize = Model.PageSize })">قبلی</a>
                                        </li>
                                    }

                                    @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                                    {
                                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                            <a class="page-link" href="@Url.Action("Courses", "Admin", new { search = Model.Search, isActive = Model.IsActive, page = i, pageSize = Model.PageSize })">@i</a>
                                        </li>
                                    }

                                    @if (Model.CurrentPage < Model.TotalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Courses", "Admin", new { search = Model.Search, isActive = Model.IsActive, page = Model.CurrentPage + 1, pageSize = Model.PageSize })">بعدی</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-book fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">دوره‌ای یافت نشد</h5>
                            <p class="text-muted">با فیلترهای مختلف جستجو کنید یا دوره جدیدی اضافه کنید.</p>
                            <a href="@Url.Action("CreateCourse", "Admin")" class="btn btn-primary">
                                <i class="fas fa-plus"></i> افزودن دوره جدید
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Course Details Modal -->
<div class="modal fade" id="courseDetailsModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">جزئیات دوره</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body" id="courseDetailsContent">
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="sr-only">در حال بارگذاری...</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">بستن</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleCourseStatus(courseId, courseTitle, isActive) {
            var action = isActive ? 'غیرفعال' : 'فعال';
            if (confirm(`آیا مطمئن هستید که می‌خواهید دوره "${courseTitle}" را ${action} کنید؟`)) {
                $.post('@Url.Action("ToggleCourseStatus", "Admin")', {
                    courseId: courseId,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                })
                .done(function(response) {
                    if (response.success) {
                        // Update status badge
                        var statusBadge = $('#status-' + courseId);
                        var toggleButton = $('#toggle-' + courseId);
                        
                        if (response.isActive) {
                            statusBadge.removeClass('badge-secondary').addClass('badge-success').text('فعال');
                            toggleButton.removeClass('btn-outline-success').addClass('btn-outline-secondary')
                                       .attr('title', 'غیرفعال کردن')
                                       .html('<i class="fas fa-pause"></i>');
                        } else {
                            statusBadge.removeClass('badge-success').addClass('badge-secondary').text('غیرفعال');
                            toggleButton.removeClass('btn-outline-secondary').addClass('btn-outline-success')
                                       .attr('title', 'فعال کردن')
                                       .html('<i class="fas fa-play"></i>');
                        }
                        
                        // Update onclick attribute
                        toggleButton.attr('onclick', `toggleCourseStatus(${courseId}, '${courseTitle}', ${response.isActive})`);
                        
                        showAlert('success', response.message);
                    } else {
                        showAlert('error', response.message);
                    }
                })
                .fail(function() {
                    showAlert('error', 'خطا در تغییر وضعیت دوره');
                });
            }
        }

        function showCourseDetails(courseId) {
            $('#courseDetailsModal').modal('show');
            
            // Load course details via AJAX
            $.get('@Url.Action("Details", "Catalog")/' + courseId)
                .done(function(data) {
                    // Extract course information from the response
                    var parser = new DOMParser();
                    var doc = parser.parseFromString(data, 'text/html');
                    var courseInfo = doc.querySelector('.course-info');
                    
                    if (courseInfo) {
                        $('#courseDetailsContent').html(courseInfo.outerHTML);
                    } else {
                        $('#courseDetailsContent').html('<p class="text-muted">اطلاعات دوره در دسترس نیست.</p>');
                    }
                })
                .fail(function() {
                    $('#courseDetailsContent').html('<p class="text-danger">خطا در بارگذاری اطلاعات دوره.</p>');
                });
        }

        function showAlert(type, message) {
            var alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
            var alertHtml = `
                <div class="alert ${alertClass} alert-dismissible fade show" role="alert">
                    ${message}
                    <button type="button" class="close" data-dismiss="alert">
                        <span>&times;</span>
                    </button>
                </div>
            `;
            
            // Remove existing alerts
            $('.alert').remove();
            
            // Add new alert at the top of the container
            $('.container-fluid').prepend(alertHtml);
            
            // Auto-dismiss after 5 seconds
            setTimeout(function() {
                $('.alert').fadeOut();
            }, 5000);
        }

        // Show success message if exists
        @if (TempData["Success"] != null)
        {
            <text>
            $(document).ready(function() {
                showAlert('success', '@TempData["Success"]');
            });
            </text>
        }

        // Add CSRF token to all AJAX requests
        $.ajaxSetup({
            beforeSend: function(xhr, settings) {
                if (!/^(GET|HEAD|OPTIONS|TRACE)$/i.test(settings.type) && !this.crossDomain) {
                    xhr.setRequestHeader("RequestVerificationToken", $('input[name="__RequestVerificationToken"]').val());
                }
            }
        });
    </script>
}

<style>
    .icon-circle {
        height: 2.5rem;
        width: 2.5rem;
        border-radius: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .course-thumbnail {
        width: 40px;
        height: 40px;
        object-fit: cover;
        border-radius: 5px;
    }
    
    .text-gray-800 {
        color: #5a5c69 !important;
    }
</style>
