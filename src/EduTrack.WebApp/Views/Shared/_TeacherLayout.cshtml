<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - پنل معلم EduTrack</title>
    
    <!-- Bootstrap RTL CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />
    
    <!-- FontAwesome -->
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap" rel="stylesheet">
    
    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <!-- Teacher Area CSS -->
    <link rel="stylesheet" href="~/css/areas/teacher/buttons.css" />
    <link rel="stylesheet" href="~/css/areas/teacher/teacher.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/areas/teacher/teacher-sidebar-collapse.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/areas/teacher/interactive-lesson-creator.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/areas/teacher/page-title-section.css" asp-append-version="true" />
    
    <!-- Persian Date Picker CSS -->
    <link rel="stylesheet" href="~/css/persian-datepicker.css" asp-append-version="true" />
    
    <!-- Toastr CSS -->
    <link rel="stylesheet" href="~/lib/toastr/toastr.min.css" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="teacher-body modern-minimal">
    <div class="teacher-wrapper">
        <!-- Modern Top Navigation -->
        <nav class="modern-topnav" id="modernTopNav">
            <div class="topnav-container">
                <!-- Logo Section -->
                <div class="topnav-logo">
                    <div class="logo-icon">
                        <i class="fas fa-graduation-cap"></i>
                    </div>
                    <span class="logo-text">EduTrack</span>
                </div>
                
                <!-- Main Navigation -->
                <div class="topnav-menu" id="topnavMenu">
                    <a asp-area="Teacher" asp-controller="Home" asp-action="Index" class="topnav-link">
                        <i class="fas fa-home"></i>
                        <span>داشبورد</span>
                    </a>
                    
                    <div class="topnav-link has-dropdown" id="coursesDropdown">
                        <i class="fas fa-book"></i>
                        <span>دوره‌ها</span>
                        <i class="fas fa-chevron-down dropdown-icon"></i>
                        <div class="topnav-dropdown">
                            <a asp-area="Teacher" asp-controller="Courses" asp-action="Index" class="dropdown-item">
                                <i class="fas fa-list"></i>همه دوره‌ها
                            </a>
                            <a asp-area="Teacher" asp-controller="Courses" asp-action="Create" class="dropdown-item">
                                <i class="fas fa-plus"></i>ایجاد دوره
                            </a>
                        </div>
                    </div>
                    
                    <div class="topnav-link has-dropdown" id="classesDropdown">
                        <i class="fas fa-chalkboard"></i>
                        <span>کلاس‌ها</span>
                        <i class="fas fa-chevron-down dropdown-icon"></i>
                        <div class="topnav-dropdown">
                            <a asp-area="Teacher" asp-controller="Classes" asp-action="Index" class="dropdown-item">
                                <i class="fas fa-list"></i>همه کلاس‌ها
                            </a>
                            <a asp-area="Teacher" asp-controller="Classes" asp-action="Create" class="dropdown-item">
                                <i class="fas fa-plus"></i>ایجاد کلاس
                            </a>
                        </div>
                    </div>
                    
                    <a asp-area="Teacher" asp-controller="Home" asp-action="MyStudents" class="topnav-link">
                        <i class="fas fa-users"></i>
                        <span>دانش‌آموزان</span>
                    </a>
                    
                    <div class="topnav-link has-dropdown" id="lessonsDropdown">
                        <i class="fas fa-play-circle"></i>
                        <span>درس‌ها</span>
                        <i class="fas fa-chevron-down dropdown-icon"></i>
                        <div class="topnav-dropdown">
                            <a asp-area="Teacher" asp-controller="InteractiveLesson" asp-action="Index" class="dropdown-item">
                                <i class="fas fa-list"></i>همه درس‌ها
                            </a>
                            <a asp-area="Teacher" asp-controller="InteractiveLesson" asp-action="Create" class="dropdown-item">
                                <i class="fas fa-plus"></i>ایجاد درس
                            </a>
                        </div>
                    </div>
                    
                    <a asp-area="Teacher" asp-controller="Exam" asp-action="Index" class="topnav-link">
                        <i class="fas fa-clipboard-list"></i>
                        <span>آزمون‌ها</span>
                    </a>
                    
                    <a asp-area="Teacher" asp-controller="Progress" asp-action="Index" class="topnav-link">
                        <i class="fas fa-chart-line"></i>
                        <span>گزارش‌ها</span>
                    </a>
                </div>
                
                <!-- Right Side Actions -->
                <div class="topnav-actions">
                    <button class="topnav-btn" id="notificationsBtn">
                        <i class="fas fa-bell"></i>
                        <span class="badge">3</span>
                    </button>
                    <div class="topnav-user-menu">
                        <div class="dropdown">
                            <button class="user-btn" data-bs-toggle="dropdown">
                                <div class="user-avatar-small">
                                    <i class="fas fa-user"></i>
                                </div>
                                <span class="user-name-text">@User.Identity?.Name</span>
                                <i class="fas fa-chevron-down"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-area="Public" asp-controller="Account" asp-action="Profile">
                                    <i class="fas fa-user me-2"></i>پروفایل
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-area="Public" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        <button type="submit" class="dropdown-item">
                                            <i class="fas fa-sign-out-alt me-2"></i>خروج
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <button class="mobile-menu-toggle d-lg-none" id="mobileMenuToggle">
                        <i class="fas fa-bars"></i>
                    </button>
                </div>
            </div>
        </nav>
        
        <!-- Main Content -->
        <div class="teacher-main modern-main">
            <!-- Page Content -->
            <div class="teacher-content modern-content">
                <div class="container-fluid">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show modern-alert" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show modern-alert" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    <!-- Page Title Section -->
                    @{
                        var pageTitleSection = ViewData.GetPageTitleSection();
                    }
                    @if (pageTitleSection != null)
                    {
                        @await Html.PartialAsync("_PageTitleSection", pageTitleSection)
                    }
                    
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    
    <!-- Toast Container -->
    <div id="toast-container" class="toast-container position-fixed top-0 end-0 p-3"></div>
    
    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Toastr JS -->
    <script src="~/lib/toastr/toastr.min.js"></script>
    <script src="~/js/notifications.js" asp-append-version="true"></script>
    
    <!-- Official Persian Date Library -->
    <script src="~/lib/jalaali.js"></script>
    
    <!-- FullCalendar -->
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>
    
    <!-- Persian Date Picker -->
    <script src="~/js/persian-date.js"></script>
    <script src="~/js/persian-datepicker.js"></script>
    <script src="~/js/datepicker-init.js"></script>
    
    <!-- Site JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Teacher Area JS -->
    <script src="~/js/areas/teacher/teacher.js" asp-append-version="true"></script>
    <script src="~/js/areas/teacher/page-title-section.js" asp-append-version="true"></script>
    
    <!-- Modern Navigation Script -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Dropdown handling for top navigation
            const dropdowns = document.querySelectorAll('.topnav-link.has-dropdown');
            dropdowns.forEach(dropdown => {
                dropdown.addEventListener('click', function(e) {
                    e.stopPropagation();
                    const isOpen = this.classList.contains('active');
                    // Close all dropdowns
                    dropdowns.forEach(d => d.classList.remove('active'));
                    // Toggle current dropdown
                    if (!isOpen) {
                        this.classList.add('active');
                    }
                });
            });
            
            // Close dropdowns when clicking outside
            document.addEventListener('click', function() {
                dropdowns.forEach(d => d.classList.remove('active'));
            });
            
            // Mobile menu toggle
            const mobileMenuToggle = document.getElementById('mobileMenuToggle');
            const topnavMenu = document.getElementById('topnavMenu');
            if (mobileMenuToggle) {
                mobileMenuToggle.addEventListener('click', function() {
                    topnavMenu.classList.toggle('mobile-open');
                });
            }
            
            // Set active navigation item
            setActiveNavItem();
        });

        // Set active navigation item based on current path
        function setActiveNavItem() {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.topnav-link, .dropdown-item');
            
            navLinks.forEach(link => {
                link.classList.remove('active');
            });
            
            // Find and set active navigation item
            if (currentPath.includes('/Teacher/Home/Index') || currentPath === '/Teacher/Home' || currentPath === '/Teacher') {
                document.querySelector('.topnav-link[href*="/Teacher/Home/Index"]')?.classList.add('active');
            }
            else if (currentPath.includes('/Teacher/Courses')) {
                // Add active class to the parent dropdown link (visual indicator only, don't open dropdown)
                const coursesParent = document.querySelector('#coursesDropdown');
                if (coursesParent) {
                    coursesParent.style.color = '#667eea';
                    coursesParent.style.fontWeight = '500';
                }
            }
            else if (currentPath.includes('/Teacher/Classes')) {
                // Add active class to the parent dropdown link (visual indicator only, don't open dropdown)
                const classesParent = document.querySelector('#classesDropdown');
                if (classesParent) {
                    classesParent.style.color = '#667eea';
                    classesParent.style.fontWeight = '500';
                }
            }
            else if (currentPath.includes('/Teacher/Home/MyStudents')) {
                document.querySelector('.topnav-link[href*="/MyStudents"]')?.classList.add('active');
            }
            else if (currentPath.includes('/Teacher/InteractiveLesson')) {
                // Add active class to the parent dropdown link (visual indicator only, don't open dropdown)
                const lessonsParent = document.querySelector('#lessonsDropdown');
                if (lessonsParent) {
                    lessonsParent.style.color = '#667eea';
                    lessonsParent.style.fontWeight = '500';
                }
            }
            else if (currentPath.includes('/Teacher/Exam')) {
                document.querySelector('.topnav-link[href*="/Exam"]')?.classList.add('active');
            }
            else if (currentPath.includes('/Teacher/Progress')) {
                document.querySelector('.topnav-link[href*="/Progress"]')?.classList.add('active');
            }
        }
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
