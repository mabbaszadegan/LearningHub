@using EduTrack.Application.Features.StudentProfiles
@using EduTrack.WebApp.Services
@inject IStudentProfileContext StudentProfileContext
@{
    var profileDtos = await StudentProfileContext.GetProfilesForCurrentUserAsync(false) ?? Array.Empty<StudentProfileDto>();
    var activeProfileId = await StudentProfileContext.GetActiveProfileIdAsync();
    var activeProfileName = await StudentProfileContext.GetActiveProfileNameAsync() ?? string.Empty;
    var userDisplayName = User?.Identity?.Name ?? "کاربر";
    var headerProfileName = !string.IsNullOrWhiteSpace(activeProfileName)
        ? activeProfileName
        : (!string.IsNullOrWhiteSpace(userDisplayName) ? userDisplayName : "پروفایل من");
    headerProfileName = headerProfileName.Trim();
    var headerInitial = !string.IsNullOrEmpty(headerProfileName) ? headerProfileName[0] : 'U';
    var hasProfiles = profileDtos.Count > 0;
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EduTrack</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="24x24" href="~/favicon-24x24.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="48x48" href="~/favicon-48x48.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EduTrack.WebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/persian-datepicker.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/toastr/toastr.min.css" />
    <link rel="stylesheet" href="~/css/areas/student/mobile-app.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/areas/student/student.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/areas/student/desktop-header.css" asp-append-version="true" />
    <link rel="manifest" href="~/manifest.webmanifest" />
    <meta name="theme-color" content="#6366f1" />
    <meta name="description" content="EduTrack - سیستم مدیریت یادگیری آنلاین" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="offline-indicator" id="offlineIndicator">
        <i class="fas fa-wifi"></i> شما در حالت آفلاین هستید
    </div>

    <!-- Desktop Header -->
    <header class="desktop-header">
        <div class="desktop-header-content">
            <!-- Logo Section -->
            <a href="/Student/Home" class="desktop-header-logo">
                <div class="desktop-logo-icon">
                    <i class="fas fa-graduation-cap"></i>
                </div>
                <div class="desktop-logo-text">
                    <h4>EduTrack</h4>
                    <span>پنل دانش‌آموز</span>
                </div>
            </a>

            <!-- Navigation Menu -->
            <nav class="desktop-nav-menu">
                <div class="desktop-nav-item">
                    <a href="/Student/Course/Catalog" class="desktop-nav-link" data-page="courses">
                        <div class="desktop-nav-icon">
                            <i class="fas fa-graduation-cap"></i>
                        </div>
                        <span class="desktop-nav-text">دوره‌ها</span>
                    </a>
                </div>

                <div class="desktop-nav-item">
                    <a href="/Student/Course" class="desktop-nav-link" data-page="my-courses">
                        <div class="desktop-nav-icon">
                            <i class="fas fa-book-open"></i>
                        </div>
                        <span class="desktop-nav-text">دوره‌های من</span>
                    </a>
                </div>

                <div class="desktop-nav-item">
                    <a href="/Progress" class="desktop-nav-link" data-page="progress">
                        <div class="desktop-nav-icon">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <span class="desktop-nav-text">پیشرفت</span>
                    </a>
                </div>
            </nav>

            <!-- Header Actions -->
            <div class="desktop-header-actions">
                <!-- Notifications -->
                <button class="desktop-header-btn" data-action="notifications" title="اعلانات">
                    <i class="fas fa-bell"></i>
                    <span class="desktop-notification-badge">3</span>
                </button>

                <!-- Messages -->
                <button class="desktop-header-btn" data-action="messages" title="پیام‌ها">
                    <i class="fas fa-envelope"></i>
                </button>

                <!-- Help -->
                <button class="desktop-header-btn" data-action="help" title="راهنما">
                    <i class="fas fa-question-circle"></i>
                </button>

                <!-- User Profile -->
                <div class="desktop-user-profile" data-component="header-profile" data-has-profiles="@hasProfiles.ToString().ToLowerInvariant()">
                    <button class="desktop-user-profile__button" type="button" data-action="toggle-profile-dropdown" aria-haspopup="true" aria-expanded="false">
                        <div class="desktop-user-avatar">@headerInitial</div>
                        <div class="desktop-user-details">
                            <span class="desktop-user-name">@headerProfileName</span>
                            <span class="desktop-user-role">پروفایل فعال</span>
                        </div>
                        <i class="fas fa-chevron-down desktop-user-caret" aria-hidden="true"></i>
                    </button>
                    <div class="desktop-user-dropdown" data-element="profile-dropdown" hidden>
                        <div class="desktop-user-dropdown__profiles">
                            @if (hasProfiles)
                            {
                                foreach (var profile in profileDtos)
                                {
                                    if (profile is null)
                                    {
                                        continue;
                                    }
                                    var isActive = profile.Id == activeProfileId;
                                    <button type="button"
                                            class="desktop-user-profile-option @(isActive ? "active" : null)"
                                            data-action="header-profile-set"
                                            data-profile-id="@profile.Id">
                                        <span class="desktop-user-profile-option__name">@profile.DisplayName</span>
                                        @if (isActive)
                                        {
                                            <i class="fas fa-check" aria-hidden="true"></i>
                                        }
                                    </button>
                                }
                            }
                            else
                            {
                                <div class="desktop-user-profile-empty">
                                    <i class="fas fa-user-plus" aria-hidden="true"></i>
                                    <p>برای شروع، یک پروفایل بسازید.</p>
                                </div>
                            }
                        </div>
                        <div class="desktop-user-dropdown__actions">
                            <button type="button" class="btn btn-primary btn-sm w-100" data-action="header-open-create">
                                <i class="fas fa-user-plus" aria-hidden="true"></i>
                                پروفایل جدید
                            </button>
                            <a href="/Student/Profile" class="btn btn-link btn-sm w-100">
                                مدیریت کامل پروفایل‌ها
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Fixed Header -->
    <header class="fixed-header">
        <div class="header-content">
            <div class="header-left" data-component="mobile-header-profile">
                <button class="header-btn active-profile-name" type="button" data-action="header-open-menu" title="پروفایل فعال">
                    <i class="fas fa-user-circle"></i>
                    <span>@headerProfileName</span>
                </button>
                
                <a href="/Student/Settings" class="header-btn" title="تنظیمات">
                    <i class="fas fa-cog"></i>
                </a>
                
                <button class="header-btn notifications-btn" title="اعلانات">
                    <i class="fas fa-bell"></i>
                    <span class="notification-badge">3</span>
                </button>
            </div>
            
        </div>
    </header>

    <div class="header-profile-overlay" data-overlay="header-profile" hidden aria-hidden="true">
        <div class="header-profile-card" role="dialog" aria-modal="true" aria-labelledby="headerProfileOverlayTitle">
            <button type="button" class="header-profile-card__close" data-action="header-close-overlay" aria-label="بستن">
                <i class="fas fa-times" aria-hidden="true"></i>
            </button>
            <div class="header-profile-card__icon">
                <i class="fas fa-user-circle" aria-hidden="true"></i>
            </div>
            <h4 id="headerProfileOverlayTitle">پروفایل‌های یادگیرنده</h4>
            <p class="header-profile-card__subtitle">پروفایل فعال خود را انتخاب کنید یا یک پروفایل جدید بسازید.</p>

            <div class="header-profile-card__list" data-element="header-profile-list">
                @if (hasProfiles)
                {
                    foreach (var profile in profileDtos)
                    {
                        if (profile is null)
                        {
                            continue;
                        }
                        var isActive = profile.Id == activeProfileId;
                        <button type="button"
                                class="header-profile-card__item @(isActive ? "active" : null)"
                                data-action="header-profile-set"
                                data-profile-id="@profile.Id">
                            <span>@profile.DisplayName</span>
                            @if (isActive)
                            {
                                <i class="fas fa-check" aria-hidden="true"></i>
                            }
                        </button>
                    }
                }
                else
                {
                    <div class="header-profile-card__empty">
                        <i class="fas fa-user-plus" aria-hidden="true"></i>
                        <p>هنوز پروفایلی ایجاد نشده است.</p>
                    </div>
                }
            </div>

            <form id="headerProfileCreateForm"
                  class="header-profile-card__form"
                  method="post"
                  action="@Url.Action("CreateStudentProfile", "Profile", new { area = "Student" })">
                @Html.AntiForgeryToken()
                <label for="headerProfileCreateName">نام پروفایل جدید</label>
                <div class="header-profile-card__form-row">
                    <input type="text"
                           id="headerProfileCreateName"
                           name="displayName"
                           placeholder="مثلاً زبان انگلیسی"
                           autocomplete="off"
                           maxlength="100"
                           required />
                    <button type="submit" class="btn btn-primary">
                        ثبت
                    </button>
                </div>
            </form>
        </div>
    </div>

    <form id="headerProfileSetForm"
          method="post"
          action="@Url.Action("SetActiveProfile", "Profile", new { area = "Student" })"
          hidden>
        @Html.AntiForgeryToken()
        <input type="hidden" name="profileId" value="" />
    </form>

    <!-- Main Content Area -->
    <main class="main-content">
        <partial name="_Toast" />
        @RenderBody()
    </main>

    <!-- Fixed Footer (Bottom Navigation) -->
    <footer class="fixed-footer">
        <div class="bottom-nav">
            <div class="nav-item" data-page="home">
                <div class="nav-icon">
                    <i class="fas fa-home"></i>
                </div>
            </div>
            
            <div class="nav-item" data-page="courses">
                <div class="nav-icon">
                    <i class="fas fa-graduation-cap"></i>
                </div>
            </div>
            
            <div class="nav-item" data-page="statistics">
                <div class="nav-icon">
                    <i class="fas fa-chart-bar"></i>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/fontawesome/js/all.min.js"></script>
    <script src="~/lib/toastr/toastr.min.js"></script>
    <script src="~/js/notifications.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/pwa.js" asp-append-version="true"></script>
    <script src="~/js/areas/student/bottom-navigation.js" asp-append-version="true"></script>
    <script src="~/js/areas/student/desktop-header.js" asp-append-version="true"></script>
    <script src="~/js/areas/student/student-profile-selector.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>