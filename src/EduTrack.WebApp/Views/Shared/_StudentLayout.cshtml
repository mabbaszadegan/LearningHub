<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - پنل دانش‌آموز EduTrack</title>
    
    <!-- Bootstrap RTL CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />
    
    <!-- FontAwesome -->
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    
    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <!-- Student Area CSS -->
    <link rel="stylesheet" href="~/css/areas/student/student.css" asp-append-version="true" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="student-body">
    <div class="student-wrapper">
        <!-- Student Sidebar -->
        <nav class="student-sidebar">
            <div class="student-sidebar-header">
                <h4 class="text-white text-center py-3">
                    <i class="fas fa-user-graduate me-2"></i>
                    پنل دانش‌آموز
                </h4>
            </div>
            
            <div class="student-sidebar-menu">
                <a asp-area="Student" asp-controller="Home" asp-action="Index" class="student-nav-link">
                    <i class="fas fa-tachometer-alt student-nav-icon"></i>
                    داشبورد
                </a>
                
                <a asp-area="Student" asp-controller="Classes" asp-action="Index" class="student-nav-link">
                    <i class="fas fa-chalkboard student-nav-icon"></i>
                    کلاس‌های من
                </a>
                
                <a asp-area="Student" asp-controller="Home" asp-action="MyProgress" class="student-nav-link">
                    <i class="fas fa-chart-line student-nav-icon"></i>
                    پیشرفت من
                </a>
                
                <a asp-area="Public" asp-controller="Catalog" asp-action="Index" class="student-nav-link">
                    <i class="fas fa-book student-nav-icon"></i>
                    کاتالوگ دوره‌ها
                </a>
                
                <a asp-area="Public" asp-controller="Catalog" asp-action="Classes" class="student-nav-link">
                    <i class="fas fa-search student-nav-icon"></i>
                    جستجوی کلاس‌ها
                </a>
            </div>
        </nav>
        
        <!-- Main Content -->
        <div class="student-main">
            <!-- Top Navigation -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-link student-sidebar-toggle d-lg-none">
                        <i class="fas fa-bars"></i>
                    </button>
                    
                    <div class="navbar-nav ms-auto">
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle me-1"></i>
                                @User.Identity?.Name
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-area="Public" asp-controller="Account" asp-action="Profile">پروفایل</a></li>
                                <li><a class="dropdown-item" asp-area="Student" asp-controller="Home" asp-action="MyProgress">پیشرفت من</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-area="Public" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        <button type="submit" class="dropdown-item">خروج</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
            
            <!-- Page Content -->
            <div class="student-content">
                <div class="container-fluid">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    
    <!-- Toast Container -->
    <div id="toast-container" class="toast-container position-fixed top-0 end-0 p-3"></div>
    
    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <!-- PDF.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.174/pdf.min.js"></script>
    
    <!-- Site JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Student Area JS -->
    <script src="~/js/areas/student/student.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
