<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EduTrack</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="24x24" href="~/favicon-24x24.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="48x48" href="~/favicon-48x48.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EduTrack.WebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/persian-datepicker.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/toastr/toastr.min.css" />
    <link rel="stylesheet" href="~/css/areas/student/mobile-app.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/areas/student/student.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/areas/student/desktop-header.css" asp-append-version="true" />
    <link rel="manifest" href="~/manifest.webmanifest" />
    <meta name="theme-color" content="#6366f1" />
    <meta name="description" content="EduTrack - سیستم مدیریت یادگیری آنلاین" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="offline-indicator" id="offlineIndicator">
        <i class="fas fa-wifi"></i> شما در حالت آفلاین هستید
    </div>

    <!-- Desktop Header -->
    <header class="desktop-header">
        <div class="desktop-header-content">
            <!-- Logo Section -->
            <a href="/Student/Home" class="desktop-header-logo">
                <div class="desktop-logo-icon">
                    <i class="fas fa-graduation-cap"></i>
                </div>
                <div class="desktop-logo-text">
                    <h4>EduTrack</h4>
                    <span>پنل دانش‌آموز</span>
                </div>
            </a>

            <!-- Navigation Menu -->
            <nav class="desktop-nav-menu">
                <div class="desktop-nav-item">
                    <a href="/Student/Course/Catalog" class="desktop-nav-link" data-page="courses">
                        <div class="desktop-nav-icon">
                            <i class="fas fa-graduation-cap"></i>
                        </div>
                        <span class="desktop-nav-text">دوره‌ها</span>
                    </a>
                </div>

                <div class="desktop-nav-item">
                    <a href="/Student/Course" class="desktop-nav-link" data-page="my-courses">
                        <div class="desktop-nav-icon">
                            <i class="fas fa-book-open"></i>
                        </div>
                        <span class="desktop-nav-text">دوره‌های من</span>
                    </a>
                </div>

                <div class="desktop-nav-item">
                    <a href="/Progress" class="desktop-nav-link" data-page="progress">
                        <div class="desktop-nav-icon">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <span class="desktop-nav-text">پیشرفت</span>
                    </a>
                </div>
            </nav>

            <!-- Header Actions -->
            <div class="desktop-header-actions">
                <!-- Notifications -->
                <button class="desktop-header-btn" data-action="notifications" title="اعلانات">
                    <i class="fas fa-bell"></i>
                    <span class="desktop-notification-badge">3</span>
                </button>

                <!-- Messages -->
                <button class="desktop-header-btn" data-action="messages" title="پیام‌ها">
                    <i class="fas fa-envelope"></i>
                </button>

                <!-- Help -->
                <button class="desktop-header-btn" data-action="help" title="راهنما">
                    <i class="fas fa-question-circle"></i>
                </button>

                <!-- User Profile -->
                <div class="desktop-user-profile">
                    <div class="desktop-user-avatar">
                        @(User.Identity?.Name?.Split(' ').FirstOrDefault()?.FirstOrDefault() ?? 'U')
                    </div>
                    <div class="desktop-user-dropdown">
                        <div class="desktop-user-info">
                            <div class="desktop-user-name">@(User.Identity?.Name ?? "کاربر")</div>
                            <div class="desktop-user-role">دانش‌آموز</div>
                        </div>
                        <a href="/Profile" class="desktop-user-menu-item">
                            <i class="fas fa-user"></i>
                            پروفایل من
                        </a>
                        <a href="/Settings" class="desktop-user-menu-item">
                            <i class="fas fa-cog"></i>
                            تنظیمات
                        </a>
                        <div class="desktop-user-menu-divider"></div>
                        <a href="#" class="desktop-user-menu-item" data-action="help">
                            <i class="fas fa-question-circle"></i>
                            راهنما
                        </a>
                        <a href="#" class="desktop-user-menu-item" data-action="logout">
                            <i class="fas fa-sign-out-alt"></i>
                            خروج
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Fixed Header -->
    <header class="fixed-header">
        <div class="header-content">
            <div class="header-left">
                <button class="header-btn notifications-btn" title="اعلانات">
                    <i class="fas fa-bell"></i>
                    <span class="notification-badge">3</span>
                </button>
                
                <button class="header-btn logout-btn" title="خروج" onclick="StudentAuth.logout()">
                    <i class="fas fa-sign-out-alt"></i>
                </button>
            </div>
            
            <div class="header-right">
                <span class="welcome-text">@(User.Identity?.Name?.Split(' ').FirstOrDefault() ?? "کاربر") جان، خوش آمدی</span>
            </div>
        </div>
    </header>

    <!-- Main Content Area -->
    <main class="main-content">
        <partial name="_Toast" />
        @RenderBody()
    </main>

    <!-- Fixed Footer (Bottom Navigation) -->
    <footer class="fixed-footer">
        <div class="bottom-nav">
            <div class="nav-item" data-page="courses">
                <div class="nav-icon">
                    <i class="fas fa-graduation-cap"></i>
                </div>
                <div class="nav-label">دوره‌ها</div>
            </div>
            
            <div class="nav-item" data-page="my-courses">
                <div class="nav-icon">
                    <i class="fas fa-book-open"></i>
                </div>
                <div class="nav-label">دوره‌های من</div>
            </div>
            
            <div class="nav-item" data-page="home">
                <div class="nav-icon">
                    <i class="fas fa-home"></i>
                </div>
                <div class="nav-label">خانه</div>
            </div>
            
            <div class="nav-item" data-page="progress">
                <div class="nav-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <div class="nav-label">پیشرفت</div>
            </div>
            
            <div class="nav-item" data-page="profile">
                <div class="nav-icon">
                    <i class="fas fa-user-circle"></i>
                </div>
                <div class="nav-label">پروفایل</div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/fontawesome/js/all.min.js"></script>
    <script src="~/lib/toastr/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/pwa.js" asp-append-version="true"></script>
    <script src="~/js/areas/student/bottom-navigation.js" asp-append-version="true"></script>
    <script src="~/js/areas/student/desktop-header.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>