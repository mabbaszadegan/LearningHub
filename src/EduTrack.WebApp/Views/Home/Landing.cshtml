@{
    ViewData["Title"] = "سیستم مدیریت یادگیری EduTrack";
    Layout = "_LandingLayout";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-background">
        <div class="hero-overlay"></div>
    </div>
    <div class="container">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="hero-title">
                        <span class="text-primary">EduTrack</span>
                        <br>سیستم مدیریت یادگیری هوشمند
                    </h1>
                    <p class="hero-description">
                        پلتفرم جامع آموزشی که تجربه یادگیری را برای معلمان و دانش‌آموزان متحول می‌کند.
                        با ابزارهای پیشرفته و رابط کاربری مدرن، مسیر یادگیری خود را بسازید.
                    </p>
                    <div class="hero-features">
                        <div class="feature-item">
                            <i class="fas fa-check-circle text-success"></i>
                            <span>مدیریت دوره‌های آموزشی</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check-circle text-success"></i>
                            <span>آزمون‌سازی و ارزیابی</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check-circle text-success"></i>
                            <span>پیگیری پیشرفت تحصیلی</span>
                        </div>
                    </div>
                    <div class="hero-actions">
                        <a asp-controller="Account" asp-action="Register" asp-route-role="Student" class="btn btn-primary btn-lg me-3">
                            <i class="fas fa-user-graduate me-2"></i>ثبت نام دانش‌آموز
                        </a>
                        <a asp-controller="Account" asp-action="Register" asp-route-role="Teacher" class="btn btn-outline-primary btn-lg">
                            <i class="fas fa-chalkboard-teacher me-2"></i>ثبت نام معلم
                        </a>
                    </div>
                    <div class="hero-login">
                        <p class="mb-0">
                            قبلاً ثبت نام کرده‌اید؟ 
                            <a asp-controller="Account" asp-action="Login" class="text-primary fw-bold">وارد شوید</a>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image">
                    <div class="hero-card">
                        <div class="hero-card-header">
                            <div class="hero-card-dots">
                                <span></span>
                                <span></span>
                                <span></span>
                            </div>
                        </div>
                        <div class="hero-card-content">
                            <div class="dashboard-preview">
                                <div class="preview-stats">
                                    <div class="stat-item">
                                        <div class="stat-icon primary">
                                            <i class="fas fa-book"></i>
                                        </div>
                                        <div class="stat-info">
                                            <div class="stat-number">25</div>
                                            <div class="stat-label">دوره</div>
                                        </div>
                                    </div>
                                    <div class="stat-item">
                                        <div class="stat-icon success">
                                            <i class="fas fa-users"></i>
                                        </div>
                                        <div class="stat-info">
                                            <div class="stat-number">150</div>
                                            <div class="stat-label">دانش‌آموز</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="preview-chart">
                                    <div class="chart-bars">
                                        <div class="bar" style="height: 60%"></div>
                                        <div class="bar" style="height: 80%"></div>
                                        <div class="bar" style="height: 45%"></div>
                                        <div class="bar" style="height: 90%"></div>
                                        <div class="bar" style="height: 70%"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center mb-5">
                <h2 class="section-title">ویژگی‌های کلیدی</h2>
                <p class="section-description">
                    EduTrack با ارائه ابزارهای پیشرفته، تجربه یادگیری را بهبود می‌بخشد
                </p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-lg-4 col-md-6">
                <div class="feature-card">
                    <div class="feature-icon primary">
                        <i class="fas fa-graduation-cap"></i>
                    </div>
                    <h4 class="feature-title">مدیریت دوره‌ها</h4>
                    <p class="feature-description">
                        ایجاد و مدیریت دوره‌های آموزشی با امکان تعریف ماژول‌ها، درس‌ها و منابع آموزشی
                    </p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="feature-card">
                    <div class="feature-icon success">
                        <i class="fas fa-clipboard-check"></i>
                    </div>
                    <h4 class="feature-title">آزمون‌سازی</h4>
                    <p class="feature-description">
                        طراحی آزمون‌های متنوع با انواع سوالات و سیستم نمره‌دهی خودکار
                    </p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="feature-card">
                    <div class="feature-icon warning">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <h4 class="feature-title">پیگیری پیشرفت</h4>
                    <p class="feature-description">
                        نظارت بر پیشرفت تحصیلی دانش‌آموزان با گزارش‌های تفصیلی و نمودارهای تحلیلی
                    </p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="feature-card">
                    <div class="feature-icon info">
                        <i class="fas fa-users"></i>
                    </div>
                    <h4 class="feature-title">مدیریت کلاس</h4>
                    <p class="feature-description">
                        ایجاد کلاس‌های مجازی و مدیریت دانش‌آموزان با امکان ارتباط مستقیم
                    </p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="feature-card">
                    <div class="feature-icon danger">
                        <i class="fas fa-mobile-alt"></i>
                    </div>
                    <h4 class="feature-title">دسترسی همه‌جا</h4>
                    <p class="feature-description">
                        رابط کاربری ریسپانسیو برای استفاده در تمام دستگاه‌ها و مرورگرها
                    </p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="feature-card">
                    <div class="feature-icon dark">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h4 class="feature-title">امنیت بالا</h4>
                    <p class="feature-description">
                        حفاظت از اطلاعات کاربران با استفاده از جدیدترین استانداردهای امنیتی
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="stats-section py-5 bg-light">
    <div class="container">
        <div class="row text-center">
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stat-counter">
                    <div class="stat-icon">
                        <i class="fas fa-book"></i>
                    </div>
                    <div class="stat-number" data-count="500">0</div>
                    <div class="stat-label">دوره آموزشی</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stat-counter">
                    <div class="stat-icon">
                        <i class="fas fa-user-graduate"></i>
                    </div>
                    <div class="stat-number" data-count="2500">0</div>
                    <div class="stat-label">دانش‌آموز</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stat-counter">
                    <div class="stat-icon">
                        <i class="fas fa-chalkboard-teacher"></i>
                    </div>
                    <div class="stat-number" data-count="150">0</div>
                    <div class="stat-label">معلم</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stat-counter">
                    <div class="stat-icon">
                        <i class="fas fa-trophy"></i>
                    </div>
                    <div class="stat-number" data-count="98">0</div>
                    <div class="stat-label">درصد رضایت</div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="cta-title">آماده شروع هستید؟</h2>
                <p class="cta-description">
                    همین امروز به جمع کاربران EduTrack بپیوندید و تجربه یادگیری نوینی را آغاز کنید
                </p>
                <div class="cta-actions">
                    <a asp-controller="Account" asp-action="Register" asp-route-role="Student" class="btn btn-primary btn-lg me-3">
                        <i class="fas fa-rocket me-2"></i>شروع رایگان
                    </a>
                    <a href="#features" class="btn btn-outline-primary btn-lg">
                        <i class="fas fa-info-circle me-2"></i>اطلاعات بیشتر
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

